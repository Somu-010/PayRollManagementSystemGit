@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PayRoll Management System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            background: #f8fafb;
        }

        /* Navigation */
        nav {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1rem 5%;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 15px rgba(52, 152, 219, 0.08);
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logo {
            color: #3498db;
            font-size: 1.4rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .nav-buttons {
            display: flex;
            gap: 1rem;
        }

        .btn-nav {
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .btn-login {
            color: #3498db;
            border: 2px solid #e8f4f8;
        }

            .btn-login:hover {
                background: #e8f4f8;
            }

        .btn-register {
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            color: white;
            border: none;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(33, 147, 176, 0.3);
            }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #e8f4f8 0%, #f0f8ff 100%);
            padding: 100px 5% 60px;
            text-align: center;
            min-height: 85vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-content {
            max-width: 700px;
        }

        .hero h1 {
            font-size: 2.8rem;
            margin-bottom: 1.2rem;
            color: #2c3e50;
            font-weight: 700;
        }

        .highlight {
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero p {
            font-size: 1.15rem;
            margin-bottom: 2rem;
            color: #5a6c7d;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-primary {
            padding: 1rem 2.2rem;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            color: white;
            border: none;
            text-decoration: none;
            transition: all 0.3s;
            box-shadow: 0 4px 20px rgba(33, 147, 176, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 25px rgba(33, 147, 176, 0.4);
            }

        /* Features Section */
        .features {
            padding: 60px 5%;
            background: white;
        }

        .section-title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 3rem;
            color: #2c3e50;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-card {
            background: #f8fafb;
            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            transition: all 0.3s;
            border: 2px solid transparent;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                border-color: #e8f4f8;
                background: white;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            }

        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .feature-card h3 {
            font-size: 1.2rem;
            margin-bottom: 0.8rem;
            color: #2c3e50;
        }

        .feature-card p {
            color: #5a6c7d;
            font-size: 0.95rem;
        }

        /* Footer */
        footer {
            background: #2c3e50;
            color: #bdc3c7;
            padding: 2rem 5%;
            text-align: center;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
            justify-content: center;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

            .footer-links a {
                color: #bdc3c7;
                text-decoration: none;
                font-size: 0.9rem;
            }

                .footer-links a:hover {
                    color: #6dd5ed;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero h1 {
                font-size: 2rem;
            }

            .hero p {
                font-size: 1rem;
            }

            .nav-buttons {
                gap: 0.5rem;
            }

            .btn-nav {
                padding: 0.5rem 1rem;
                font-size: 0.85rem;
            }

            .section-title {
                font-size: 1.6rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-container">
            <div class="logo">
                <div class="logo-icon">💼</div>
                <span>PayRoll Pro</span>
            </div>
            <div class="nav-buttons">
                <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="btn-nav btn-login">Login</a>
                <a href="@Url.Page("/Account/Register", new { area = "Identity" })" class="btn-nav btn-register">Sign Up</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Simplify Your <span class="highlight">Payroll Management</span></h1>
            <p>Manage employees, process salaries, and generate reports effortlessly. All in one powerful platform.</p>
            <div class="hero-buttons">
                <a href="@Url.Page("/Account/Register", new { area = "Identity" })" class="btn-primary">Get Started Free →</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <h2 class="section-title">Key Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">👥</div>
                <h3>Employee Management</h3>
                <p>Centralize employee data and departments</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">💰</div>
                <h3>Automated Payroll</h3>
                <p>Calculate salaries and taxes automatically</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📊</div>
                <h3>Reports & Analytics</h3>
                <p>Generate detailed payroll reports</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📅</div>
                <h3>Attendance Tracking</h3>
                <p>Track attendance and leave management</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔒</div>
                <h3>Secure & Compliant</h3>
                <p>Bank-level security and data protection</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Lightning Fast</h3>
                <p>Process payroll in seconds, not hours</p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-links">
            <a href="#">About</a>
            <a href="#">Features</a>
            <a href="#">Privacy</a>
            <a href="#">Terms</a>
            <a href="#">Contact</a>
        </div>
        <p>&copy; 2025 PayRoll Pro. All rights reserved.</p>
    </footer>
</body>
</html>