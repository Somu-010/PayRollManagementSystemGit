@model PayRollManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Add New Employee";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .form-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e8f4f8;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 0;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-group label .required {
                color: #ef4444;
            }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .readonly-field {
        background: #f8fafb;
        cursor: not-allowed;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #e8f4f8;
    }

    .btn-submit {
        padding: 12px 30px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

    .btn-cancel {
        padding: 12px 30px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.2);
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            color: #ef4444;
            font-size: 14px;
            margin-bottom: 5px;
        }
</style>

<div class="page-header">
    <h1 class="page-title">➕ Add New Employee</h1>
    <a asp-action="Index" class="btn-back">← Back to List</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- Basic Information -->
        <h3 class="form-section-title">📋 Basic Information</h3>
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="EmployeeCode">Employee ID <span class="required">*</span></label>
                <input asp-for="EmployeeCode" class="form-control readonly-field" value="@ViewBag.GeneratedEmployeeCode" readonly />
                <span asp-validation-for="EmployeeCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name">Full Name <span class="required">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email Address <span class="required">*</span></label>
                <input asp-for="Email" class="form-control" type="email" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone Number <span class="required">*</span></label>
                <input asp-for="Phone" class="form-control" placeholder="+1234567890" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <!-- Employment Details -->
        <h3 class="form-section-title">💼 Employment Details</h3>
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Department">Department <span class="required">*</span></label>
                <input asp-for="Department" class="form-control" placeholder="e.g., IT, HR, Finance" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Designation">Designation <span class="required">*</span></label>
                <input asp-for="Designation" class="form-control" placeholder="e.g., Software Engineer, Manager" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BasicSalary">Basic Salary <span class="required">*</span></label>
                <input asp-for="BasicSalary" class="form-control" type="number" step="0.01" placeholder="0.00" />
                <span asp-validation-for="BasicSalary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JoiningDate">Joining Date <span class="required">*</span></label>
                <input asp-for="JoiningDate" class="form-control" type="date" />
                <span asp-validation-for="JoiningDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">Employment Status <span class="required">*</span></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.EmploymentStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <!-- Address Information (Optional) -->
        <h3 class="form-section-title">🏠 Address Information (Optional)</h3>
        <div class="form-grid">
            <div class="form-group" style="grid-column: 1 / -1;">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Street address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" placeholder="City name" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PostalCode">Postal Code</label>
                <input asp-for="PostalCode" class="form-control" placeholder="Postal/ZIP code" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn-cancel">Cancel</a>
            <button type="submit" class="btn-submit">✓ Create Employee</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}