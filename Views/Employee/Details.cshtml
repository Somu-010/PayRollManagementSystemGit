@model PayRollManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .btn-edit {
        padding: 10px 20px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
            color: white;
        }

    .details-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .details-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e8f4f8;
    }

    .employee-large-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 32px;
        box-shadow: 0 4px 15px rgba(33, 147, 176, 0.3);
    }

    .card-header-info h2 {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .card-header-info p {
        color: #5a6c7d;
        margin: 0;
        font-size: 14px;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
        margin-left: 10px;
    }

    .badge-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-inactive {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-resigned {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        padding: 15px;
        background: #f8fafb;
        border-radius: 10px;
        border-left: 4px solid #6dd5ed;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: #5a6c7d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .detail-icon {
        margin-right: 8px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .stat-card {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        border-radius: 12px;
        padding: 20px;
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
    }

    .address-box {
        background: #f8fafb;
        border-radius: 10px;
        padding: 20px;
        color: #5a6c7d;
        line-height: 1.6;
        margin-bottom: 25px;
    }
</style>

<div class="page-header">
    <h1 class="page-title">👤 Employee Details</h1>
    <div class="header-actions">
        <a asp-action="Index" class="btn-back">← Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn-edit">✏️ Edit</a>
    </div>
</div>

<div class="details-container">
    <!-- Main Details Card -->
    <div class="details-card">
        <div class="card-header">
            <div class="employee-large-avatar">@Model.Name.Substring(0, Math.Min(2, Model.Name.Length)).ToUpper()</div>
            <div class="card-header-info">
                <h2>
                    @Model.Name
                    @if (Model.Status == PayRollManagementSystem.Models.EmploymentStatus.Active)
                    {
                        <span class="badge badge-active">Active</span>
                    }
                    else if (Model.Status == PayRollManagementSystem.Models.EmploymentStatus.Inactive)
                    {
                        <span class="badge badge-inactive">Inactive</span>
                    }
                    else
                    {
                        <span class="badge badge-resigned">Resigned</span>
                    }
                </h2>
                <p>@Model.EmployeeCode • @Model.Designation</p>
            </div>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">💰 Basic Salary</div>
                <div class="stat-value">$@Model.BasicSalary.ToString("N2")</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">📅 Years of Service</div>
                <div class="stat-value">@((DateTime.Now - Model.JoiningDate).Days / 365)</div>
            </div>
        </div>

        <!-- Personal Information -->
        <h3 class="section-title" style="margin-top: 30px;">📋 Personal Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Employee ID</div>
                <div class="detail-value">
                    <span class="detail-icon">🔖</span>@Model.EmployeeCode
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Full Name</div>
                <div class="detail-value">
                    <span class="detail-icon">👤</span>@Model.Name
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Email Address</div>
                <div class="detail-value">
                    <span class="detail-icon">📧</span>@Model.Email
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Phone Number</div>
                <div class="detail-value">
                    <span class="detail-icon">📱</span>@Model.Phone
                </div>
            </div>
        </div>

        <!-- Employment Information -->
        <h3 class="section-title">💼 Employment Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Department</div>
                <div class="detail-value">
                    <span class="detail-icon">🏢</span>@(Model.DepartmentNavigation?.Name ?? Model.Department)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Designation</div>
                <div class="detail-value">
                    <span class="detail-icon">💼</span>@Model.Designation
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Shift</div>
                <div class="detail-value">
                    <span class="detail-icon">⏰</span>@(Model.ShiftNavigation?.ShiftName ?? "Not Assigned")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Employment Status</div>
                <div class="detail-value">
                    <span class="detail-icon">✅</span>@Model.Status
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Joining Date</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.JoiningDate.ToString("MMMM dd, yyyy")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Basic Salary</div>
                <div class="detail-value">
                    <span class="detail-icon">💵</span>$@Model.BasicSalary.ToString("N2")
                </div>
            </div>
        </div>

        <!-- Address Information -->
        @if (!string.IsNullOrEmpty(Model.Address) || !string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.PostalCode))
        {
            <h3 class="section-title">🏠 Address Information</h3>
            <div class="address-box">
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div style="margin-bottom: 8px;">
                        <strong>Address:</strong> @Model.Address
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.City))
                {
                    <div style="margin-bottom: 8px;">
                        <strong>City:</strong> @Model.City
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.PostalCode))
                {
                    <div>
                        <strong>Postal Code:</strong> @Model.PostalCode
                    </div>
                }
            </div>
        }

        <!-- Timestamps -->
        <h3 class="section-title">🕒 Record Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Created On</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.CreatedAt.ToString("MMMM dd, yyyy")
                </div>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Last Updated</div>
                    <div class="detail-value">
                        <span class="detail-icon">🔄</span>@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            }
        </div>
    </div>
</div>
