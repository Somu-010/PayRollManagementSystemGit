@model PayRollManagementSystem.Models.ComponentTemplate

@{
    ViewData["Title"] = "Create Component Template";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .form-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e8f4f8;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 0;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-group label .required {
                color: #ef4444;
            }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .info-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2193b0;
        display: flex;
        align-items: start;
        gap: 12px;
    }

    .components-section {
        margin-top: 30px;
    }

    .components-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .select-actions {
        display: flex;
        gap: 10px;
    }

    .btn-select {
        padding: 8px 16px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-select:hover {
            background: #d1e9f0;
        }

    .components-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 15px;
        margin-bottom: 25px;
    }

    .component-item {
        border: 2px solid #e8f4f8;
        border-radius: 10px;
        padding: 15px;
        transition: all 0.3s;
        cursor: pointer;
    }

        .component-item:hover {
            border-color: #6dd5ed;
            background: rgba(109, 213, 237, 0.05);
        }

        .component-item.selected {
            border-color: #2193b0;
            background: rgba(109, 213, 237, 0.1);
        }

    .component-checkbox {
        display: flex;
        gap: 12px;
    }

        .component-checkbox input[type="checkbox"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: #2193b0;
            flex-shrink: 0;
            margin-top: 2px;
        }

    .component-details {
        flex: 1;
    }

    .component-name {
        font-weight: 600;
        color: #2c3e50;
        font-size: 15px;
        margin-bottom: 4px;
    }

    .component-info {
        font-size: 12px;
        color: #5a6c7d;
        display: flex;
        gap: 10px;
        margin-bottom: 8px;
    }

    .component-type {
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
    }

    .type-allowance {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .type-deduction {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .custom-value-input {
        margin-top: 10px;
        display: none;
    }

        .custom-value-input.show {
            display: block;
        }

        .custom-value-input label {
            font-size: 12px;
            margin-bottom: 5px;
        }

        .custom-value-input input {
            font-size: 13px;
            padding: 8px 10px;
        }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #e8f4f8;
    }

    .btn-submit {
        padding: 12px 30px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }

    .btn-cancel {
        padding: 12px 30px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.2);
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            color: #ef4444;
            font-size: 14px;
            margin-bottom: 5px;
        }

    .selected-count {
        font-size: 14px;
        color: #2193b0;
        font-weight: 600;
        padding: 10px 15px;
        background: rgba(109, 213, 237, 0.1);
        border-radius: 8px;
    }
</style>

<div class="page-header">
    <h1 class="page-title">➕ Create Component Template</h1>
    <a asp-action="Index" class="btn-back">← Back to List</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post" id="templateForm">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- Template Information -->
        <h3 class="form-section-title">📋 Template Information</h3>

        <div class="info-box">
            <span style="font-size: 20px;">💡</span>
            <div>
                <strong>Tip:</strong> Create reusable templates by combining multiple allowances and deductions. Templates can be quickly applied to employees based on industry type and level.
            </div>
        </div>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Name">Template Name <span class="required">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., IT Entry Level Package" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IndustryType">Industry Type <span class="required">*</span></label>
                <select asp-for="IndustryType" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.IndustryType>()" required></select>
                <span asp-validation-for="IndustryType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeLevel">Employee Level <span class="required">*</span></label>
                <select asp-for="EmployeeLevel" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.EmployeeLevel>()" required></select>
                <span asp-validation-for="EmployeeLevel" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter template description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Components Selection -->
        <div class="components-section">
            <div class="components-header">
                <h3 class="form-section-title" style="border: none; margin: 0; padding: 0;">💰 Select Components</h3>
                <div class="select-actions">
                    <button type="button" class="btn-select" onclick="selectAll()">✓ Select All</button>
                    <button type="button" class="btn-select" onclick="deselectAll()">✕ Deselect All</button>
                </div>
            </div>

            <div style="margin-bottom: 15px;">
                <span class="selected-count" id="selectedCount">0 components selected</span>
            </div>

            <div class="components-grid" id="componentsGrid">
                @if (ViewBag.AllComponents != null)
                {
                    int index = 0;
                    @foreach (var component in ViewBag.AllComponents)
                    {
                        <div class="component-item" onclick="toggleComponent(this, event)">
                            <div class="component-checkbox">
                                <input type="checkbox"
                                       name="selectedComponents"
                                       value="@component.AllowanceDeductionId"
                                       id="component_@component.AllowanceDeductionId"
                                       onchange="updateSelectedCount()"
                                       onclick="event.stopPropagation()" />

                                <div class="component-details">
                                    <div class="component-name">@component.Name</div>
                                    <div class="component-info">
                                        <span class="component-type @(component.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "type-allowance" : "type-deduction")">
                                            @component.TypeDisplay
                                        </span>
                                        <span>@component.Code</span>
                                        <span>@component.CalculationDisplay</span>
                                    </div>

                                    <div class="custom-value-input" id="custom_@component.AllowanceDeductionId">
                                        <label>Custom Value (optional)</label>
                                        <input type="number"
                                               name="customValues"
                                               class="form-control"
                                               step="0.01"
                                               placeholder="Leave empty to use default: @component.Value"
                                               onclick="event.stopPropagation()" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        index++;
                    }
                }
                else
                {
                    <p style="grid-column: 1 / -1; text-align: center; color: #5a6c7d;">
                        No components available. Please create components first.
                    </p>
                }
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn-cancel">Cancel</a>
            <button type="submit" class="btn-submit" id="submitBtn" disabled>✓ Create Template</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function toggleComponent(card, event) {
            // Don't toggle if clicking on input
            if (event.target.tagName === 'INPUT') return;

            const checkbox = card.querySelector('input[type="checkbox"]');
            checkbox.checked = !checkbox.checked;
            updateCard(card, checkbox.checked);
            updateSelectedCount();
        }

        function updateCard(card, isSelected) {
            const customValueDiv = card.querySelector('.custom-value-input');

            if (isSelected) {
                card.classList.add('selected');
                customValueDiv.classList.add('show');
            } else {
                card.classList.remove('selected');
                customValueDiv.classList.remove('show');
                // Clear custom value when deselected
                const input = customValueDiv.querySelector('input');
                if (input) input.value = '';
            }
        }

        function selectAll() {
            const checkboxes = document.querySelectorAll('input[name="selectedComponents"]');
            const cards = document.querySelectorAll('.component-item');

            checkboxes.forEach((checkbox, index) => {
                checkbox.checked = true;
                updateCard(cards[index], true);
            });

            updateSelectedCount();
        }

        function deselectAll() {
            const checkboxes = document.querySelectorAll('input[name="selectedComponents"]');
            const cards = document.querySelectorAll('.component-item');

            checkboxes.forEach((checkbox, index) => {
                checkbox.checked = false;
                updateCard(cards[index], false);
            });

            updateSelectedCount();
        }

        function updateSelectedCount() {
            const checkboxes = document.querySelectorAll('input[name="selectedComponents"]:checked');
            const count = checkboxes.length;
            const countElement = document.getElementById('selectedCount');
            const submitBtn = document.getElementById('submitBtn');

            countElement.textContent = `${count} component${count !== 1 ? 's' : ''} selected`;

            if (count > 0) {
                submitBtn.disabled = false;
            } else {
                submitBtn.disabled = true;
            }
        }

        // Prevent card click when clicking checkbox or input directly
        document.querySelectorAll('input[name="selectedComponents"]').forEach(checkbox => {
            checkbox.addEventListener('click', (e) => {
                e.stopPropagation();
                const card = checkbox.closest('.component-item');
                updateCard(card, checkbox.checked);
                updateSelectedCount();
            });
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateSelectedCount();
        });
    </script>
}