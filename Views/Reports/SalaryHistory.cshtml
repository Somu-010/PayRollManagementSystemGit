@model IEnumerable<PayRollManagementSystem.Models.Payroll>

@{
    ViewData["Title"] = "Salary History Report";
    var selectedEmployee = ViewData["SelectedEmployee"] as int?;
    var selectedYear = (int)ViewData["SelectedYear"];
    var employee = ViewBag.Employee as PayRollManagementSystem.Models.Employee;
}

<style>
    .report-container {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e8f4f8;
    }

    .report-title-section h1 {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .report-subtitle {
        color: #5a6c7d;
        font-size: 14px;
    }

    .report-actions {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-back {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-print {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
    }

    .filters-section {
        background: #f8fafb;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
    }

    .filters-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        gap: 15px;
    }

    .filter-group label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .filter-group select {
        width: 100%;
        padding: 10px;
        border: 1px solid #dfe6e9;
        border-radius: 8px;
        font-size: 14px;
    }

    .employee-details-card {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        padding: 25px;
        border-radius: 12px;
        color: white;
        margin-bottom: 30px;
    }

    .employee-details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
    }

    .detail-label {
        font-size: 12px;
        opacity: 0.9;
        margin-bottom: 5px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 600;
    }

    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        padding: 20px;
        border-radius: 12px;
        color: white;
        text-align: center;
    }

    .stat-card.months {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .stat-card.earnings {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .stat-card.deductions {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .stat-card.net {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
    }

    .stat-card.average {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .stat-label {
        font-size: 13px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
    }

    .history-table {
        width: 100%;
        border-collapse: collapse;
    }

    .history-table thead {
        background: #f8fafb;
    }

    .history-table th {
        padding: 15px;
        text-align: left;
        font-size: 13px;
        font-weight: 600;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #e8f4f8;
    }

    .history-table th.text-right {
        text-align: right;
    }

    .history-table td {
        padding: 15px;
        border-bottom: 1px solid #f1f3f5;
        font-size: 14px;
        color: #5a6c7d;
    }

    .history-table td.text-right {
        text-align: right;
    }

    .history-table tbody tr:hover {
        background: #f8fafb;
    }

    .history-table tfoot {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        font-weight: 700;
    }

    .history-table tfoot td {
        border: none;
        padding: 20px 15px;
        font-size: 16px;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-approved {
        background: #d1f4e0;
        color: #10b981;
    }

    .status-paid {
        background: #dbeafe;
        color: #3b82f6;
    }

    .status-pending {
        background: #fef3c7;
        color: #f59e0b;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #95a5a6;
    }

    @@media print {
        body {
            font-family: 'Times New Roman', serif !important;
            color: #000 !important;
            background: white !important;
        }

        /* Hide all interactive elements */
        .report-actions,
        .filters-section,
        .btn-action,
        .stats-cards,
        .dashboard-sidebar,
        .dashboard-header,
        .dashboard-footer,
        .sidebar-overlay {
            display: none !important;
        }

        .dashboard-main {
            margin-left: 0 !important;
        }

        .dashboard-content {
            padding: 0 !important;
        }

        .report-container {
            box-shadow: none !important;
            border-radius: 0 !important;
            padding: 20px !important;
        }

        .report-header {
            text-align: center !important;
            border-bottom: 3px solid #000 !important;
            margin-bottom: 20px !important;
        }

        .report-title-section h1 {
            font-size: 22px !important;
            text-transform: uppercase !important;
            letter-spacing: 1px !important;
            margin-bottom: 10px !important;
        }

        .report-subtitle {
            font-size: 14px !important;
            color: #333 !important;
        }

        /* Show employee details in print */
        .employee-details-card {
            display: block !important;
            background: white !important;
            color: #000 !important;
            border: 2px solid #000 !important;
            padding: 15px !important;
            margin-bottom: 20px !important;
        }

        .employee-details-grid {
            display: grid !important;
        }

        .detail-item {
            color: #000 !important;
        }

        .detail-label {
            color: #000 !important;
            opacity: 1 !important;
        }

        .detail-value {
            color: #000 !important;
        }

        /* Table styling for print */
        .history-table,
        .history-table th,
        .history-table td {
            border: 1px solid #000 !important;
            font-family: 'Times New Roman', serif !important;
        }

        .history-table thead {
            background: #f0f0f0 !important;
        }

        .history-table th {
            font-size: 11px !important;
            padding: 8px 5px !important;
        }

        .history-table td {
            font-size: 11px !important;
            padding: 8px 5px !important;
            color: #000 !important;
        }

        .history-table tfoot {
            background: #f0f0f0 !important;
            color: #000 !important;
            border-top: 2px solid #000 !important;
        }

        .history-table tfoot td {
            font-size: 12px !important;
            font-weight: bold !important;
        }

        .history-table tbody tr:hover {
            background: transparent !important;
        }

        @@page {
            margin: 15mm;
            size: A4;
        }

        .history-table {
            page-break-inside: avoid;
        }

        main, .container {
            margin: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }

        /* Badges */
        .status-badge {
            border: 1px solid #000 !important;
            color: #000 !important;
            background: white !important;
            padding: 2px 6px !important;
            font-size: 10px !important;
        }
    }
</style>

<div class="report-container">
    <div class="report-header">
        <div class="report-title-section">
            <h1>?? Salary History Report</h1>
            <p class="report-subtitle">Individual employee salary history for @selectedYear</p>
        </div>
        <div class="report-actions">
            <button onclick="window.print()" class="btn-action btn-print">
                <i class="fas fa-print"></i> Print
            </button>
            <a asp-action="Index" class="btn-action btn-back">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <form method="get" asp-action="SalaryHistory">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Select Employee <span style="color: #ef4444;">*</span></label>
                    <select name="employeeId" class="form-control" required>
                        <option value="">-- Select Employee --</option>
                        @foreach (var emp in ViewBag.Employees as List<PayRollManagementSystem.Models.Employee>)
                        {
                            <option value="@emp.EmployeeId" selected="@(emp.EmployeeId == selectedEmployee)">
                                @emp.Name (@emp.EmployeeCode)
                            </option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Year</label>
                    <select name="year" class="form-control">
                        @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                        {
                            <option value="@i" selected="@(i == selectedYear)">@i</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn-action" style="width: 100%; background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%); color: white;">
                        <i class="fas fa-search"></i> View Report
                    </button>
                </div>
            </div>
        </form>
    </div>

    @if (employee != null)
    {
        <!-- Employee Details -->
        <div class="employee-details-card">
            <h3 style="margin-bottom: 20px; font-size: 20px;">Employee Information</h3>
            <div class="employee-details-grid">
                <div class="detail-item">
                    <div class="detail-label">Employee Name</div>
                    <div class="detail-value">@employee.Name</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Employee Code</div>
                    <div class="detail-value">@employee.EmployeeCode</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Department</div>
                    <div class="detail-value">@(employee.DepartmentNavigation?.Name ?? "N/A")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Designation</div>
                    <div class="detail-value">@(employee.DesignationNavigation?.Title ?? "N/A")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Joining Date</div>
                    <div class="detail-value">@employee.JoiningDate.ToString("dd-MMM-yyyy")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Current Basic Salary</div>
                    <div class="detail-value">@employee.BasicSalary.ToString("C0")</div>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Summary Statistics -->
            <div class="stats-cards">
                <div class="stat-card months">
                    <div class="stat-label">Total Months</div>
                    <div class="stat-value">@ViewBag.TotalMonths</div>
                </div>
                <div class="stat-card earnings">
                    <div class="stat-label">Total Earnings</div>
                    <div class="stat-value">@ViewBag.TotalEarnings.ToString("C0")</div>
                </div>
                <div class="stat-card deductions">
                    <div class="stat-label">Total Deductions</div>
                    <div class="stat-value">@ViewBag.TotalDeductions.ToString("C0")</div>
                </div>
                <div class="stat-card net">
                    <div class="stat-label">Total Net Pay</div>
                    <div class="stat-value">@ViewBag.TotalNetPay.ToString("C0")</div>
                </div>
                <div class="stat-card average">
                    <div class="stat-label">Average Net Pay</div>
                    <div class="stat-value">@ViewBag.AverageNetPay.ToString("C0")</div>
                </div>
            </div>

            <!-- Salary History Table -->
            <table class="history-table">
                <thead>
                    <tr>
                        <th>Pay Period</th>
                        <th class="text-right">Basic Salary</th>
                        <th class="text-right">Allowances</th>
                        <th class="text-right">Gross Salary</th>
                        <th class="text-right">Deductions</th>
                        <th class="text-right">Net Salary</th>
                        <th>Payment Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payroll in Model)
                    {
                        <tr>
                            <td><strong>@payroll.PayPeriod</strong></td>
                            <td class="text-right">@payroll.BasicSalary.ToString("C2")</td>
                            <td class="text-right" style="color: #10b981; font-weight: 600;">@payroll.TotalAllowances.ToString("C2")</td>
                            <td class="text-right"><strong>@payroll.GrossSalary.ToString("C2")</strong></td>
                            <td class="text-right" style="color: #ef4444; font-weight: 600;">@payroll.TotalDeductions.ToString("C2")</td>
                            <td class="text-right"><strong style="color: #2193b0; font-size: 16px;">@payroll.NetSalary.ToString("C2")</strong></td>
                            <td>@payroll.PaymentDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                @{
                                    var statusClass = payroll.Status switch
                                    {
                                        PayRollManagementSystem.Models.PayrollStatus.Approved => "status-approved",
                                        PayRollManagementSystem.Models.PayrollStatus.Paid => "status-paid",
                                        PayRollManagementSystem.Models.PayrollStatus.Pending => "status-pending",
                                        _ => "status-pending"
                                    };
                                }
                                <span class="status-badge @statusClass">@payroll.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td><strong>TOTALS (@ViewBag.TotalMonths Months)</strong></td>
                        <td class="text-right"><strong>-</strong></td>
                        <td class="text-right"><strong>@ViewBag.TotalEarnings.ToString("C2")</strong></td>
                        <td class="text-right"><strong>-</strong></td>
                        <td class="text-right"><strong>@ViewBag.TotalDeductions.ToString("C2")</strong></td>
                        <td class="text-right"><strong>@ViewBag.TotalNetPay.ToString("C2")</strong></td>
                        <td colspan="2"></td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-file-invoice-dollar" style="font-size: 48px; margin-bottom: 15px; display: block; opacity: 0.3;"></i>
                <h3>No salary history found</h3>
                <p>No payroll records exist for @employee.Name in @selectedYear</p>
            </div>
        }
    }
    else if (selectedEmployee.HasValue)
    {
        <div class="empty-state">
            <i class="fas fa-user-slash" style="font-size: 48px; margin-bottom: 15px; display: block; opacity: 0.3;"></i>
            <h3>Employee not found</h3>
            <p>The selected employee could not be found</p>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-search" style="font-size: 48px; margin-bottom: 15px; display: block; opacity: 0.3;"></i>
            <h3>Select an employee to view salary history</h3>
            <p>Choose an employee from the dropdown above to generate the report</p>
        </div>
    }
</div>
