@model IEnumerable<PayRollManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List Report";
    var currentDepartment = ViewData["CurrentDepartment"]?.ToString();
    var currentDesignation = ViewData["CurrentDesignation"]?.ToString();
    var currentStatus = ViewData["CurrentStatus"]?.ToString();
    var currentFilter = ViewData["CurrentFilter"]?.ToString();
}

<style>
    .report-container {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e8f4f8;
    }

    .report-title-section h1 {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .report-subtitle {
        color: #5a6c7d;
        font-size: 14px;
    }

    .report-actions {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-back {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-back:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .btn-print {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
    }

    .btn-print:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .btn-export {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

    .btn-export:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .filters-section {
        background: #f8fafb;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
    }

    .filters-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
    }

    .filter-group label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .filter-group select,
    .filter-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #dfe6e9;
        border-radius: 8px;
        font-size: 14px;
    }

    .filter-actions {
        display: flex;
        gap: 10px;
    }

    .btn-filter {
        padding: 10px 20px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
    }

    .btn-clear {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
    }

    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .stat-card {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        padding: 20px;
        border-radius: 12px;
        color: white;
    }

    .stat-card.alt1 {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stat-card.alt2 {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .stat-card.alt3 {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .stat-label {
        font-size: 13px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
    }

    .employees-table {
        width: 100%;
        border-collapse: collapse;
    }

    .employees-table thead {
        background: #f8fafb;
    }

    .employees-table th {
        padding: 15px;
        text-align: left;
        font-size: 13px;
        font-weight: 600;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #e8f4f8;
    }

    .employees-table td {
        padding: 15px;
        border-bottom: 1px solid #f1f3f5;
        font-size: 14px;
        color: #5a6c7d;
    }

    .employees-table tbody tr:hover {
        background: #f8fafb;
    }

    .employee-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .employee-code {
        font-size: 12px;
        color: #95a5a6;
    }

    .badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-active {
        background: #d1f4e0;
        color: #10b981;
    }

    .badge-inactive {
        background: #fee2e2;
        color: #ef4444;
    }

    .badge-resigned {
        background: #fef3c7;
        color: #f59e0b;
    }

    .no-records {
        text-align: center;
        padding: 60px 20px;
        color: #95a5a6;
    }

    @@media print {
        body {
            font-family: 'Times New Roman', serif !important;
            color: #000 !important;
            background: white !important;
        }

        /* Hide all interactive elements */
        .report-actions,
        .filters-section,
        .btn-action,
        .btn-back,
        .btn-print,
        .btn-filter,
        .btn-clear,
        .stats-cards,
        .dashboard-sidebar,
        .dashboard-header,
        .dashboard-footer,
        .sidebar-overlay {
            display: none !important;
        }

        .dashboard-main {
            margin-left: 0 !important;
        }

        .dashboard-content {
            padding: 0 !important;
        }

        .report-container {
            box-shadow: none !important;
            border-radius: 0 !important;
            padding: 20px !important;
            max-width: 100% !important;
        }

        .report-header {
            text-align: center !important;
            border-bottom: 3px solid #000 !important;
            margin-bottom: 20px !important;
        }

        .report-title-section h1 {
            font-size: 22px !important;
            text-transform: uppercase !important;
            letter-spacing: 1px !important;
            margin-bottom: 10px !important;
        }

        .report-subtitle {
            font-size: 14px !important;
            color: #333 !important;
        }

        /* Table styling for print */
        .employees-table,
        .employees-table th,
        .employees-table td {
            border: 1px solid #000 !important;
            font-family: 'Times New Roman', serif !important;
        }

        .employees-table thead {
            background: #f0f0f0 !important;
        }

        .employees-table th {
            font-size: 11px !important;
            padding: 8px 5px !important;
        }

        .employees-table td {
            font-size: 11px !important;
            padding: 8px 5px !important;
            color: #000 !important;
        }

        /* Remove hover effects */
        .employees-table tbody tr:hover {
            background: transparent !important;
        }

        /* Page break settings */
        @@page {
            margin: 15mm;
            size: A4 landscape;
        }

        .employees-table {
            page-break-inside: avoid;
        }

        main, .container {
            margin: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }

        /* Badges */
        .badge {
            border: 1px solid #000 !important;
            color: #000 !important;
            background: white !important;
            padding: 2px 6px !important;
            font-size: 10px !important;
        }
    }
</style>

<div class="report-container">
    <div class="report-header">
        <div class="report-title-section">
            <h1>?? Employee List Report</h1>
            <p class="report-subtitle">Generated on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
        </div>
        <div class="report-actions">
            <button onclick="window.print()" class="btn-action btn-print">
                <i class="fas fa-print"></i> Print
            </button>
            <a asp-action="Index" class="btn-action btn-back">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <form method="get" asp-action="EmployeeList">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Department</label>
                    <select name="department" class="form-control">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments as List<string>)
                        {
                            <option value="@dept" selected="@(dept == currentDepartment)">@dept</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Designation</label>
                    <select name="designation" class="form-control">
                        <option value="">All Designations</option>
                        @foreach (var desig in ViewBag.Designations as List<string>)
                        {
                            <option value="@desig" selected="@(desig == currentDesignation)">@desig</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Employment Status</label>
                    <select name="status" class="form-control">
                        <option value="">All Status</option>
                        <option value="Active" selected="@(currentStatus == "Active")">Active</option>
                        <option value="Inactive" selected="@(currentStatus == "Inactive")">Inactive</option>
                        <option value="Resigned" selected="@(currentStatus == "Resigned")">Resigned</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Search</label>
                    <input type="text" name="searchString" value="@currentFilter" placeholder="Name, Code, Email..." class="form-control" />
                </div>
            </div>
            <div class="filter-actions">
                <button type="submit" class="btn-filter">
                    <i class="fas fa-filter"></i> Apply Filters
                </button>
                <a asp-action="EmployeeList" class="btn-clear">
                    <i class="fas fa-times"></i> Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Statistics -->
    <div class="stats-cards">
        <div class="stat-card">
            <div class="stat-label">Total Employees</div>
            <div class="stat-value">@ViewBag.TotalEmployees</div>
        </div>
        <div class="stat-card alt1">
            <div class="stat-label">Active Employees</div>
            <div class="stat-value">@ViewBag.ActiveEmployees</div>
        </div>
        <div class="stat-card alt2">
            <div class="stat-label">Total Salary</div>
            <div class="stat-value">@ViewBag.TotalSalary.ToString("C0")</div>
        </div>
        <div class="stat-card alt3">
            <div class="stat-label">Average Salary</div>
            <div class="stat-value">@ViewBag.AverageSalary.ToString("C0")</div>
        </div>
    </div>

    <!-- Table -->
    <table class="employees-table">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Employee</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Shift</th>
                <th>Basic Salary</th>
                <th>Joining Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int serialNo = 1;
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@serialNo</td>
                        <td>
                            <div class="employee-name">@employee.Name</div>
                            <div class="employee-code">@employee.EmployeeCode</div>
                        </td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@(employee.DepartmentNavigation?.Name ?? "N/A")</td>
                        <td>@(employee.DesignationNavigation?.Title ?? "N/A")</td>
                        <td>@(employee.ShiftNavigation?.ShiftName ?? "N/A")</td>
                        <td><strong>@employee.BasicSalary.ToString("C0")</strong></td>
                        <td>@employee.JoiningDate.ToString("dd-MMM-yyyy")</td>
                        <td>
                            @{
                                var badgeClass = employee.Status switch
                                {
                                    PayRollManagementSystem.Models.EmploymentStatus.Active => "badge-active",
                                    PayRollManagementSystem.Models.EmploymentStatus.Inactive => "badge-inactive",
                                    PayRollManagementSystem.Models.EmploymentStatus.Resigned => "badge-resigned",
                                    _ => "badge-inactive"
                                };
                            }
                            <span class="badge @badgeClass">@employee.Status</span>
                        </td>
                    </tr>
                    serialNo++;
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="no-records">
                        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 15px; display: block; opacity: 0.3;"></i>
                        <h3>No employees found</h3>
                        <p>Try adjusting your filters</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
