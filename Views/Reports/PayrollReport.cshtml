@model IEnumerable<PayRollManagementSystem.Models.Payroll>

@{
    ViewData["Title"] = "Monthly Payroll Report";
    var selectedMonth = (int)ViewData["SelectedMonth"];
    var selectedYear = (int)ViewData["SelectedYear"];
    var currentDepartment = ViewData["CurrentDepartment"]?.ToString();
    var currentStatus = ViewData["CurrentStatus"]?.ToString();
}

<style>
    .report-container {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e8f4f8;
    }

    .report-title-section h1 {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .report-subtitle {
        color: #5a6c7d;
        font-size: 14px;
    }

    .report-actions {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-back {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-print {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
    }

    .filters-section {
        background: #f8fafb;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
    }

    .filters-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
    }

    .filter-group label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .filter-group select {
        width: 100%;
        padding: 10px;
        border: 1px solid #dfe6e9;
        border-radius: 8px;
        font-size: 14px;
    }

    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        padding: 20px;
        border-radius: 12px;
        color: white;
        text-align: center;
    }

    .stat-card.total {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .stat-card.basic {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
    }

    .stat-card.allowances {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .stat-card.deductions {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .stat-card.gross {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .stat-card.net {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stat-label {
        font-size: 13px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
    }

    .payroll-table {
        width: 100%;
        border-collapse: collapse;
    }

    .payroll-table thead {
        background: #f8fafb;
    }

    .payroll-table th {
        padding: 15px;
        text-align: left;
        font-size: 13px;
        font-weight: 600;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #e8f4f8;
    }

    .payroll-table th.text-right {
        text-align: right;
    }

    .payroll-table td {
        padding: 15px;
        border-bottom: 1px solid #f1f3f5;
        font-size: 14px;
        color: #5a6c7d;
    }

    .payroll-table td.text-right {
        text-align: right;
    }

    .payroll-table tbody tr:hover {
        background: #f8fafb;
    }

    .payroll-table tfoot {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        font-weight: 700;
    }

    .payroll-table tfoot td {
        border: none;
        padding: 20px 15px;
        font-size: 16px;
    }

    .employee-info {
        font-weight: 600;
        color: #2c3e50;
    }

    .employee-code {
        font-size: 12px;
        color: #95a5a6;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-draft {
        background: #f0f0f0;
        color: #666;
    }

    .status-pending {
        background: #fef3c7;
        color: #f59e0b;
    }

    .status-approved {
        background: #d1f4e0;
        color: #10b981;
    }

    .status-paid {
        background: #dbeafe;
        color: #3b82f6;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #95a5a6;
    }

    @@media print {
        body {
            font-family: 'Times New Roman', serif !important;
            color: #000 !important;
            background: white !important;
        }

        .report-actions,
        .filters-section,
        .btn-action,
        .stats-cards,
        .dashboard-sidebar,
        .dashboard-header,
        .dashboard-footer,
        .sidebar-overlay {
            display: none !important;
        }

        .dashboard-main {
            margin-left: 0 !important;
        }

        .dashboard-content {
            padding: 0 !important;
        }

        .report-container {
            box-shadow: none !important;
            border-radius: 0 !important;
            padding: 20px !important;
        }

        .report-header {
            text-align: center !important;
            border-bottom: 3px solid #000 !important;
            margin-bottom: 20px !important;
        }

        .report-title-section h1 {
            font-size: 22px !important;
            text-transform: uppercase !important;
            letter-spacing: 1px !important;
            margin-bottom: 10px !important;
        }

        .report-subtitle {
            font-size: 14px !important;
            color: #333 !important;
        }

        .payroll-table,
        .payroll-table th,
        .payroll-table td {
            border: 1px solid #000 !important;
            font-family: 'Times New Roman', serif !important;
        }

        .payroll-table thead {
            background: #f0f0f0 !important;
        }

        .payroll-table th {
            font-size: 11px !important;
            padding: 8px 5px !important;
        }

        .payroll-table td {
            font-size: 11px !important;
            padding: 8px 5px !important;
            color: #000 !important;
        }

        .payroll-table tfoot {
            background: #f0f0f0 !important;
            color: #000 !important;
            border-top: 2px solid #000 !important;
        }

        .payroll-table tfoot td {
            font-size: 12px !important;
            font-weight: bold !important;
        }

        .payroll-table tbody tr:hover {
            background: transparent !important;
        }

        @@page {
            margin: 15mm;
            size: A4 landscape;
        }

        .payroll-table {
            page-break-inside: avoid;
        }

        main, .container {
            margin: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }

        .status-badge {
            border: 1px solid #000 !important;
            color: #000 !important;
            background: white !important;
            padding: 2px 6px !important;
            font-size: 10px !important;
        }

        .employee-code,
        .employee-info {
            color: #000 !important;
        }
    }
</style>

<div class="report-container">
    <div class="report-header">
        <div class="report-title-section">
            <h1>?? Monthly Payroll Report</h1>
            <p class="report-subtitle">@(new DateTime(selectedYear, selectedMonth, 1).ToString("MMMM yyyy"))</p>
        </div>
        <div class="report-actions">
            <button onclick="window.print()" class="btn-action btn-print">
                <i class="fas fa-print"></i> Print
            </button>
            <a asp-action="Index" class="btn-action btn-back">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <form method="get" asp-action="PayrollReport">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Month</label>
                    <select name="month" class="form-control">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(i == selectedMonth)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Year</label>
                    <select name="year" class="form-control">
                        @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                        {
                            <option value="@i" selected="@(i == selectedYear)">@i</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Department</label>
                    <select name="department" class="form-control">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments as List<string>)
                        {
                            <option value="@dept" selected="@(dept == currentDepartment)">@dept</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Status</label>
                    <select name="status" class="form-control">
                        <option value="">All Status</option>
                        <option value="Draft" selected="@(currentStatus == "Draft")">Draft</option>
                        <option value="Pending" selected="@(currentStatus == "Pending")">Pending</option>
                        <option value="Approved" selected="@(currentStatus == "Approved")">Approved</option>
                        <option value="Paid" selected="@(currentStatus == "Paid")">Paid</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn-action" style="width: 100%; background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%); color: white;">
                        <i class="fas fa-filter"></i> Apply Filters
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Statistics -->
    <div class="stats-cards">
        <div class="stat-card total">
            <div class="stat-label">Total Employees</div>
            <div class="stat-value">@ViewBag.TotalEmployees</div>
        </div>
        <div class="stat-card basic">
            <div class="stat-label">Total Basic Salary</div>
            <div class="stat-value">@ViewBag.TotalBasicSalary.ToString("C0")</div>
        </div>
        <div class="stat-card allowances">
            <div class="stat-label">Total Allowances</div>
            <div class="stat-value">@ViewBag.TotalAllowances.ToString("C0")</div>
        </div>
        <div class="stat-card deductions">
            <div class="stat-label">Total Deductions</div>
            <div class="stat-value">@ViewBag.TotalDeductions.ToString("C0")</div>
        </div>
        <div class="stat-card gross">
            <div class="stat-label">Total Gross Salary</div>
            <div class="stat-value">@ViewBag.TotalGrossSalary.ToString("C0")</div>
        </div>
        <div class="stat-card net">
            <div class="stat-label">Total Net Salary</div>
            <div class="stat-value">@ViewBag.TotalNetSalary.ToString("C0")</div>
        </div>
    </div>

    <!-- Table -->
    <table class="payroll-table">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Employee</th>
                <th>Department</th>
                <th>Designation</th>
                <th class="text-right">Basic Salary</th>
                <th class="text-right">Allowances</th>
                <th class="text-right">Gross Salary</th>
                <th class="text-right">Deductions</th>
                <th class="text-right">Net Salary</th>
                <th>Payment Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int serialNo = 1;
                @foreach (var payroll in Model)
                {
                    <tr>
                        <td>@serialNo</td>
                        <td>
                            <div class="employee-info">@payroll.Employee?.Name</div>
                            <div class="employee-code">@payroll.Employee?.EmployeeCode</div>
                        </td>
                        <td>@(payroll.Employee?.DepartmentNavigation?.Name ?? "N/A")</td>
                        <td>@(payroll.Employee?.DesignationNavigation?.Title ?? "N/A")</td>
                        <td class="text-right">@payroll.BasicSalary.ToString("C2")</td>
                        <td class="text-right" style="color: #10b981; font-weight: 600;">@payroll.TotalAllowances.ToString("C2")</td>
                        <td class="text-right"><strong>@payroll.GrossSalary.ToString("C2")</strong></td>
                        <td class="text-right" style="color: #ef4444; font-weight: 600;">@payroll.TotalDeductions.ToString("C2")</td>
                        <td class="text-right"><strong style="color: #2193b0; font-size: 16px;">@payroll.NetSalary.ToString("C2")</strong></td>
                        <td>@payroll.PaymentDate.ToString("dd-MMM-yyyy")</td>
                        <td>
                            @{
                                var statusClass = payroll.Status switch
                                {
                                    PayRollManagementSystem.Models.PayrollStatus.Draft => "status-draft",
                                    PayRollManagementSystem.Models.PayrollStatus.Pending => "status-pending",
                                    PayRollManagementSystem.Models.PayrollStatus.Approved => "status-approved",
                                    PayRollManagementSystem.Models.PayrollStatus.Paid => "status-paid",
                                    _ => "status-draft"
                                };
                            }
                            <span class="status-badge @statusClass">@payroll.Status</span>
                        </td>
                    </tr>
                    serialNo++;
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="empty-state">
                        <i class="fas fa-file-invoice-dollar" style="font-size: 48px; margin-bottom: 15px; display: block; opacity: 0.3;"></i>
                        <h3>No payroll records found</h3>
                        <p>No payroll has been generated for this period</p>
                    </td>
                </tr>
            }
        </tbody>
        @if (Model != null && Model.Any())
        {
            <tfoot>
                <tr>
                    <td colspan="4"><strong>TOTAL (@ViewBag.TotalEmployees Employees)</strong></td>
                    <td class="text-right"><strong>@ViewBag.TotalBasicSalary.ToString("C2")</strong></td>
                    <td class="text-right"><strong>@ViewBag.TotalAllowances.ToString("C2")</strong></td>
                    <td class="text-right"><strong>@ViewBag.TotalGrossSalary.ToString("C2")</strong></td>
                    <td class="text-right"><strong>@ViewBag.TotalDeductions.ToString("C2")</strong></td>
                    <td class="text-right"><strong>@ViewBag.TotalNetSalary.ToString("C2")</strong></td>
                    <td colspan="2"></td>
                </tr>
            </tfoot>
        }
    </table>
</div>
