@{
    ViewData["Title"] = "Component Analytics";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-back:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .stat-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .stat-icon.blue {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
    }

    .stat-icon.green {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .stat-icon.red {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .stat-icon.purple {
        background: linear-gradient(135deg, #a855f7 0%, #7e22ce 100%);
    }

    .stat-icon.orange {
        background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
    }

    .stat-icon.gray {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
    }

    .stat-label {
        font-size: 14px;
        color: #5a6c7d;
        font-weight: 500;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
        color: #2c3e50;
    }

    .stat-subtitle {
        font-size: 12px;
        color: #5a6c7d;
        margin-top: 5px;
    }

    .chart-section {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .chart-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 25px;
    }

    .chart-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .chart-container {
        min-height: 300px;
    }

    .components-table-section {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .analytics-table {
        width: 100%;
        border-collapse: collapse;
    }

    .analytics-table thead {
        background: #f8fafb;
    }

    .analytics-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        color: #2c3e50;
        font-size: 14px;
        border-bottom: 2px solid #e8f4f8;
    }

    .analytics-table td {
        padding: 15px;
        border-bottom: 1px solid #f8fafb;
        font-size: 14px;
        color: #5a6c7d;
    }

    .analytics-table tbody tr:hover {
        background: #f8fafb;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-allowance {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-deduction {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-inactive {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .badge-small {
        padding: 4px 8px;
        font-size: 11px;
        margin-left: 5px;
    }

    .badge-taxable {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .badge-mandatory {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
    }

    .progress-bar {
        height: 8px;
        background: #e8f4f8;
        border-radius: 4px;
        overflow: hidden;
        margin-top: 8px;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        border-radius: 4px;
        transition: width 0.3s;
    }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #5a6c7d;
    }
</style>

<div class="page-header">
    <h1 class="page-title">&#128202; Component Analytics</h1>
    <a asp-action="Index" class="btn-back">&#8592; Back to Components</a>
</div>

<!-- Overview Statistics -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon blue" style="color: white;">&#128176;</div>
            <div>
                <div class="stat-label">Total Components</div>
                <div class="stat-value">@ViewBag.TotalComponents</div>
                <div class="stat-subtitle">All allowances & deductions</div>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon green" style="color: white;">&#10003;</div>
            <div>
                <div class="stat-label">Active Components</div>
                <div class="stat-value">@ViewBag.ActiveComponents</div>
                <div class="stat-subtitle">Currently in use</div>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon red" style="color: white;">&#10005;</div>
            <div>
                <div class="stat-label">Inactive Components</div>
                <div class="stat-value">@ViewBag.InactiveComponents</div>
                <div class="stat-subtitle">Not currently used</div>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon purple" style="color: white;">&#10133;</div>
            <div>
                <div class="stat-label">Allowances</div>
                <div class="stat-value">@ViewBag.AllowanceCount</div>
                <div class="stat-subtitle">Salary additions</div>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon orange" style="color: white;">&#10134;</div>
            <div>
                <div class="stat-label">Deductions</div>
                <div class="stat-value">@ViewBag.DeductionCount</div>
                <div class="stat-subtitle">Salary subtractions</div>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon gray" style="color: white;">&#128181;</div>
            <div>
                <div class="stat-label">Taxable Components</div>
                <div class="stat-value">@ViewBag.TaxableCount</div>
                <div class="stat-subtitle">Subject to taxation</div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="chart-section">
    <h3 class="chart-title">&#128200; Component Breakdown</h3>
    <div class="chart-grid">
        <!-- Type Distribution -->
        <div>
            <h4 style="font-size: 16px; color: #2c3e50; margin-bottom: 15px;">By Type</h4>
            <div style="display: flex; flex-direction: column; gap: 15px;">
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Allowances</span>
                        <span style="font-size: 14px; font-weight: 600; color: #10b981;">@ViewBag.AllowanceCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.AllowanceCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%; background: linear-gradient(135deg, #10b981 0%, #059669 100%);"></div>
                    </div>
                </div>
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Deductions</span>
                        <span style="font-size: 14px; font-weight: 600; color: #ef4444;">@ViewBag.DeductionCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.DeductionCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%; background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Distribution -->
        <div>
            <h4 style="font-size: 16px; color: #2c3e50; margin-bottom: 15px;">By Status</h4>
            <div style="display: flex; flex-direction: column; gap: 15px;">
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Active</span>
                        <span style="font-size: 14px; font-weight: 600; color: #10b981;">@ViewBag.ActiveComponents</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.ActiveComponents / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%; background: linear-gradient(135deg, #10b981 0%, #059669 100%);"></div>
                    </div>
                </div>
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Inactive</span>
                        <span style="font-size: 14px; font-weight: 600; color: #6b7280;">@ViewBag.InactiveComponents</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.InactiveComponents / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%; background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calculation Methods -->
        <div>
            <h4 style="font-size: 16px; color: #2c3e50; margin-bottom: 15px;">By Calculation Method</h4>
            <div style="display: flex; flex-direction: column; gap: 15px;">
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Fixed Amount</span>
                        <span style="font-size: 14px; font-weight: 600; color: #2193b0;">@ViewBag.FixedAmountCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.FixedAmountCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%;"></div>
                    </div>
                </div>
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">% of Basic</span>
                        <span style="font-size: 14px; font-weight: 600; color: #2193b0;">@ViewBag.PercentageBasicCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.PercentageBasicCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%;"></div>
                    </div>
                </div>
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">% of Gross</span>
                        <span style="font-size: 14px; font-weight: 600; color: #2193b0;">@ViewBag.PercentageGrossCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.PercentageGrossCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%;"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tax & Mandatory Status -->
        <div>
            <h4 style="font-size: 16px; color: #2c3e50; margin-bottom: 15px;">Properties Distribution</h4>
            <div style="display: flex; flex-direction: column; gap: 15px;">
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Taxable</span>
                        <span style="font-size: 14px; font-weight: 600; color: #fb923c;">@ViewBag.TaxableCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.TaxableCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%; background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);"></div>
                    </div>
                </div>
                <div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="font-size: 14px; color: #5a6c7d;">Mandatory</span>
                        <span style="font-size: 14px; font-weight: 600; color: #6366f1;">@ViewBag.MandatoryCount</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((ViewBag.TotalComponents > 0 ? (double)ViewBag.MandatoryCount / ViewBag.TotalComponents * 100 : 0).ToString("0.0"))%; background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top Allowances -->
@if (ViewBag.TopAllowances != null && ((List<PayRollManagementSystem.Models.AllowanceDeduction>)ViewBag.TopAllowances).Any())
{
    <div class="components-table-section">
        <h3 class="chart-title">&#127942; Top Allowances (Fixed Amount)</h3>
        <div class="table-responsive">
            <table class="analytics-table">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Component</th>
                        <th>Code</th>
                        <th>Amount</th>
                        <th>Properties</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rank = 1;
                        foreach (var allowance in (List<PayRollManagementSystem.Models.AllowanceDeduction>)ViewBag.TopAllowances)
                        {
                            <tr>
                                <td><strong style="color: #2193b0;">#@rank</strong></td>
                                <td><strong>@allowance.Name</strong></td>
                                <td>@allowance.Code</td>
                                <td><strong style="color: #10b981; font-size: 15px;">@allowance.Value.ToString("C")</strong></td>
                                <td>
                                    @if (allowance.IsTaxable)
                                    {
                                        <span class="badge badge-taxable badge-small">Taxable</span>
                                    }
                                    @if (allowance.IsMandatory)
                                    {
                                        <span class="badge badge-mandatory badge-small">Mandatory</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(allowance.Status == PayRollManagementSystem.Models.ComponentStatus.Active ? "badge-active" : "badge-inactive")">
                                        @allowance.Status.ToString()
                                    </span>
                                </td>
                            </tr>
                            rank++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Top Deductions -->
@if (ViewBag.TopDeductions != null && ((List<PayRollManagementSystem.Models.AllowanceDeduction>)ViewBag.TopDeductions).Any())
{
    <div class="components-table-section">
        <h3 class="chart-title">&#128201; Top Deductions (Fixed Amount)</h3>
        <div class="table-responsive">
            <table class="analytics-table">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Component</th>
                        <th>Code</th>
                        <th>Amount</th>
                        <th>Properties</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rank = 1;
                        foreach (var deduction in (List<PayRollManagementSystem.Models.AllowanceDeduction>)ViewBag.TopDeductions)
                        {
                            <tr>
                                <td><strong style="color: #2193b0;">#@rank</strong></td>
                                <td><strong>@deduction.Name</strong></td>
                                <td>@deduction.Code</td>
                                <td><strong style="color: #ef4444; font-size: 15px;">@deduction.Value.ToString("C")</strong></td>
                                <td>
                                    @if (deduction.IsTaxable)
                                    {
                                        <span class="badge badge-taxable badge-small">Taxable</span>
                                    }
                                    @if (deduction.IsMandatory)
                                    {
                                        <span class="badge badge-mandatory badge-small">Mandatory</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(deduction.Status == PayRollManagementSystem.Models.ComponentStatus.Active ? "badge-active" : "badge-inactive")">
                                        @deduction.Status.ToString()
                                    </span>
                                </td>
                            </tr>
                            rank++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- All Components Summary -->
<div class="components-table-section">
    <h3 class="chart-title">&#128203; All Components Summary</h3>
    @if (ViewBag.AllComponents != null && ((List<PayRollManagementSystem.Models.AllowanceDeduction>)ViewBag.AllComponents).Any())
    {
        <div class="table-responsive">
            <table class="analytics-table">
                <thead>
                    <tr>
                        <th>Component</th>
                        <th>Code</th>
                        <th>Type</th>
                        <th>Calculation</th>
                        <th>Value</th>
                        <th>Properties</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var component in (List<PayRollManagementSystem.Models.AllowanceDeduction>)ViewBag.AllComponents)
                    {
                        <tr>
                            <td><strong>@component.Name</strong></td>
                            <td>@component.Code</td>
                            <td>
                                <span class="badge @(component.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "badge-allowance" : "badge-deduction")">
                                    @component.TypeDisplay
                                </span>
                            </td>
                            <td>
                                @if (component.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.FixedAmount)
                                {
                                    <span>Fixed Amount</span>
                                }
                                else if (component.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.PercentageOfBasic)
                                {
                                    <span>% of Basic</span>
                                }
                                else
                                {
                                    <span>% of Gross</span>
                                }
                            </td>
                            <td><strong style="color: #2193b0;">@component.CalculationDisplay</strong></td>
                            <td>
                                @if (component.IsTaxable)
                                {
                                    <span class="badge badge-taxable badge-small">Taxable</span>
                                }
                                @if (component.IsMandatory)
                                {
                                    <span class="badge badge-mandatory badge-small">Mandatory</span>
                                }
                                @if (component.AppliesToAll)
                                {
                                    <span class="badge badge-small" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">All Employees</span>
                                }
                            </td>
                            <td>
                                <span class="badge @(component.Status == PayRollManagementSystem.Models.ComponentStatus.Active ? "badge-active" : "badge-inactive")">
                                    @component.Status.ToString()
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-data">
            <h3>No components found</h3>
            <p>Start by adding your first allowance or deduction</p>
            <a asp-action="Create" class="btn-back" style="display: inline-block; margin-top: 15px;">Create Component</a>
        </div>
    }
</div>
