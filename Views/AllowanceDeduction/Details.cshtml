@model PayRollManagementSystem.Models.AllowanceDeduction

@{
    ViewData["Title"] = "Component Details";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .btn-edit {
        padding: 10px 20px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
            color: white;
        }

    .details-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .details-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e8f4f8;
    }

    .component-large-icon {
        width: 80px;
        height: 80px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 32px;
        box-shadow: 0 4px 15px rgba(33, 147, 176, 0.3);
    }

    .allowance-large-icon {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .deduction-large-icon {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .card-header-info h2 {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .card-header-info p {
        color: #5a6c7d;
        margin: 0;
        font-size: 14px;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
        margin-left: 10px;
    }

    .badge-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-inactive {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-allowance {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-deduction {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        padding: 15px;
        background: #f8fafb;
        border-radius: 10px;
        border-left: 4px solid #6dd5ed;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: #5a6c7d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .detail-icon {
        margin-right: 8px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .description-box {
        background: #f8fafb;
        border-radius: 10px;
        padding: 20px;
        color: #5a6c7d;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .stats-card {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        border-radius: 12px;
        padding: 20px;
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
    }

    .properties-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .property-card {
        padding: 15px;
        background: white;
        border: 2px solid #e8f4f8;
        border-radius: 10px;
        text-align: center;
    }

    .property-icon {
        font-size: 28px;
        margin-bottom: 10px;
    }

    .property-label {
        font-size: 13px;
        color: #5a6c7d;
        font-weight: 600;
    }

    .property-status {
        font-size: 12px;
        margin-top: 5px;
    }

        .property-status.yes {
            color: #10b981;
            font-weight: 600;
        }

        .property-status.no {
            color: #ef4444;
            font-weight: 600;
        }
</style>

<div class="page-header">
    <h1 class="page-title">💰 Component Details</h1>
    <div class="header-actions">
        <a asp-action="Index" class="btn-back">← Back to List</a>
        <button onclick="openEditModal(@Model.AllowanceDeductionId)" class="btn-edit">✏️ Edit</button>
    </div>
</div>

<div class="details-container">
    <!-- Main Details Card -->
    <div class="details-card">
        <div class="card-header">
            <div class="component-large-icon @(Model.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "allowance-large-icon" : "deduction-large-icon")">
                @(Model.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "+" : "-")
            </div>
            <div class="card-header-info">
                <h2>
                    @Model.Name
                    @if (Model.Status == PayRollManagementSystem.Models.ComponentStatus.Active)
                    {
                        <span class="badge badge-active">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-inactive">Inactive</span>
                    }
                    <span class="badge @(Model.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "badge-allowance" : "badge-deduction")">
                        @Model.TypeDisplay
                    </span>
                </h2>
                <p>@Model.Code</p>
            </div>
        </div>

        <!-- Calculation Preview -->
        <div class="stats-card" style="margin-bottom: 30px;">
            <div class="stat-label">Calculation Preview (Based on $5000 basic salary)</div>
            <div class="stat-value">
                @{
                    decimal sampleSalary = 5000m;
                    decimal calculatedAmount = 0m;

                    if (Model.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.FixedAmount)
                    {
                        calculatedAmount = Model.Value;
                    }
                    else if (Model.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.PercentageOfBasic)
                    {
                        calculatedAmount = (sampleSalary * Model.Value) / 100;
                    }
                    else if (Model.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.PercentageOfGross)
                    {
                        calculatedAmount = (sampleSalary * Model.Value) / 100;
                    }
                }
                @(Model.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "+" : "-") $@calculatedAmount.ToString("N2")
            </div>
        </div>

        <!-- Component Information -->
        <h3 class="section-title">📋 Component Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Component Code</div>
                <div class="detail-value">
                    <span class="detail-icon">🔖</span>@Model.Code
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Component Name</div>
                <div class="detail-value">
                    <span class="detail-icon">💰</span>@Model.Name
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Type</div>
                <div class="detail-value">
                    <span class="detail-icon">@(Model.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "+" : "-")</span>@Model.TypeDisplay
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Status</div>
                <div class="detail-value">
                    <span class="detail-icon">📊</span>@Model.Status
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Display Order</div>
                <div class="detail-value">
                    <span class="detail-icon">🔢</span>@Model.DisplayOrder
                </div>
            </div>
        </div>

        <!-- Calculation Configuration -->
        <h3 class="section-title">🧮 Calculation Configuration</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Calculation Method</div>
                <div class="detail-value">
                    <span class="detail-icon">📐</span>
                    @if (Model.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.FixedAmount)
                    {
                        <span>Fixed Amount</span>
                    }
                    else if (Model.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.PercentageOfBasic)
                    {
                        <span>Percentage of Basic Salary</span>
                    }
                    else
                    {
                        <span>Percentage of Gross Salary</span>
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Value</div>
                <div class="detail-value">
                    <span class="detail-icon">💵</span>@Model.CalculationDisplay
                </div>
            </div>

            @if (Model.MinimumSalaryThreshold.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Minimum Salary Threshold</div>
                    <div class="detail-value">
                        <span class="detail-icon">💰</span>$@Model.MinimumSalaryThreshold.Value.ToString("N2")
                    </div>
                </div>
            }

            @if (Model.MaximumCap.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Maximum Cap</div>
                    <div class="detail-value">
                        <span class="detail-icon">📊</span>$@Model.MaximumCap.Value.ToString("N2")
                    </div>
                </div>
            }
        </div>

        <!-- Component Properties -->
        <h3 class="section-title">🏷️ Component Properties</h3>
        <div class="properties-grid">
            <div class="property-card">
                <div class="property-icon">@(Model.IsTaxable ? "✅" : "❌")</div>
                <div class="property-label">Taxable</div>
                <div class="property-status @(Model.IsTaxable ? "yes" : "no")">
                    @(Model.IsTaxable ? "Yes" : "No")
                </div>
            </div>

            <div class="property-card">
                <div class="property-icon">@(Model.IsMandatory ? "✅" : "❌")</div>
                <div class="property-label">Mandatory</div>
                <div class="property-status @(Model.IsMandatory ? "yes" : "no")">
                    @(Model.IsMandatory ? "Yes" : "No")
                </div>
            </div>

            <div class="property-card">
                <div class="property-icon">@(Model.AppliesToAll ? "✅" : "❌")</div>
                <div class="property-label">Applies to All</div>
                <div class="property-status @(Model.AppliesToAll ? "yes" : "no")">
                    @(Model.AppliesToAll ? "Yes" : "No")
                </div>
            </div>
        </div>

        <!-- Effective Dates -->
        @if (Model.EffectiveFrom.HasValue || Model.EffectiveUntil.HasValue)
        {
            <h3 class="section-title">📅 Effective Period</h3>
            <div class="details-grid">
                @if (Model.EffectiveFrom.HasValue)
                {
                    <div class="detail-item">
                        <div class="detail-label">Effective From</div>
                        <div class="detail-value">
                            <span class="detail-icon">📅</span>@Model.EffectiveFrom.Value.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                }

                @if (Model.EffectiveUntil.HasValue)
                {
                    <div class="detail-item">
                        <div class="detail-label">Effective Until</div>
                        <div class="detail-value">
                            <span class="detail-icon">📅</span>@Model.EffectiveUntil.Value.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <h3 class="section-title">📝 Description</h3>
            <div class="description-box">
                @Model.Description
            </div>
        }

        <!-- Timestamps -->
        <h3 class="section-title">🕒 Record Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Created On</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.CreatedAt.ToString("MMMM dd, yyyy")
                </div>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Last Updated</div>
                    <div class="detail-value">
                        <span class="detail-icon">🔄</span>@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id) {
            // Redirect to Index page which will handle opening the modal
            window.location.href = `/AllowanceDeduction/Index?editId=${id}`;
        }
    </script>
}