@{
    ViewData["Title"] = "Cost Analysis";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-back:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .summary-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
    }

    .summary-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .summary-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 15px;
        color: white;
    }

    .summary-icon.employees {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
    }

    .summary-icon.salary {
        background: linear-gradient(135deg, #a855f7 0%, #7e22ce 100%);
    }

    .summary-icon.allowance {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .summary-icon.deduction {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .summary-icon.net {
        background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
    }

    .summary-icon.taxable {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
    }

    .summary-label {
        font-size: 14px;
        color: #5a6c7d;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .summary-value {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .summary-subtitle {
        font-size: 12px;
        color: #5a6c7d;
    }

    .highlight-positive {
        color: #10b981 !important;
    }

    .highlight-negative {
        color: #ef4444 !important;
    }

    .cost-table-section {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .cost-table {
        width: 100%;
        border-collapse: collapse;
    }

    .cost-table thead {
        background: #f8fafb;
    }

    .cost-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        color: #2c3e50;
        font-size: 14px;
        border-bottom: 2px solid #e8f4f8;
    }

    .cost-table th.text-right {
        text-align: right;
    }

    .cost-table td {
        padding: 15px;
        border-bottom: 1px solid #f8fafb;
        font-size: 14px;
        color: #5a6c7d;
    }

    .cost-table td.text-right {
        text-align: right;
    }

    .cost-table tbody tr:hover {
        background: #f8fafb;
    }

    .cost-table tfoot {
        background: rgba(109, 213, 237, 0.05);
        border-top: 3px solid #2193b0;
    }

    .cost-table tfoot td {
        padding: 20px 15px;
        font-weight: 700;
        color: #2c3e50;
        font-size: 15px;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-allowance {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-deduction {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-small {
        padding: 4px 8px;
        font-size: 11px;
        margin-left: 5px;
    }

    .badge-taxable {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .no-data {
        text-align: center;
        padding: 60px 20px;
        color: #5a6c7d;
    }

    .no-data h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .info-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: start;
        gap: 15px;
    }

    .info-icon {
        font-size: 24px;
        flex-shrink: 0;
    }

    .info-content h4 {
        margin: 0 0 8px 0;
        font-size: 16px;
        color: #2193b0;
    }

    .info-content p {
        margin: 0;
        font-size: 14px;
        color: #2193b0;
    }

    .amount-large {
        font-size: 16px;
        font-weight: 700;
    }

    .amount-positive {
        color: #10b981;
    }

    .amount-negative {
        color: #ef4444;
    }

    .amount-neutral {
        color: #2193b0;
    }
</style>

<div class="page-header">
    <h1 class="page-title">&#128181; Cost Analysis</h1>
    <a asp-action="Index" class="btn-back">&#8592; Back to Components</a>
</div>

<div class="info-box">
    <div class="info-icon">&#9432;</div>
    <div class="info-content">
        <h4>About Cost Analysis</h4>
        <p>This analysis shows the estimated monthly and annual costs for all active allowances and deductions based on current employee salaries. Calculations apply minimum thresholds and maximum caps where configured.</p>
    </div>
</div>

<!-- Summary Cards -->
<div class="summary-grid">
    <div class="summary-card">
        <div class="summary-icon employees">&#128101;</div>
        <div class="summary-label">Active Employees</div>
        <div class="summary-value">@ViewBag.TotalEmployees</div>
        <div class="summary-subtitle">Currently employed</div>
    </div>

    <div class="summary-card">
        <div class="summary-icon salary">&#128176;</div>
        <div class="summary-label">Total Basic Salary</div>
        <div class="summary-value">@(((decimal)ViewBag.TotalBasicSalary).ToString("C0"))</div>
        <div class="summary-subtitle">Avg: @(((decimal)ViewBag.AverageBasicSalary).ToString("C0")) per employee</div>
    </div>

    <div class="summary-card">
        <div class="summary-icon allowance">&#10133;</div>
        <div class="summary-label">Total Allowances</div>
        <div class="summary-value highlight-positive">@(((decimal)ViewBag.TotalAllowanceCost).ToString("C0"))</div>
        <div class="summary-subtitle">Monthly cost</div>
    </div>

    <div class="summary-card">
        <div class="summary-icon deduction">&#10134;</div>
        <div class="summary-label">Total Deductions</div>
        <div class="summary-value highlight-negative">@(((decimal)ViewBag.TotalDeductionCost).ToString("C0"))</div>
        <div class="summary-subtitle">Monthly cost</div>
    </div>

    <div class="summary-card">
        <div class="summary-icon net">&#128200;</div>
        <div class="summary-label">Net Impact</div>
        <div class="summary-value @(((decimal)ViewBag.NetMonthlyCost) >= 0 ? "highlight-positive" : "highlight-negative")">
            @(((decimal)ViewBag.NetMonthlyCost).ToString("C0"))
        </div>
        <div class="summary-subtitle">Monthly (Allowances - Deductions)</div>
    </div>

    <div class="summary-card">
        <div class="summary-icon taxable">&#128196;</div>
        <div class="summary-label">Taxable Amount</div>
        <div class="summary-value">@(((decimal)ViewBag.TotalTaxableAmount).ToString("C0"))</div>
        <div class="summary-subtitle">Subject to taxation</div>
    </div>
</div>

<!-- Annual Summary -->
<div class="cost-table-section">
    <h3 class="section-title">&#128197; Annual Cost Summary</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
        <div style="background: rgba(16, 185, 129, 0.1); padding: 20px; border-radius: 10px; border: 2px solid rgba(16, 185, 129, 0.2);">
            <div style="font-size: 14px; color: #059669; font-weight: 600; margin-bottom: 8px;">Annual Allowances</div>
            <div style="font-size: 24px; font-weight: 700; color: #10b981;">
                @(((decimal)ViewBag.TotalAllowanceCost * 12).ToString("C0"))
            </div>
            <div style="font-size: 12px; color: #059669; margin-top: 5px;">12 months × @(((decimal)ViewBag.TotalAllowanceCost).ToString("C0"))</div>
        </div>

        <div style="background: rgba(239, 68, 68, 0.1); padding: 20px; border-radius: 10px; border: 2px solid rgba(239, 68, 68, 0.2);">
            <div style="font-size: 14px; color: #dc2626; font-weight: 600; margin-bottom: 8px;">Annual Deductions</div>
            <div style="font-size: 24px; font-weight: 700; color: #ef4444;">
                @(((decimal)ViewBag.TotalDeductionCost * 12).ToString("C0"))
            </div>
            <div style="font-size: 12px; color: #dc2626; margin-top: 5px;">12 months × @(((decimal)ViewBag.TotalDeductionCost).ToString("C0"))</div>
        </div>

        <div style="background: rgba(251, 146, 60, 0.1); padding: 20px; border-radius: 10px; border: 2px solid rgba(251, 146, 60, 0.2);">
            <div style="font-size: 14px; color: #f97316; font-weight: 600; margin-bottom: 8px;">Net Annual Impact</div>
            <div style="font-size: 24px; font-weight: 700; color: @(((decimal)ViewBag.NetAnnualCost) >= 0 ? "#10b981" : "#ef4444");">
                @(((decimal)ViewBag.NetAnnualCost).ToString("C0"))
            </div>
            <div style="font-size: 12px; color: #f97316; margin-top: 5px;">12 months × @(((decimal)ViewBag.NetMonthlyCost).ToString("C0"))</div>
        </div>
    </div>
</div>

<!-- Detailed Cost Breakdown -->
<div class="cost-table-section">
    <h3 class="section-title">&#128203; Detailed Component Cost Breakdown</h3>
    
    @if (ViewBag.CostAnalysis != null && ((List<PayRollManagementSystem.Controllers.ComponentCostAnalysis>)ViewBag.CostAnalysis).Any())
    {
        <!-- Allowances Table -->
        var allowances = ((List<PayRollManagementSystem.Controllers.ComponentCostAnalysis>)ViewBag.CostAnalysis)
            .Where(c => c.ComponentType == "Allowance")
            .ToList();

        if (allowances.Any())
        {
            <h4 style="font-size: 18px; color: #10b981; margin: 30px 0 15px 0; padding-left: 5px; border-left: 4px solid #10b981;">
                &#10133; Allowances
            </h4>
            <div class="table-responsive">
                <table class="cost-table">
                    <thead>
                        <tr>
                            <th>Component</th>
                            <th>Code</th>
                            <th>Calculation</th>
                            <th class="text-right">Value</th>
                            <th class="text-right">Monthly Cost</th>
                            <th class="text-right">Annual Cost</th>
                            <th class="text-right">Avg/Employee</th>
                            <th>Employees</th>
                            <th>Properties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in allowances)
                        {
                            <tr>
                                <td><strong>@item.ComponentName</strong></td>
                                <td>@item.ComponentCode</td>
                                <td>
                                    @if (item.CalculationMethod == "FixedAmount")
                                    {
                                        <span>Fixed</span>
                                    }
                                    else if (item.CalculationMethod == "PercentageOfBasic")
                                    {
                                        <span>% of Basic</span>
                                    }
                                    else
                                    {
                                        <span>% of Gross</span>
                                    }
                                </td>
                                <td class="text-right">
                                    @if (item.CalculationMethod == "FixedAmount")
                                    {
                                        <span>@item.Value.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span>@item.Value.ToString("0.00")%</span>
                                    }
                                </td>
                                <td class="text-right">
                                    <strong class="amount-large amount-positive">@item.TotalMonthlyCost.ToString("C0")</strong>
                                </td>
                                <td class="text-right">
                                    <strong class="amount-positive">@item.TotalAnnualCost.ToString("C0")</strong>
                                </td>
                                <td class="text-right">@item.AverageCostPerEmployee.ToString("C")</td>
                                <td>@item.ApplicableEmployees</td>
                                <td>
                                    @if (item.IsTaxable)
                                    {
                                        <span class="badge badge-taxable badge-small">Taxable</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"><strong>ALLOWANCES SUBTOTAL</strong></td>
                            <td class="text-right">
                                <strong class="amount-large amount-positive">@(((decimal)ViewBag.TotalAllowanceCost).ToString("C0"))</strong>
                            </td>
                            <td class="text-right">
                                <strong class="amount-positive">@(((decimal)ViewBag.TotalAllowanceCost * 12).ToString("C0"))</strong>
                            </td>
                            <td colspan="3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }

        <!-- Deductions Table -->
        var deductions = ((List<PayRollManagementSystem.Controllers.ComponentCostAnalysis>)ViewBag.CostAnalysis)
            .Where(c => c.ComponentType == "Deduction")
            .ToList();

        if (deductions.Any())
        {
            <h4 style="font-size: 18px; color: #ef4444; margin: 30px 0 15px 0; padding-left: 5px; border-left: 4px solid #ef4444;">
                &#10134; Deductions
            </h4>
            <div class="table-responsive">
                <table class="cost-table">
                    <thead>
                        <tr>
                            <th>Component</th>
                            <th>Code</th>
                            <th>Calculation</th>
                            <th class="text-right">Value</th>
                            <th class="text-right">Monthly Cost</th>
                            <th class="text-right">Annual Cost</th>
                            <th class="text-right">Avg/Employee</th>
                            <th>Employees</th>
                            <th>Properties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in deductions)
                        {
                            <tr>
                                <td><strong>@item.ComponentName</strong></td>
                                <td>@item.ComponentCode</td>
                                <td>
                                    @if (item.CalculationMethod == "FixedAmount")
                                    {
                                        <span>Fixed</span>
                                    }
                                    else if (item.CalculationMethod == "PercentageOfBasic")
                                    {
                                        <span>% of Basic</span>
                                    }
                                    else
                                    {
                                        <span>% of Gross</span>
                                    }
                                </td>
                                <td class="text-right">
                                    @if (item.CalculationMethod == "FixedAmount")
                                    {
                                        <span>@item.Value.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span>@item.Value.ToString("0.00")%</span>
                                    }
                                </td>
                                <td class="text-right">
                                    <strong class="amount-large amount-negative">@item.TotalMonthlyCost.ToString("C0")</strong>
                                </td>
                                <td class="text-right">
                                    <strong class="amount-negative">@item.TotalAnnualCost.ToString("C0")</strong>
                                </td>
                                <td class="text-right">@item.AverageCostPerEmployee.ToString("C")</td>
                                <td>@item.ApplicableEmployees</td>
                                <td>
                                    @if (item.IsTaxable)
                                    {
                                        <span class="badge badge-taxable badge-small">Taxable</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"><strong>DEDUCTIONS SUBTOTAL</strong></td>
                            <td class="text-right">
                                <strong class="amount-large amount-negative">@(((decimal)ViewBag.TotalDeductionCost).ToString("C0"))</strong>
                            </td>
                            <td class="text-right">
                                <strong class="amount-negative">@(((decimal)ViewBag.TotalDeductionCost * 12).ToString("C0"))</strong>
                            </td>
                            <td colspan="3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }

        <!-- Grand Total -->
        <div style="margin-top: 30px; padding: 25px; background: linear-gradient(135deg, rgba(109, 213, 237, 0.1) 0%, rgba(33, 147, 176, 0.1) 100%); border-radius: 12px; border: 2px solid rgba(33, 147, 176, 0.3);">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; align-items: center;">
                <div>
                    <div style="font-size: 14px; color: #2193b0; font-weight: 600; margin-bottom: 5px;">NET MONTHLY IMPACT</div>
                    <div style="font-size: 32px; font-weight: 700; color: @(((decimal)ViewBag.NetMonthlyCost) >= 0 ? "#10b981" : "#ef4444");">
                        @(((decimal)ViewBag.NetMonthlyCost).ToString("C0"))
                    </div>
                </div>
                <div>
                    <div style="font-size: 14px; color: #2193b0; font-weight: 600; margin-bottom: 5px;">NET ANNUAL IMPACT</div>
                    <div style="font-size: 32px; font-weight: 700; color: @(((decimal)ViewBag.NetAnnualCost) >= 0 ? "#10b981" : "#ef4444");">
                        @(((decimal)ViewBag.NetAnnualCost).ToString("C0"))
                    </div>
                </div>
                <div>
                    <div style="font-size: 14px; color: #2193b0; font-weight: 600; margin-bottom: 5px;">BASED ON</div>
                    <div style="font-size: 24px; font-weight: 700; color: #2193b0;">
                        @ViewBag.TotalEmployees Employees
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="no-data">
            <h3>No cost data available</h3>
            <p>No active components or employees found to analyze</p>
            <a asp-action="Create" class="btn-back" style="display: inline-block; margin-top: 15px;">Create Component</a>
        </div>
    }
</div>
