@model PayRollManagementSystem.Models.AllowanceDeduction

@{
    ViewData["Title"] = "Add New Component";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .form-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e8f4f8;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 0;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-group label .required {
                color: #ef4444;
            }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .readonly-field {
        background: #f8fafb;
        cursor: not-allowed;
    }

    .checkbox-group {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .checkbox-wrapper input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: #2193b0;
        }

        .checkbox-wrapper label {
            margin: 0;
            cursor: pointer;
            font-weight: 500;
        }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #e8f4f8;
    }

    .btn-submit {
        padding: 12px 30px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

    .btn-cancel {
        padding: 12px 30px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.2);
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            color: #ef4444;
            font-size: 14px;
            margin-bottom: 5px;
        }

    .info-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2193b0;
        display: flex;
        align-items: start;
        gap: 12px;
    }

    .preview-box {
        background: rgba(251, 146, 60, 0.1);
        border: 2px solid rgba(251, 146, 60, 0.2);
        border-radius: 10px;
        padding: 20px;
        margin-top: 20px;
        display: none;
    }

    .preview-title {
        font-size: 16px;
        font-weight: 600;
        color: #fb923c;
        margin-bottom: 15px;
    }

    .preview-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .preview-item {
        background: white;
        padding: 15px;
        border-radius: 8px;
    }

    .preview-label {
        font-size: 12px;
        color: #5a6c7d;
        margin-bottom: 5px;
    }

    .preview-value {
        font-size: 18px;
        font-weight: 700;
        color: #2c3e50;
    }
</style>

<div class="page-header">
    <h1 class="page-title">➕ Add New Component</h1>
    <a asp-action="Index" class="btn-back">← Back to List</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post" id="componentForm">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- Basic Information -->
        <h3 class="form-section-title">📋 Component Information</h3>

        <div class="info-box">
            <span style="font-size: 20px;">💡</span>
            <div>
                <strong>Tip:</strong> Create allowances (additions to salary) or deductions (subtractions from salary). You can configure calculation methods and applicability rules.
            </div>
        </div>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Code">Component Code <span class="required">*</span></label>
                <input asp-for="Code" class="form-control readonly-field" value="@ViewBag.GeneratedCode" readonly />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name">Component Name <span class="required">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., House Rent Allowance, Tax Deduction" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type">Component Type <span class="required">*</span></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.ComponentType>()" onchange="updatePreview()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">Status <span class="required">*</span></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.ComponentStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <!-- Calculation Configuration -->
        <h3 class="form-section-title">🧮 Calculation Configuration</h3>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="CalculationMethod">Calculation Method <span class="required">*</span></label>
                <select asp-for="CalculationMethod" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.CalculationMethod>()" id="calculationMethod" onchange="updatePreview()"></select>
                <span asp-validation-for="CalculationMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Value">Value <span class="required">*</span></label>
                <input asp-for="Value" class="form-control" type="number" step="0.01" min="0" placeholder="Enter amount or percentage" id="valueInput" onchange="updatePreview()" />
                <span asp-validation-for="Value" class="text-danger"></span>
                <small style="color: #5a6c7d; font-size: 12px; margin-top: 5px; display: block;" id="valueHint">
                    Enter fixed amount in dollars
                </small>
            </div>

            <div class="form-group">
                <label asp-for="DisplayOrder">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control" type="number" min="0" placeholder="0" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>

        <!-- Applicability Rules -->
        <h3 class="form-section-title">📋 Applicability Rules</h3>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="MinimumSalaryThreshold">Minimum Salary Threshold</label>
                <input asp-for="MinimumSalaryThreshold" class="form-control" type="number" step="0.01" min="0" placeholder="Optional: Applies only if salary >= this amount" />
                <span asp-validation-for="MinimumSalaryThreshold" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaximumCap">Maximum Cap</label>
                <input asp-for="MaximumCap" class="form-control" type="number" step="0.01" min="0" placeholder="Optional: Maximum limit for this component" />
                <span asp-validation-for="MaximumCap" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EffectiveFrom">Effective From</label>
                <input asp-for="EffectiveFrom" class="form-control" type="date" />
                <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EffectiveUntil">Effective Until</label>
                <input asp-for="EffectiveUntil" class="form-control" type="date" />
                <span asp-validation-for="EffectiveUntil" class="text-danger"></span>
            </div>
        </div>

        <!-- Component Properties -->
        <h3 class="form-section-title">🏷️ Component Properties</h3>

        <div class="checkbox-group">
            <div class="checkbox-wrapper">
                <input asp-for="IsTaxable" type="checkbox" id="taxable" />
                <label for="taxable">Taxable (Subject to tax calculation)</label>
            </div>

            <div class="checkbox-wrapper">
                <input asp-for="IsMandatory" type="checkbox" id="mandatory" />
                <label for="mandatory">Mandatory (Auto-applied to all eligible employees)</label>
            </div>

            <div class="checkbox-wrapper">
                <input asp-for="AppliesToAll" type="checkbox" id="appliesToAll" />
                <label for="appliesToAll">Applies to All Employees</label>
            </div>
        </div>

        <!-- Description -->
        <h3 class="form-section-title">📝 Additional Information</h3>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter component description, purpose, or special notes..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Preview Box -->
        <div class="preview-box" id="previewBox">
            <div class="preview-title">📊 Calculation Preview (Based on $5000 basic salary)</div>
            <div class="preview-grid">
                <div class="preview-item">
                    <div class="preview-label">Component Type</div>
                    <div class="preview-value" id="previewType">-</div>
                </div>
                <div class="preview-item">
                    <div class="preview-label">Calculation Method</div>
                    <div class="preview-value" id="previewMethod">-</div>
                </div>
                <div class="preview-item">
                    <div class="preview-label">Calculated Amount</div>
                    <div class="preview-value" id="previewAmount" style="color: #10b981;">$0.00</div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn-cancel">Cancel</a>
            <button type="submit" class="btn-submit">✓ Create Component</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function updatePreview() {
            const calculationMethod = document.getElementById('calculationMethod').value;
            const valueInput = document.getElementById('valueInput');
            const valueHint = document.getElementById('valueHint');
            const type = document.querySelector('select[name="Type"]').value;
            const value = parseFloat(valueInput.value) || 0;
            const previewBox = document.getElementById('previewBox');

            // Update hint text based on calculation method
            if (calculationMethod === 'FixedAmount') {
                valueHint.textContent = 'Enter fixed amount in dollars';
            } else if (calculationMethod === 'PercentageOfBasic') {
                valueHint.textContent = 'Enter percentage of basic salary (e.g., 20 for 20%)';
            } else if (calculationMethod === 'PercentageOfGross') {
                valueHint.textContent = 'Enter percentage of gross salary (e.g., 10 for 10%)';
            }

            // Show preview if we have values
            if (value > 0) {
                previewBox.style.display = 'block';

                // Calculate preview amount (using $5000 as sample basic salary)
                const basicSalary = 5000;
                let calculatedAmount = 0;

                if (calculationMethod === 'FixedAmount') {
                    calculatedAmount = value;
                } else if (calculationMethod === 'PercentageOfBasic') {
                    calculatedAmount = (basicSalary * value) / 100;
                } else if (calculationMethod === 'PercentageOfGross') {
                    calculatedAmount = (basicSalary * value) / 100;
                }

                // Update preview
                document.getElementById('previewType').textContent = type === 'Allowance' ? '+ Allowance' : '- Deduction';
                document.getElementById('previewType').style.color = type === 'Allowance' ? '#10b981' : '#ef4444';

                let methodText = calculationMethod === 'FixedAmount' ? 'Fixed Amount' :
                                calculationMethod === 'PercentageOfBasic' ? 'Percentage of Basic' :
                                'Percentage of Gross';
                document.getElementById('previewMethod').textContent = methodText;

                document.getElementById('previewAmount').textContent = '$' + calculatedAmount.toFixed(2);
                document.getElementById('previewAmount').style.color = type === 'Allowance' ? '#10b981' : '#ef4444';
            } else {
                previewBox.style.display = 'none';
            }
        }

        // Update preview on page load if there are values
        document.addEventListener('DOMContentLoaded', function() {
            updatePreview();
        });

        // Update preview when value changes
        document.getElementById('valueInput').addEventListener('input', updatePreview);
        document.getElementById('calculationMethod').addEventListener('change', updatePreview);
        document.querySelector('select[name="Type"]').addEventListener('change', updatePreview);
    </script>
}