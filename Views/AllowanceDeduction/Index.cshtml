@model IEnumerable<PayRollManagementSystem.Models.AllowanceDeduction>

@{
    ViewData["Title"] = "Allowances & Deductions";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-add {
        padding: 12px 24px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        color: white;
    }

    .filters-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .filters-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        align-items: end;
    }

    .form-group label {
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        padding: 10px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
        width: 100%;
    }

    .form-control:focus {
        border-color: #6dd5ed;
        box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
        outline: none;
    }

    .btn-filter {
        padding: 10px 20px;
        background: #2193b0;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-filter:hover {
        background: #1a7a94;
        transform: translateY(-2px);
    }

    .btn-clear {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .btn-clear:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .components-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .components-table {
        width: 100%;
        border-collapse: collapse;
    }

    .components-table thead {
        background: #f8fafb;
    }

    .components-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        color: #2c3e50;
        font-size: 14px;
        border-bottom: 2px solid #e8f4f8;
    }

    .components-table td {
        padding: 15px;
        border-bottom: 1px solid #f8fafb;
        font-size: 14px;
        color: #5a6c7d;
    }

    .components-table tbody tr {
        transition: all 0.3s;
    }

    .components-table tbody tr:hover {
        background: #f8fafb;
    }

    .component-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 18px;
        margin-right: 10px;
    }

    .allowance-icon {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .deduction-icon {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .component-info {
        display: flex;
        align-items: center;
    }

    .component-name {
        font-weight: 600;
        color: #2c3e50;
        display: block;
    }

    .component-code {
        font-size: 12px;
        color: #5a6c7d;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-allowance {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-deduction {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-inactive {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .badge-small {
        padding: 4px 8px;
        font-size: 11px;
        margin-left: 5px;
    }

    .badge-taxable {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .badge-mandatory {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
    }

    .amount-display {
        font-weight: 600;
        color: #2193b0;
        font-size: 15px;
    }

    .action-btns {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.3s;
        cursor: pointer;
        border: none;
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-view {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-view:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .btn-edit {
        background: rgba(109, 213, 237, 0.1);
        color: #2193b0;
    }

    .btn-edit:hover {
        background: rgba(109, 213, 237, 0.2);
        color: #2193b0;
    }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .btn-delete:hover {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

    .no-records {
        text-align: center;
        padding: 40px;
        color: #5a6c7d;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    /* Modal Styles */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9998;
        animation: fadeIn 0.3s;
    }

    .modal-overlay.active {
        display: block;
    }

    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        z-index: 9999;
        max-width: 700px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        animation: slideDown 0.3s;
    }

    .modal.active {
        display: block;
    }

    .modal-header {
        padding: 20px 25px;
        border-bottom: 2px solid #e8f4f8;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #5a6c7d;
        padding: 0;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.3s;
    }

    .modal-close:hover {
        background: #f8fafb;
        color: #2c3e50;
    }

    .modal-body {
        padding: 25px;
    }

    .modal-footer {
        padding: 20px 25px;
        border-top: 2px solid #e8f4f8;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-modal {
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
    }

    .btn-modal-cancel {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-modal-cancel:hover {
        background: #d1e9f0;
    }

    .btn-modal-save {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .btn-modal-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
    }

    .btn-modal-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

    .btn-modal-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
    }

    .readonly-field {
        background: #f8fafb;
        cursor: not-allowed;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .checkbox-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .checkbox-wrapper input[type="checkbox"] {
        width: 18px;
        height: 18px;
        cursor: pointer;
        accent-color: #2193b0;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes slideDown {
        from {
            transform: translate(-50%, -60%);
            opacity: 0;
        }
        to {
            transform: translate(-50%, -50%);
            opacity: 1;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">💰 Allowances & Deductions</h1>
    <a asp-action="Create" class="btn-add">➕ Add Component</a>
</div>

<div id="alertContainer"></div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <span>✓</span>
        <span>@TempData["Success"]</span>
    </div>
}

<!-- Filters -->
<div class="filters-card">
    <form asp-action="Index" method="get">
        <div class="filters-row">
            <div class="form-group">
                <label>Search</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="Component name or code..." />
            </div>
            <div class="form-group">
                <label>Type</label>
                <select name="type" class="form-control">
                    <option value="">All Types</option>
                    <option value="Allowance" selected="@("Allowance" == ViewData["CurrentType"])">Allowance</option>
                    <option value="Deduction" selected="@("Deduction" == ViewData["CurrentType"])">Deduction</option>
                </select>
            </div>
            <div class="form-group">
                <label>Status</label>
                <select name="status" class="form-control">
                    <option value="">All Status</option>
                    <option value="Active" selected="@("Active" == ViewData["CurrentStatus"])">Active</option>
                    <option value="Inactive" selected="@("Inactive" == ViewData["CurrentStatus"])">Inactive</option>
                </select>
            </div>
            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn-filter">🔍 Filter</button>
                <a asp-action="Index" class="btn-clear">✕ Clear</a>
            </div>
        </div>
    </form>
</div>

<!-- Components Table -->
<div class="components-card">
    <div class="table-responsive">
        <table class="components-table">
            <thead>
                <tr>
                    <th>Component</th>
                    <th>Type</th>
                    <th>Calculation</th>
                    <th>Value</th>
                    <th>Properties</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="component-info">
                                    <div class="component-icon @(item.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "allowance-icon" : "deduction-icon")">
                                        @(item.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "+" : "-")
                                    </div>
                                    <div>
                                        <span class="component-name">@item.Name</span>
                                        <span class="component-code">@item.Code</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge @(item.Type == PayRollManagementSystem.Models.ComponentType.Allowance ? "badge-allowance" : "badge-deduction")">
                                    @item.TypeDisplay
                                </span>
                            </td>
                            <td>
                                @if (item.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.FixedAmount)
                                {
                                    <span>Fixed Amount</span>
                                }
                                else if (item.CalculationMethod == PayRollManagementSystem.Models.CalculationMethod.PercentageOfBasic)
                                {
                                    <span>% of Basic</span>
                                }
                                else
                                {
                                    <span>% of Gross</span>
                                }
                            </td>
                            <td>
                                <span class="amount-display">@item.CalculationDisplay</span>
                            </td>
                            <td>
                                <div style="display: flex; flex-wrap: wrap; gap: 4px;">
                                    @if (item.IsTaxable)
                                    {
                                        <span class="badge badge-taxable badge-small">Taxable</span>
                                    }
                                    @if (item.IsMandatory)
                                    {
                                        <span class="badge badge-mandatory badge-small">Mandatory</span>
                                    }
                                    @if (item.AppliesToAll)
                                    {
                                        <span class="badge badge-small" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">All Employees</span>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (item.Status == PayRollManagementSystem.Models.ComponentStatus.Active)
                                {
                                    <span class="badge badge-active">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a asp-action="Details" asp-route-id="@item.AllowanceDeductionId" class="btn-action btn-view">👁️ View</a>
                                    <button onclick="openEditModal(@item.AllowanceDeductionId)" class="btn-action btn-edit">✏️ Edit</button>
                                    <button onclick="openDeleteModal(@item.AllowanceDeductionId, '@item.Name', '@item.Code')" class="btn-action btn-delete">🗑️ Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="no-records">
                            <h3>No components found</h3>
                            <p>Start by adding your first allowance or deduction</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal-overlay" id="editModalOverlay" onclick="closeEditModal()"></div>
<div class="modal" id="editModal">
    <div class="modal-header">
        <h3 class="modal-title">✏️ Edit Component</h3>
        <button class="modal-close" onclick="closeEditModal()">×</button>
    </div>
    <form id="editForm" onsubmit="handleEdit(event)">
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <input type="hidden" id="edit_AllowanceDeductionId" name="AllowanceDeductionId" />

            <div class="form-grid">
                <div class="form-group">
                    <label>Code <span style="color: #ef4444;">*</span></label>
                    <input type="text" id="edit_Code" name="Code" class="form-control readonly-field" readonly required />
                </div>
                <div class="form-group">
                    <label>Name <span style="color: #ef4444;">*</span></label>
                    <input type="text" id="edit_Name" name="Name" class="form-control" required />
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Type <span style="color: #ef4444;">*</span></label>
                    <select id="edit_Type" name="Type" class="form-control" required>
                        <option value="Allowance">Allowance</option>
                        <option value="Deduction">Deduction</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Calculation Method <span style="color: #ef4444;">*</span></label>
                    <select id="edit_CalculationMethod" name="CalculationMethod" class="form-control" required>
                        <option value="FixedAmount">Fixed Amount</option>
                        <option value="PercentageOfBasic">Percentage of Basic</option>
                        <option value="PercentageOfGross">Percentage of Gross</option>
                    </select>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Value <span style="color: #ef4444;">*</span></label>
                    <input type="number" id="edit_Value" name="Value" class="form-control" step="0.01" required />
                </div>
                <div class="form-group">
                    <label>Display Order</label>
                    <input type="number" id="edit_DisplayOrder" name="DisplayOrder" class="form-control" />
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Min Salary Threshold</label>
                    <input type="number" id="edit_MinimumSalaryThreshold" name="MinimumSalaryThreshold" class="form-control" step="0.01" />
                </div>
                <div class="form-group">
                    <label>Maximum Cap</label>
                    <input type="number" id="edit_MaximumCap" name="MaximumCap" class="form-control" step="0.01" />
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Effective From</label>
                    <input type="date" id="edit_EffectiveFrom" name="EffectiveFrom" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Effective Until</label>
                    <input type="date" id="edit_EffectiveUntil" name="EffectiveUntil" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Status <span style="color: #ef4444;">*</span></label>
                <select id="edit_Status" name="Status" class="form-control" required>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>

            <div class="checkbox-group">
                <div class="checkbox-wrapper">
                    <input type="checkbox" id="edit_IsTaxable" name="IsTaxable" value="true" />
                    <label for="edit_IsTaxable">Taxable</label>
                </div>
                <div class="checkbox-wrapper">
                    <input type="checkbox" id="edit_IsMandatory" name="IsMandatory" value="true" />
                    <label for="edit_IsMandatory">Mandatory</label>
                </div>
                <div class="checkbox-wrapper">
                    <input type="checkbox" id="edit_AppliesToAll" name="AppliesToAll" value="true" />
                    <label for="edit_AppliesToAll">Applies to All</label>
                </div>
            </div>

            <div class="form-group">
                <label>Description</label>
                <textarea id="edit_Description" name="Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeEditModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-save">✓ Update Component</button>
        </div>
    </form>
</div>

<!-- Delete Modal -->
<div class="modal-overlay" id="deleteModalOverlay" onclick="closeDeleteModal()"></div>
<div class="modal" id="deleteModal">
    <div class="modal-header">
        <h3 class="modal-title">🗑️ Delete Component</h3>
        <button class="modal-close" onclick="closeDeleteModal()">×</button>
    </div>
    <form id="deleteForm" onsubmit="handleDelete(event)">
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <input type="hidden" id="delete_Id" name="id" />
            
            <div style="background: rgba(239, 68, 68, 0.1); border: 2px solid rgba(239, 68, 68, 0.2); border-radius: 10px; padding: 15px; margin-bottom: 20px;">
                <p style="margin: 0; color: #7f1d1d;">
                    <strong>⚠️ Warning:</strong> Are you sure you want to delete this component?
                </p>
            </div>

            <div style="background: #f8fafb; border-radius: 10px; padding: 20px;">
                <h3 style="margin: 0 0 5px 0; font-size: 18px; color: #2c3e50;" id="delete_name"></h3>
                <p style="margin: 0; font-size: 14px; color: #5a6c7d;" id="delete_code"></p>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeDeleteModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-delete">🗑️ Delete Component</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = `<span>${type === 'success' ? '✓' : '✕'}</span><span>${message}</span>`;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        }

        async function openEditModal(id) {
            try {
                const response = await fetch(`/AllowanceDeduction/GetComponent/${id}`);
                const data = await response.json();

                document.getElementById('edit_AllowanceDeductionId').value = data.allowanceDeductionId;
                document.getElementById('edit_Code').value = data.code;
                document.getElementById('edit_Name').value = data.name;
                document.getElementById('edit_Type').value = data.type;
                document.getElementById('edit_CalculationMethod').value = data.calculationMethod;
                document.getElementById('edit_Value').value = data.value;
                document.getElementById('edit_DisplayOrder').value = data.displayOrder;
                document.getElementById('edit_MinimumSalaryThreshold').value = data.minimumSalaryThreshold || '';
                document.getElementById('edit_MaximumCap').value = data.maximumCap || '';
                document.getElementById('edit_EffectiveFrom').value = data.effectiveFrom || '';
                document.getElementById('edit_EffectiveUntil').value = data.effectiveUntil || '';
                document.getElementById('edit_Status').value = data.status;
                document.getElementById('edit_IsTaxable').checked = data.isTaxable;
                document.getElementById('edit_IsMandatory').checked = data.isMandatory;
                document.getElementById('edit_AppliesToAll').checked = data.appliesToAll;
                document.getElementById('edit_Description').value = data.description || '';

                document.getElementById('editModal').classList.add('active');
                document.getElementById('editModalOverlay').classList.add('active');
            } catch (error) {
                showAlert('Error loading component data', 'error');
            }
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('active');
            document.getElementById('editModalOverlay').classList.remove('active');
            document.getElementById('editForm').reset();
        }

        async function handleEdit(event) {
            event.preventDefault();

            const formData = new FormData(event.target);

            try {
                const response = await fetch('/AllowanceDeduction/Edit', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeEditModal();
                    showAlert(result.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(result.message, 'error');
                }
            } catch (error) {
                showAlert('Error updating component', 'error');
            }
        }

        function openDeleteModal(id, name, code) {
            document.getElementById('delete_Id').value = id;
            document.getElementById('delete_name').textContent = name;
            document.getElementById('delete_code').textContent = code;

            document.getElementById('deleteModal').classList.add('active');
            document.getElementById('deleteModalOverlay').classList.add('active');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('active');
            document.getElementById('deleteModalOverlay').classList.remove('active');
        }

        async function handleDelete(event) {
            event.preventDefault();

            const formData = new FormData(event.target);

            try {
                const response = await fetch('/AllowanceDeduction/Delete', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeDeleteModal();
                    showAlert(result.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(result.message, 'error');
                }
            } catch (error) {
                showAlert('Error deleting component', 'error');
            }
        }

        // Show success message from TempData
        @if (TempData["Success"] != null)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                showAlert('@TempData["Success"]', 'success');
            });
            </text>
        }
    </script>
}