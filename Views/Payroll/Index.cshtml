@model IEnumerable<PayRollManagementSystem.Models.Payroll>

@{
    ViewData["Title"] = "Payroll Management";
    var currentMonth = (int)ViewData["CurrentMonth"];
    var currentYear = (int)ViewData["CurrentYear"];
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-add {
        padding: 12px 24px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        color: white;
    }

    .filters-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .filters-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        align-items: end;
    }

    .form-group label {
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        padding: 10px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
        width: 100%;
    }

    .form-control:focus {
        border-color: #6dd5ed;
        box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
        outline: none;
    }

    .btn-filter {
        padding: 10px 20px;
        background: #2193b0;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-filter:hover {
        background: #1a7a94;
        transform: translateY(-2px);
    }

    .btn-clear {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .btn-clear:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .payroll-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .payroll-table {
        width: 100%;
        border-collapse: collapse;
    }

    .payroll-table thead {
        background: #f8fafb;
    }

    .payroll-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        color: #2c3e50;
        font-size: 14px;
        border-bottom: 2px solid #e8f4f8;
    }

    .payroll-table td {
        padding: 15px;
        border-bottom: 1px solid #f8fafb;
        font-size: 14px;
        color: #5a6c7d;
    }

    .payroll-table tbody tr {
        transition: all 0.3s;
    }

    .payroll-table tbody tr:hover {
        background: #f8fafb;
    }

    .employee-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .employee-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 14px;
    }

    .employee-details h4 {
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 4px 0;
    }

    .employee-details p {
        font-size: 12px;
        color: #5a6c7d;
        margin: 0;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-draft {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .badge-pending {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .badge-approved {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-paid {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
    }

    .badge-cancelled {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .amount-display {
        font-weight: 600;
        color: #2193b0;
        font-size: 15px;
    }

    .action-btns {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.3s;
        cursor: pointer;
        border: none;
    }

    .btn-view {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-view:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .btn-approve {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .btn-approve:hover {
        background: rgba(16, 185, 129, 0.2);
    }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .btn-delete:hover {
        background: rgba(239, 68, 68, 0.2);
    }

    .no-records {
        text-align: center;
        padding: 40px;
        color: #5a6c7d;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9998;
    }

    .modal-overlay.active {
        display: block;
    }

    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        z-index: 9999;
        max-width: 500px;
        width: 90%;
    }

    .modal.active {
        display: block;
    }

    .modal-header {
        padding: 20px 25px;
        border-bottom: 2px solid #e8f4f8;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #5a6c7d;
    }

    .modal-body {
        padding: 25px;
    }

    .modal-footer {
        padding: 20px 25px;
        border-top: 2px solid #e8f4f8;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-modal {
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
    }

    .btn-modal-cancel {
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-modal-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }
</style>

<div class="page-header">
    <h1 class="page-title">&#128181; Payroll Management</h1>
    <div class="header-actions">
        <a asp-action="Generate" class="btn-add">&#10133; Generate Payroll</a>
    </div>
</div>

<div id="alertContainer"></div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <span>&#10003;</span>
        <span>@TempData["Success"]</span>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-error">
        <span>&#10005;</span>
        <span>@TempData["Error"]</span>
    </div>
}

<!-- Filters -->
<div class="filters-card">
    <form asp-action="Index" method="get">
        <div class="filters-row">
            <div class="form-group">
                <label>Month</label>
                <select name="month" class="form-control">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == currentMonth)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Year</label>
                <select name="year" class="form-control">
                    @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                    {
                        <option value="@i" selected="@(i == currentYear)">@i</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Status</label>
                <select name="status" class="form-control">
                    <option value="">All Status</option>
                    <option value="Draft" selected="@("Draft" == ViewData["CurrentStatus"])">Draft</option>
                    <option value="Pending" selected="@("Pending" == ViewData["CurrentStatus"])">Pending</option>
                    <option value="Approved" selected="@("Approved" == ViewData["CurrentStatus"])">Approved</option>
                    <option value="Paid" selected="@("Paid" == ViewData["CurrentStatus"])">Paid</option>
                    <option value="Cancelled" selected="@("Cancelled" == ViewData["CurrentStatus"])">Cancelled</option>
                </select>
            </div>
            <div class="form-group">
                <label>Search</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="Employee name or payroll #..." />
            </div>
            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn-filter">&#128269; Filter</button>
                <a asp-action="Index" class="btn-clear">&#10005; Clear</a>
            </div>
        </div>
    </form>
</div>

<!-- Payroll Table -->
<div class="payroll-card">
    <div class="table-responsive">
        <table class="payroll-table">
            <thead>
                <tr>
                    <th>Payroll #</th>
                    <th>Employee</th>
                    <th>Period</th>
                    <th>Basic Salary</th>
                    <th>Gross Salary</th>
                    <th>Deductions</th>
                    <th>Net Salary</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        var initials = item.Employee.Name.Split(' ').Length > 1
                            ? item.Employee.Name.Split(' ')[0].Substring(0, 1) + item.Employee.Name.Split(' ')[1].Substring(0, 1)
                            : item.Employee.Name.Substring(0, Math.Min(2, item.Employee.Name.Length));

                        <tr>
                            <td><strong>@item.PayrollNumber</strong></td>
                            <td>
                                <div class="employee-info">
                                    <div class="employee-avatar">@initials.ToUpper()</div>
                                    <div class="employee-details">
                                        <h4>@item.Employee.Name</h4>
                                        <p>@item.Employee.EmployeeCode &#8226; @item.Employee.DepartmentNavigation?.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>@item.PayPeriod</td>
                            <td><span class="amount-display">@item.BasicSalary.ToString("C0")</span></td>
                            <td><span class="amount-display">@item.GrossSalary.ToString("C0")</span></td>
                            <td><span style="color: #ef4444; font-weight: 600;">@item.TotalDeductions.ToString("C0")</span></td>
                            <td><strong class="amount-display" style="font-size: 16px;">@item.NetSalary.ToString("C0")</strong></td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        PayRollManagementSystem.Models.PayrollStatus.Draft => "badge-draft",
                                        PayRollManagementSystem.Models.PayrollStatus.Pending => "badge-pending",
                                        PayRollManagementSystem.Models.PayrollStatus.Approved => "badge-approved",
                                        PayRollManagementSystem.Models.PayrollStatus.Paid => "badge-paid",
                                        _ => "badge-cancelled"
                                    };
                                }
                                <span class="badge @statusClass">@item.StatusDisplay</span>
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a asp-action="Details" asp-route-id="@item.PayrollId" class="btn-action btn-view">&#128065; View</a>
                                    @if (item.Status == PayRollManagementSystem.Models.PayrollStatus.Pending || item.Status == PayRollManagementSystem.Models.PayrollStatus.Draft)
                                    {
                                        <a asp-action="Approve" asp-route-id="@item.PayrollId" class="btn-action btn-approve">&#10003; Approve</a>
                                    }
                                    @if (item.Status == PayRollManagementSystem.Models.PayrollStatus.Draft || item.Status == PayRollManagementSystem.Models.PayrollStatus.Pending)
                                    {
                                        <button onclick="openDeleteModal(@item.PayrollId, '@item.PayrollNumber', '@item.Employee.Name')" class="btn-action btn-delete">&#128465; Delete</button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="no-records">
                            <h3>No payroll records found</h3>
                            <p>Generate payroll for employees to get started</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal-overlay" id="deleteModalOverlay" onclick="closeDeleteModal()"></div>
<div class="modal" id="deleteModal">
    <div class="modal-header">
        <h3 class="modal-title">&#128465; Delete Payroll</h3>
        <button class="modal-close" onclick="closeDeleteModal()">×</button>
    </div>
    <form id="deleteForm" onsubmit="handleDelete(event)">
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <input type="hidden" id="delete_Id" name="id" />
            
            <div style="background: rgba(239, 68, 68, 0.1); border: 2px solid rgba(239, 68, 68, 0.2); border-radius: 10px; padding: 15px; margin-bottom: 20px;">
                <p style="margin: 0; color: #7f1d1d;">
                    <strong>&#9888; Warning:</strong> Are you sure you want to delete this payroll?
                </p>
            </div>

            <div style="background: #f8fafb; border-radius: 10px; padding: 20px;">
                <h3 style="margin: 0 0 5px 0; font-size: 18px; color: #2c3e50;" id="delete_payrollNumber"></h3>
                <p style="margin: 0; font-size: 14px; color: #5a6c7d;" id="delete_employeeName"></p>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeDeleteModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-delete">&#128465; Delete Payroll</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = `<span>${type === 'success' ? '&#10003;' : '&#10005;'}</span><span>${message}</span>`;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        }

        function openDeleteModal(id, payrollNumber, employeeName) {
            document.getElementById('delete_Id').value = id;
            document.getElementById('delete_payrollNumber').textContent = payrollNumber;
            document.getElementById('delete_employeeName').textContent = employeeName;

            document.getElementById('deleteModal').classList.add('active');
            document.getElementById('deleteModalOverlay').classList.add('active');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('active');
            document.getElementById('deleteModalOverlay').classList.remove('active');
        }

        async function handleDelete(event) {
            event.preventDefault();

            const formData = new FormData(event.target);

            try {
                const response = await fetch('/Payroll/Delete', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeDeleteModal();
                    showAlert(result.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(result.message, 'error');
                }
            } catch (error) {
                showAlert('Error deleting payroll', 'error');
            }
        }
    </script>
}
