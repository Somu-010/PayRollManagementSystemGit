@model PayRollManagementSystem.Models.Payroll

@{
    ViewData["Title"] = "Payslip Details";
}

<style>
    body {
        font-family: 'Times New Roman', serif;
        color: #000;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-back:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .btn-approve {
        padding: 10px 20px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-approve:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        color: white;
    }

    .btn-print {
        padding: 10px 20px;
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        cursor: pointer;
    }

    .btn-print:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    /* Formal Payslip Styles */
    .payslip-container {
        background: white;
        padding: 40px;
        max-width: 210mm;
        margin: 0 auto;
    }

    .payslip-header {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #000;
    }

    .company-name {
        font-size: 28px;
        font-weight: bold;
        color: #000;
        margin: 0 0 10px 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .payslip-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin: 10px 0;
        text-transform: uppercase;
    }

    .document-meta {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #000;
        font-size: 13px;
    }

    .meta-item {
        color: #333;
    }

    .meta-item strong {
        color: #000;
        font-weight: bold;
    }

    .badge {
        padding: 3px 8px;
        border-radius: 3px;
        font-size: 11px;
        font-weight: bold;
        display: inline-block;
        border: 1px solid #000;
    }

    .badge-draft {
        background: #f0f0f0;
        color: #666;
    }

    .badge-pending {
        background: #fff3e0;
        color: #e65100;
    }

    .badge-approved {
        background: #e8f5e9;
        color: #2e7d32;
    }

    .badge-paid {
        background: #e3f2fd;
        color: #1565c0;
    }

    .section-title {
        font-size: 16px;
        font-weight: bold;
        color: #000;
        margin: 30px 0 15px 0;
        padding-bottom: 8px;
        border-bottom: 2px solid #000;
        text-transform: uppercase;
    }

    .section-title:first-of-type {
        margin-top: 20px;
    }

    .info-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    .info-table td {
        padding: 8px 10px;
        border: 1px solid #000;
        font-size: 13px;
    }

    .info-table td:first-child {
        width: 35%;
        font-weight: bold;
        color: #000;
        background: #f0f0f0;
    }

    .info-table td:last-child {
        color: #333;
    }

    .salary-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    .salary-table th,
    .salary-table td {
        border: 1px solid #000;
        padding: 10px;
        font-size: 13px;
    }

    .salary-table th {
        background: #f0f0f0;
        font-weight: bold;
        color: #000;
        text-align: left;
    }

    .salary-table th.text-right {
        text-align: right;
    }

    .salary-table td {
        color: #333;
    }

    .salary-table td.text-right {
        text-align: right;
        font-weight: 600;
        color: #000;
    }

    .salary-table tfoot td {
        background: #f0f0f0;
        font-weight: bold;
        font-size: 14px;
        color: #000;
    }

    .net-salary-box {
        border: 2px solid #000;
        padding: 20px;
        margin: 30px 0;
        text-align: center;
        background: #fafafa;
    }

    .net-salary-label {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #000;
    }

    .net-salary-amount {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 8px;
        color: #000;
    }

    .net-salary-words {
        font-size: 13px;
        color: #333;
        font-style: italic;
    }

    .signature-section {
        margin-top: 60px;
        padding-top: 30px;
        border-top: 2px solid #000;
        display: flex;
        justify-content: space-between;
    }

    .signature-block {
        text-align: center;
        width: 45%;
    }

    .signature-line {
        border-top: 2px solid #000;
        margin-bottom: 10px;
        margin-top: 60px;
    }

    .signature-label {
        font-size: 12px;
        font-weight: bold;
        color: #000;
    }

    .signature-role {
        font-size: 11px;
        color: #666;
        margin-top: 4px;
    }

    .footer-note {
        text-align: center;
        margin-top: 30px;
        font-size: 11px;
        color: #666;
    }

    @@media print {
        body {
            font-family: 'Times New Roman', serif;
            color: #000;
        }

        .page-header, .header-actions, .btn-back, .btn-approve, .btn-print, .alert {
            display: none !important;
        }

        .dashboard-sidebar,
        .dashboard-header,
        .dashboard-footer,
        .sidebar-overlay {
            display: none !important;
        }

        .dashboard-main {
            margin-left: 0 !important;
        }

        .dashboard-content {
            padding: 0 !important;
        }

        .payslip-container {
            padding: 20px;
            max-width: 100%;
        }

        .info-table td,
        .salary-table th,
        .salary-table td {
            border: 1px solid #000 !important;
        }

        @@page {
            margin: 20mm;
            size: A4;
        }

        main,
        .container {
            margin: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">Payslip Details</h1>
    <div class="header-actions">
        <button onclick="window.print()" class="btn-print">Print Payslip</button>
        @if (Model.Status == PayRollManagementSystem.Models.PayrollStatus.Pending || Model.Status == PayRollManagementSystem.Models.PayrollStatus.Draft)
        {
            <a asp-action="Approve" asp-route-id="@Model.PayrollId" class="btn-approve">Approve</a>
        }
        <a asp-action="Index" class="btn-back">Back to List</a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["Success"]</span>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-error">
        <span>@TempData["Error"]</span>
    </div>
}

<div class="payslip-container">
    <!-- Payslip Header -->
    <div class="payslip-header">
        <h1 class="company-name">Payroll Management System</h1>
        <h2 class="payslip-title">Salary Statement</h2>
        <div class="document-meta">
            <div class="meta-item">
                <strong>Document No:</strong> @Model.PayrollNumber
            </div>
            <div class="meta-item">
                <strong>Generated On:</strong> @DateTime.Now.ToString("dd MMMM, yyyy")
            </div>
            <div class="meta-item">
                <strong>Status:</strong> 
                @{
                    var statusClass = Model.Status switch
                    {
                        PayRollManagementSystem.Models.PayrollStatus.Draft => "badge-draft",
                        PayRollManagementSystem.Models.PayrollStatus.Pending => "badge-pending",
                        PayRollManagementSystem.Models.PayrollStatus.Approved => "badge-approved",
                        PayRollManagementSystem.Models.PayrollStatus.Paid => "badge-paid",
                        _ => "badge-draft"
                    };
                }
                <span class="badge @statusClass">@Model.StatusDisplay</span>
            </div>
        </div>
    </div>

    <!-- Employee Information -->
    <h3 class="section-title">Employee Information</h3>
    <table class="info-table">
        <tr>
            <td>Employee Name</td>
            <td>@Model.Employee.Name</td>
        </tr>
        <tr>
            <td>Employee ID</td>
            <td>@Model.Employee.EmployeeCode</td>
        </tr>
        <tr>
            <td>Department</td>
            <td>@Model.Employee.DepartmentNavigation?.Name</td>
        </tr>
        <tr>
            <td>Designation</td>
            <td>@Model.Employee.DesignationNavigation?.Title</td>
        </tr>
        <tr>
            <td>Pay Period</td>
            <td><strong>@Model.PayPeriod</strong></td>
        </tr>
        <tr>
            <td>Payment Date</td>
            <td>@Model.PaymentDate.ToString("dd MMMM, yyyy")</td>
        </tr>
    </table>

    <!-- Attendance Summary -->
    <h3 class="section-title">Attendance Summary</h3>
    <table class="info-table">
        <tr>
            <td>Total Working Days</td>
            <td>@Model.TotalWorkingDays days</td>
        </tr>
        <tr>
            <td>Days Present</td>
            <td><strong>@Model.PresentDays days</strong></td>
        </tr>
        <tr>
            <td>Days Absent</td>
            <td><strong>@Model.AbsentDays days</strong></td>
        </tr>
        <tr>
            <td>Leave Days (Paid)</td>
            <td>@Model.PaidLeaves days</td>
        </tr>
        <tr>
            <td>Leave Days (Unpaid)</td>
            <td>@Model.UnpaidLeaves days</td>
        </tr>
        <tr>
            <td>Late Arrivals</td>
            <td>@Model.LateDays days</td>
        </tr>
    </table>

    <!-- Earnings -->
    <h3 class="section-title">Earnings</h3>
    <table class="salary-table">
        <thead>
            <tr>
                <th>Description</th>
                <th class="text-right">Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Basic Salary</strong></td>
                <td class="text-right">@Model.BasicSalary.ToString("C2")</td>
            </tr>
            @if (Model.PayrollDetails != null)
            {
                @foreach (var detail in Model.PayrollDetails.Where(d => d.ComponentType == PayRollManagementSystem.Models.ComponentType.Allowance))
                {
                    <tr>
                        <td>@detail.ComponentName</td>
                        <td class="text-right">@detail.Amount.ToString("C2")</td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td><strong>TOTAL EARNINGS (A)</strong></td>
                <td class="text-right"><strong>@Model.GrossSalary.ToString("C2")</strong></td>
            </tr>
        </tfoot>
    </table>

    <!-- Deductions -->
    <h3 class="section-title">Deductions</h3>
    <table class="salary-table">
        <thead>
            <tr>
                <th>Description</th>
                <th class="text-right">Amount</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.LeaveDeductionAmount > 0)
            {
                <tr>
                    <td>Leave / Absence Deduction (@(Model.UnpaidLeaves + Model.AbsentDays) days)</td>
                    <td class="text-right">@Model.LeaveDeductionAmount.ToString("C2")</td>
                </tr>
            }
            @if (Model.PayrollDetails != null)
            {
                @foreach (var detail in Model.PayrollDetails.Where(d => d.ComponentType == PayRollManagementSystem.Models.ComponentType.Deduction))
                {
                    <tr>
                        <td>@detail.ComponentName</td>
                        <td class="text-right">@detail.Amount.ToString("C2")</td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td><strong>TOTAL DEDUCTIONS (B)</strong></td>
                <td class="text-right"><strong>@Model.TotalDeductions.ToString("C2")</strong></td>
            </tr>
        </tfoot>
    </table>

    <!-- Net Salary -->
    <div class="net-salary-box">
        <div class="net-salary-label">Net Salary Payable (A - B)</div>
        <div class="net-salary-amount">@Model.NetSalary.ToString("C2")</div>
        <div class="net-salary-words">
            (Amount in words: @NumberToWords(Model.NetSalary))
        </div>
    </div>

    <!-- Signature Section -->
    <div class="signature-section">
        <div class="signature-block">
            <div class="signature-line"></div>
            <div class="signature-label">Employee Signature</div>
            <div class="signature-role">@Model.Employee.Name</div>
        </div>
        <div class="signature-block">
            <div class="signature-line"></div>
            <div class="signature-label">Authorized Signatory</div>
            <div class="signature-role">HR Department</div>
        </div>
    </div>

    <!-- Footer Note -->
    <div class="footer-note">
        <p>This is a computer-generated document and does not require a signature.</p>
        <p>Generated on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <p style="margin-top: 10px;"><strong>Remarks:</strong> @Model.Remarks</p>
        }
    </div>
</div>

@functions {
    string NumberToWords(decimal number)
    {
        if (number == 0)
            return "Zero Dollars";

        int wholePart = (int)number;
        int decimalPart = (int)((number - wholePart) * 100);

        string words = ConvertWholeNumber(wholePart);
        
        if (decimalPart > 0)
            words += $" and {decimalPart}/100";
        
        return words + " Only";
    }

    string ConvertWholeNumber(int number)
    {
        if (number == 0) return "";

        string[] ones = { "", "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine", "Ten", 
                         "Eleven", "Twelve", "Thirteen", "Fourteen", "Fifteen", "Sixteen", "Seventeen", 
                         "Eighteen", "Nineteen" };
        string[] tens = { "", "", "Twenty", "Thirty", "Forty", "Fifty", "Sixty", "Seventy", "Eighty", "Ninety" };
        string[] thousands = { "", "Thousand", "Million", "Billion" };

        if (number < 20)
            return ones[number];
        
        if (number < 100)
            return tens[number / 10] + (number % 10 > 0 ? " " + ones[number % 10] : "");
        
        if (number < 1000)
            return ones[number / 100] + " Hundred" + (number % 100 > 0 ? " " + ConvertWholeNumber(number % 100) : "");

        for (int i = 0; i < thousands.Length; i++)
        {
            int divisor = (int)Math.Pow(1000, i + 1);
            if (number < divisor)
            {
                int quotient = number / (int)Math.Pow(1000, i);
                int remainder = number % (int)Math.Pow(1000, i);
                return ConvertWholeNumber(quotient) + " " + thousands[i] + 
                       (remainder > 0 ? " " + ConvertWholeNumber(remainder) : "");
            }
        }

        return number.ToString();
    }
}
