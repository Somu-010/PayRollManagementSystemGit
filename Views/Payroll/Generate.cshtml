@{
    ViewData["Title"] = "Generate Payroll";
    var currentMonth = (int)ViewData["Month"];
    var currentYear = (int)ViewData["Year"];
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-back:hover {
        background: #d1e9f0;
        color: #2193b0;
    }

    .generate-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .generate-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
    }

    .generate-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 20px;
        color: white;
    }

    .card-icon.single {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
    }

    .card-icon.bulk {
        background: linear-gradient(135deg, #a855f7 0%, #7e22ce 100%);
    }

    .card-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .card-description {
        font-size: 14px;
        color: #5a6c7d;
        margin-bottom: 20px;
        line-height: 1.5;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: block;
    }

    .required {
        color: #ef4444;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #6dd5ed;
        box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
        outline: none;
    }

    .btn-submit {
        width: 100%;
        padding: 12px 20px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
    }

    .btn-bulk {
        background: linear-gradient(135deg, #a855f7 0%, #7e22ce 100%);
        box-shadow: 0 4px 12px rgba(168, 85, 247, 0.3);
    }

    .btn-bulk:hover {
        box-shadow: 0 6px 16px rgba(168, 85, 247, 0.4);
    }

    .info-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2193b0;
    }

    .warning-box {
        background: rgba(251, 146, 60, 0.1);
        border: 2px solid rgba(251, 146, 60, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #f97316;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    .period-display {
        background: #f8fafb;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .period-display label {
        font-size: 12px;
        color: #5a6c7d;
        margin-bottom: 5px;
    }

    .period-display .value {
        font-size: 18px;
        font-weight: 600;
        color: #2193b0;
    }

    .features-list {
        list-style: none;
        padding: 0;
        margin: 20px 0;
    }

    .features-list li {
        padding: 8px 0;
        font-size: 14px;
        color: #5a6c7d;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .features-list li:before {
        content: "?";
        color: #10b981;
        font-weight: bold;
    }
</style>

<div class="page-header">
    <h1 class="page-title">&#128181; Generate Payroll</h1>
    <a asp-action="Index" class="btn-back">&#8592; Back to Payroll</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <span>&#10003;</span>
        <span>@TempData["Success"]</span>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-error">
        <span>&#10005;</span>
        <span>@TempData["Error"]</span>
    </div>
}

<div class="generate-grid">
    <!-- Single Employee Payroll -->
    <div class="generate-card">
        <div class="card-icon single">&#128100;</div>
        <h2 class="card-title">Single Employee Payroll</h2>
        <p class="card-description">
            Generate payroll for a specific employee. Perfect for new hires, adjustments, or individual processing.
        </p>

        <form asp-action="GenerateSingle" method="post">
            @Html.AntiForgeryToken()
            
            <div class="info-box">
                <strong>&#9432; Automated Calculation:</strong>
                <ul class="features-list">
                    <li>Attendance tracking</li>
                    <li>Leave management</li>
                    <li>Allowances & Deductions</li>
                    <li>Pro-rated salary for absences</li>
                </ul>
            </div>

            <div class="form-group">
                <label>Select Employee <span class="required">*</span></label>
                <select name="employeeId" class="form-control" required>
                    <option value="">-- Select Employee --</option>
                    @foreach (var emp in (SelectList)ViewBag.Employees)
                    {
                        <option value="@emp.Value">@emp.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Pay Period Month <span class="required">*</span></label>
                <select name="month" class="form-control" required>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == currentMonth)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Pay Period Year <span class="required">*</span></label>
                <select name="year" class="form-control" required>
                    @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 2; i--)
                    {
                        <option value="@i" selected="@(i == currentYear)">@i</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn-submit">
                &#10003; Generate Single Payroll
            </button>
        </form>
    </div>

    <!-- Bulk Employee Payroll -->
    <div class="generate-card">
        <div class="card-icon bulk">&#128101;</div>
        <h2 class="card-title">Bulk Payroll Generation</h2>
        <p class="card-description">
            Generate payroll for all active employees at once. Saves time and ensures consistency across the organization.
        </p>

        <form asp-action="GenerateBulk" method="post" onsubmit="return confirmBulkGeneration()">
            @Html.AntiForgeryToken()
            
            <div class="warning-box">
                <strong>&#9888; Important:</strong>
                <ul class="features-list" style="margin: 10px 0 0 0;">
                    <li>Processes all active employees</li>
                    <li>Skips existing payroll records</li>
                    <li>Cannot be undone once approved</li>
                    <li>Review carefully before approval</li>
                </ul>
            </div>

            <div class="period-display">
                <label>Pay Period</label>
                <div class="value">@(new DateTime(currentYear, currentMonth, 1).ToString("MMMM yyyy"))</div>
            </div>

            <div class="form-group">
                <label>Pay Period Month <span class="required">*</span></label>
                <select name="month" class="form-control" required>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == currentMonth)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Pay Period Year <span class="required">*</span></label>
                <select name="year" class="form-control" required>
                    @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 2; i--)
                    {
                        <option value="@i" selected="@(i == currentYear)">@i</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn-submit btn-bulk">
                &#128640; Generate Bulk Payroll
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function confirmBulkGeneration() {
            return confirm('Are you sure you want to generate payroll for ALL active employees? This action will process payroll for all employees who don\'t have payroll for the selected period.');
        }
    </script>
}
