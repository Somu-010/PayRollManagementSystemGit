@model PayRollManagementSystem.Controllers.CreateUserForEmployeeViewModel

@{
    ViewData["Title"] = "Create User Account";
}

<style>
    .create-user-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
    }

    .btn-back {
        padding: 10px 20px;
        background: #f8fafb;
        color: #2c3e50;
        border: 1px solid #e8e8e8;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .employee-preview {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 25px;
        color: white;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .employee-avatar {
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
    }

    .employee-info h3 {
        font-size: 20px;
        margin-bottom: 5px;
    }

    .employee-info p {
        font-size: 14px;
        opacity: 0.9;
        margin: 2px 0;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-group label .required {
        color: #ef4444;
    }

    .form-control {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e8e8e8;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-control.is-invalid {
        border-color: #ef4444;
    }

    .text-danger {
        color: #ef4444;
        font-size: 12px;
        margin-top: 5px;
    }

    .password-hint {
        background: #f8fafb;
        border-radius: 8px;
        padding: 15px;
        margin-top: 10px;
        font-size: 13px;
        color: #5a6c7d;
    }

    .password-hint strong {
        color: #2c3e50;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 14px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        text-decoration: none;
        text-align: center;
    }

    .btn-primary {
        flex: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-cancel {
        padding: 14px 30px;
        background: #f1f3f5;
        color: #5a6c7d;
    }

    .info-box {
        background: #e8f4f8;
        border-left: 4px solid #2193b0;
        padding: 15px;
        border-radius: 0 8px 8px 0;
        margin-bottom: 25px;
    }

    .info-box p {
        font-size: 13px;
        color: #2c3e50;
        margin: 0;
    }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }

    .validation-summary-errors li {
        color: #ef4444;
        font-size: 13px;
    }
</style>

<div class="create-user-container">
    <div class="page-header">
        <h1 class="page-title" style="display: flex; align-items: center; gap: 12px;">
            <i class="fas fa-user-plus" style="color: #2193b0;"></i> Create User Account
        </h1>
        <a asp-action="UnlinkedEmployees" class="btn-back" style="display: flex; align-items: center; gap: 8px;">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <div class="form-card">
        <!-- Employee Preview -->
        <div class="employee-preview">
            <div class="employee-avatar">
                @Model.EmployeeName.Substring(0, Math.Min(2, Model.EmployeeName.Length)).ToUpper()
            </div>
            <div class="employee-info">
                <h3>@Model.EmployeeName</h3>
                <p>@Model.EmployeeCode</p>
                <p>@Model.Department - @Model.Designation</p>
            </div>
        </div>

        <div class="info-box">
            <p>
                <i class="fas fa-info-circle" style="color: #2193b0; margin-right: 8px;"></i>
                <strong>Note:</strong> A user account will be created and automatically linked to this employee. 
                They will be able to log in and access the Employee Portal.
            </p>
        </div>

        <form asp-action="CreateUserForEmployee" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="EmployeeName" />
            <input type="hidden" asp-for="EmployeeCode" />
            <input type="hidden" asp-for="Department" />
            <input type="hidden" asp-for="Designation" />

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="Email">Email Address <span class="required">*</span></label>
                <input asp-for="Email" class="form-control" placeholder="employee@company.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password <span class="required">*</span></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="password-hint">
                    <strong>Password Requirements:</strong> Minimum 6 characters, at least 1 digit
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password <span class="required">*</span></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <a asp-action="UnlinkedEmployees" class="btn btn-cancel">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Create Account
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
