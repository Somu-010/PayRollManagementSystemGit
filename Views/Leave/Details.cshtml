@model PayRollManagementSystem.Models.Leave

@{
    ViewData["Title"] = "Leave Details";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .details-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .details-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e8f4f8;
    }

    .leave-large-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 32px;
        box-shadow: 0 4px 15px rgba(33, 147, 176, 0.3);
    }

    .card-header-info h2 {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .card-header-info p {
        color: #5a6c7d;
        margin: 0;
        font-size: 14px;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        display: inline-block;
        margin-left: 10px;
    }

    .badge-pending {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .badge-approved {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-rejected {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-cancelled {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        border-radius: 12px;
        padding: 20px;
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        padding: 15px;
        background: #f8fafb;
        border-radius: 10px;
        border-left: 4px solid #6dd5ed;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: #5a6c7d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .detail-icon {
        margin-right: 8px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .reason-box {
        background: #f8fafb;
        border-radius: 10px;
        padding: 20px;
        color: #5a6c7d;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .remarks-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 20px;
        color: #2193b0;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .warning-box {
        background: rgba(251, 146, 60, 0.1);
        border: 2px solid rgba(251, 146, 60, 0.3);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        gap: 12px;
        align-items: start;
    }

    .warning-icon {
        font-size: 24px;
        flex-shrink: 0;
    }
</style>

<div class="page-header">
    <h1 class="page-title">🏖️ Leave Details</h1>
    <a asp-action="Index" class="btn-back">← Back to List</a>
</div>

<div class="details-container">
    <div class="details-card">
        <div class="card-header">
            <div class="leave-large-icon">@(Model.Employee?.Name?.Substring(0, Math.Min(2, Model.Employee.Name.Length)).ToUpper() ?? "NA")</div>
            <div class="card-header-info">
                <h2>
                    @(Model.Employee?.Name ?? "N/A")
                    @if (Model.Status == PayRollManagementSystem.Models.LeaveStatus.Pending)
                    {
                        <span class="badge badge-pending">⏳ Pending</span>
                    }
                    else if (Model.Status == PayRollManagementSystem.Models.LeaveStatus.Approved)
                    {
                        <span class="badge badge-approved">✓ Approved</span>
                    }
                    else if (Model.Status == PayRollManagementSystem.Models.LeaveStatus.Rejected)
                    {
                        <span class="badge badge-rejected">✕ Rejected</span>
                    }
                    else
                    {
                        <span class="badge badge-cancelled">🚫 Cancelled</span>
                    }
                </h2>
                <p>@(Model.Employee?.EmployeeCode ?? "N/A") • @Model.LeaveType.ToString().Replace("Leave", " Leave")</p>
            </div>
        </div>

        @if (Model.IsHalfDay)
        {
            <div class="warning-box">
                <span class="warning-icon">⏰</span>
                <div>
                    <strong>Half Day Leave:</strong> This is a half-day leave request.
                </div>
            </div>
        }

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">📅 Leave Days</div>
                <div class="stat-value">@(Model.IsHalfDay ? "0.5" : Model.NumberOfDays.ToString())</div>
            </div>
            <div class="stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="stat-label">📆 Duration</div>
                <div class="stat-value" style="font-size: 18px;">
                    @Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd")
                </div>
            </div>
        </div>

        <!-- Employee Information -->
        <h3 class="section-title">👤 Employee Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Employee Name</div>
                <div class="detail-value">
                    <span class="detail-icon">👤</span>@(Model.Employee?.Name ?? "N/A")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Employee Code</div>
                <div class="detail-value">
                    <span class="detail-icon">🔖</span>@(Model.Employee?.EmployeeCode ?? "N/A")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Department</div>
                <div class="detail-value">
                    <span class="detail-icon">🏢</span>@(Model.Employee?.Department ?? "N/A")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Designation</div>
                <div class="detail-value">
                    <span class="detail-icon">💼</span>@(Model.Employee?.Designation ?? "N/A")
                </div>
            </div>
        </div>

        <!-- Leave Details -->
        <h3 class="section-title">🏖️ Leave Details</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Leave Type</div>
                <div class="detail-value">
                    <span class="detail-icon">📋</span>@Model.LeaveType.ToString().Replace("Leave", " Leave")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Start Date</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.StartDate.ToString("MMMM dd, yyyy")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">End Date</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.EndDate.ToString("MMMM dd, yyyy")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Number of Days</div>
                <div class="detail-value">
                    <span class="detail-icon">🗓️</span>@(Model.IsHalfDay ? "0.5" : Model.NumberOfDays.ToString()) @(Model.NumberOfDays == 1 && !Model.IsHalfDay ? "day" : "days")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Applied On</div>
                <div class="detail-value">
                    <span class="detail-icon">📝</span>@Model.AppliedOn.ToString("MMMM dd, yyyy")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Status</div>
                <div class="detail-value">
                    <span class="detail-icon">✅</span>@Model.Status
                </div>
            </div>
        </div>

        <!-- Reason -->
        <h3 class="section-title">📝 Reason for Leave</h3>
        <div class="reason-box">
            @Model.Reason
        </div>

        <!-- Approval Details -->
        @if (Model.Status == PayRollManagementSystem.Models.LeaveStatus.Approved || Model.Status == PayRollManagementSystem.Models.LeaveStatus.Rejected)
        {
            <h3 class="section-title">✅ Approval Details</h3>
            <div class="details-grid">
                <div class="detail-item">
                    <div class="detail-label">@(Model.Status == PayRollManagementSystem.Models.LeaveStatus.Approved ? "Approved By" : "Rejected By")</div>
                    <div class="detail-value">
                        <span class="detail-icon">👤</span>@(Model.ApprovedBy ?? "N/A")
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">Action Date</div>
                    <div class="detail-value">
                        <span class="detail-icon">📅</span>@(Model.ActionDate?.ToString("MMMM dd, yyyy") ?? "N/A")
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.AdminRemarks))
            {
                <h3 class="section-title">💬 Admin Remarks</h3>
                <div class="remarks-box">
                    @Model.AdminRemarks
                </div>
            }
        }

        <!-- Timestamps -->
        <h3 class="section-title">🕒 Record Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Created On</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")
                </div>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Last Updated</div>
                    <div class="detail-value">
                        <span class="detail-icon">🔄</span>@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy hh:mm tt")
                    </div>
                </div>
            }
        </div>
    </div>
</div>