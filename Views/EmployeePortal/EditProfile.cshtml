@model PayRollManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_EmployeePortalLayout.cshtml";
}

<style>
    .edit-profile-container {
        max-width: 700px;
        margin: 0 auto;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-header .avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        font-weight: 700;
        color: white;
        margin: 0 auto 15px;
    }

    .form-header h2 {
        font-size: 24px;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .form-header p {
        color: #5a6c7d;
        font-size: 14px;
    }

    .info-note {
        background: #e8f4f8;
        border-left: 4px solid #667eea;
        padding: 15px;
        border-radius: 0 8px 8px 0;
        margin-bottom: 25px;
        font-size: 13px;
        color: #2c3e50;
    }

    .info-note i {
        color: #667eea;
        margin-right: 8px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8e8e8;
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-control:disabled {
        background: #f8fafb;
        color: #5a6c7d;
        cursor: not-allowed;
    }

    .form-control-static {
        padding: 12px 15px;
        background: #f8fafb;
        border-radius: 10px;
        font-size: 14px;
        color: #5a6c7d;
        border: 2px solid #e8e8e8;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 14px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        text-decoration: none;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        flex: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-cancel {
        padding: 14px 30px;
        background: #f1f3f5;
        color: #5a6c7d;
    }

    .btn-cancel:hover {
        background: #e8e8e8;
        color: #2c3e50;
    }

    .section-divider {
        border: none;
        border-top: 2px solid #e8e8e8;
        margin: 30px 0;
    }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="edit-profile-container">
    <div class="form-card">
        <div class="form-header">
            <div class="avatar">
                @Model.Name.Substring(0, Math.Min(2, Model.Name.Length)).ToUpper()
            </div>
            <h2>Edit Profile</h2>
            <p>Update your contact information</p>
        </div>

        <div class="info-note">
            <i class="fas fa-info-circle"></i>
            You can only update your contact information. To change other details like name, department, or designation, please contact HR.
        </div>

        <form asp-action="EditProfile" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmployeeId" />

            <!-- Read-only Employee Info -->
            <h4 class="section-title"><i class="fas fa-user" style="color: #667eea;"></i> Employee Information (Read Only)</h4>
            
            <div class="form-row">
                <div class="form-group">
                    <label>Name</label>
                    <div class="form-control-static">@Model.Name</div>
                </div>
                <div class="form-group">
                    <label>Employee Code</label>
                    <div class="form-control-static">@Model.EmployeeCode</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Email</label>
                    <div class="form-control-static">@Model.Email</div>
                </div>
                <div class="form-group">
                    <label>Department</label>
                    <div class="form-control-static">@(Model.DepartmentNavigation?.Name ?? Model.Department)</div>
                </div>
            </div>

            <hr class="section-divider" />

            <!-- Editable Contact Info -->
            <h4 class="section-title"><i class="fas fa-address-card" style="color: #667eea;"></i> Contact Information (Editable)</h4>

            <div class="form-group">
                <label asp-for="Phone">Phone Number</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter your full address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" placeholder="Enter your city" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Profile" class="btn btn-cancel">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
