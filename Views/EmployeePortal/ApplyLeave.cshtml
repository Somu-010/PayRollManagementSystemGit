@model PayRollManagementSystem.Models.Leave

@{
    ViewData["Title"] = "Apply Leave";
    Layout = "~/Views/Shared/_EmployeePortalLayout.cshtml";
}

<style>
    .apply-leave-container {
        max-width: 700px;
        margin: 0 auto;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-header h2 {
        font-size: 24px;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .form-header p {
        color: #5a6c7d;
        font-size: 14px;
    }

    .leave-balance-preview {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 20px;
        color: white;
        margin-bottom: 30px;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
        text-align: center;
    }

    .balance-item .value {
        font-size: 24px;
        font-weight: 700;
    }

    .balance-item .label {
        font-size: 11px;
        opacity: 0.9;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-group label .required {
        color: #ef4444;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8e8e8;
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-control.is-invalid {
        border-color: #ef4444;
    }

    .text-danger {
        color: #ef4444;
        font-size: 12px;
        margin-top: 5px;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 10px;
    }

    .checkbox-group input[type="checkbox"] {
        width: 20px;
        height: 20px;
        accent-color: #667eea;
    }

    .checkbox-group label {
        margin: 0;
        font-weight: 500;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 14px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        text-decoration: none;
        text-align: center;
    }

    .btn-submit {
        flex: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-cancel {
        padding: 14px 30px;
        background: #f1f3f5;
        color: #5a6c7d;
    }

    .btn-cancel:hover {
        background: #e8e8e8;
        color: #2c3e50;
    }

    .info-box {
        background: #f8fafb;
        border-left: 4px solid #667eea;
        padding: 15px;
        border-radius: 0 8px 8px 0;
        margin-bottom: 25px;
    }

    .info-box h4 {
        font-size: 14px;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .info-box p {
        font-size: 13px;
        color: #5a6c7d;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }

        .leave-balance-preview {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<div class="apply-leave-container">
    <div class="form-card">
        <div class="form-header">
            <h2><i class="fas fa-plane-departure" style="color: #667eea;"></i> Apply for Leave</h2>
            <p>Fill in the details below to submit your leave request</p>
        </div>

        @if (ViewBag.LeaveBalance != null)
        {
            var lb = ViewBag.LeaveBalance as PayRollManagementSystem.Models.LeaveBalance;
            <div class="leave-balance-preview">
                <div class="balance-item">
                    <div class="value">@lb.RemainingAnnualLeave</div>
                    <div class="label">Annual</div>
                </div>
                <div class="balance-item">
                    <div class="value">@lb.RemainingSickLeave</div>
                    <div class="label">Sick</div>
                </div>
                <div class="balance-item">
                    <div class="value">@lb.RemainingCasualLeave</div>
                    <div class="label">Casual</div>
                </div>
                <div class="balance-item">
                    <div class="value">@(lb.RemainingAnnualLeave + lb.RemainingSickLeave + lb.RemainingCasualLeave)</div>
                    <div class="label">Total</div>
                </div>
            </div>
        }

        <form asp-action="ApplyLeave" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

            <div class="form-group">
                <label asp-for="LeaveType">Leave Type <span class="required">*</span></label>
                <select asp-for="LeaveType" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.LeaveType>()">
                    <option value="">-- Select Leave Type --</option>
                </select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="StartDate">Start Date <span class="required">*</span></label>
                    <input asp-for="StartDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate">End Date <span class="required">*</span></label>
                    <input asp-for="EndDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="checkbox-group">
                <input asp-for="IsHalfDay" type="checkbox" />
                <label asp-for="IsHalfDay">Half Day Leave</label>
            </div>

            <div class="form-group" style="margin-top: 25px;">
                <label asp-for="Reason">Reason <span class="required">*</span></label>
                <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Please provide a reason for your leave request..."></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            <div class="info-box">
                <h4><i class="fas fa-info-circle" style="color: #667eea;"></i> Important Notes</h4>
                <p>
                    • Leave requests must be submitted at least 1 day in advance for planned leave.<br>
                    • For sick leave, please submit supporting documents if requested.<br>
                    • Your leave balance will be updated once the request is approved.
                </p>
            </div>

            <div class="form-actions">
                <a asp-action="LeaveRequests" class="btn btn-cancel">Cancel</a>
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-paper-plane"></i> Submit Request
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-set end date to start date when start date changes
        document.getElementById('StartDate').addEventListener('change', function() {
            const endDate = document.getElementById('EndDate');
            if (!endDate.value || endDate.value < this.value) {
                endDate.value = this.value;
            }
            endDate.min = this.value;
        });
    </script>
}
