@model PayRollManagementSystem.Models.Shift

@{
    ViewData["Title"] = "Shift Details";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .btn-edit {
        padding: 10px 20px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
            color: white;
        }

    .details-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .details-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e8f4f8;
    }

    .shift-large-icon {
        width: 80px;
        height: 80px;
        border-radius: 15px;
        background: linear-gradient(135deg, #a78bfa 0%, #7c3aed 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 32px;
        box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3);
    }

    .card-header-info h2 {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .card-header-info p {
        color: #5a6c7d;
        margin: 0;
        font-size: 14px;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
        margin-left: 10px;
    }

    .badge-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-inactive {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-night {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
        margin-left: 5px;
    }

    .badge-weekend {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
        margin-left: 5px;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        padding: 15px;
        background: #f8fafb;
        border-radius: 10px;
        border-left: 4px solid #a78bfa;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: #5a6c7d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .detail-icon {
        margin-right: 8px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .description-box {
        background: #f8fafb;
        border-radius: 10px;
        padding: 20px;
        color: #5a6c7d;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .stat-card {
        background: linear-gradient(135deg, #a78bfa 0%, #7c3aed 100%);
        border-radius: 12px;
        padding: 20px;
        color: white;
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
    }

    .employees-list {
        margin-top: 20px;
    }

    .employee-item {
        padding: 12px;
        background: #f8fafb;
        border-radius: 8px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .employee-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .employee-code {
        font-size: 12px;
        color: #5a6c7d;
    }

    .timing-highlight {
        background: linear-gradient(135deg, rgba(167, 139, 250, 0.1) 0%, rgba(124, 58, 237, 0.1) 100%);
        border: 2px solid rgba(167, 139, 250, 0.3);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 25px;
        text-align: center;
    }

    .timing-display {
        font-size: 36px;
        font-weight: 700;
        color: #7c3aed;
        margin-bottom: 10px;
    }

    .timing-label {
        font-size: 14px;
        color: #5a6c7d;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
</style>

<div class="page-header">
    <h1 class="page-title">⏰ Shift Details</h1>
    <div class="header-actions">
        <a asp-action="Index" class="btn-back">← Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.ShiftId" class="btn-edit">✏️ Edit</a>
    </div>
</div>

<div class="details-container">
    <!-- Main Details Card -->
    <div class="details-card">
        <div class="card-header">
            <div class="shift-large-icon">⏰</div>
            <div class="card-header-info">
                <h2>
                    @Model.ShiftName
                    @if (Model.Status == PayRollManagementSystem.Models.ShiftStatus.Active)
                    {
                        <span class="badge badge-active">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-inactive">Inactive</span>
                    }
                    @if (Model.IsNightShift)
                    {
                        <span class="badge-night">🌙 Night Shift</span>
                    }
                    @if (Model.IsWeekendShift)
                    {
                        <span class="badge-weekend">📅 Weekend Shift</span>
                    }
                </h2>
                <p>@Model.ShiftCode</p>
            </div>
        </div>

        <!-- Timing Highlight -->
        <div class="timing-highlight">
            <div class="timing-display">
                @Model.StartTime.ToString(@"hh\:mm tt") - @Model.EndTime.ToString(@"hh\:mm tt")
            </div>
            <div class="timing-label">Shift Timing</div>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">👥 Assigned Employees</div>
                <div class="stat-value">@Model.AssignedEmployees</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">⏱️ Working Hours</div>
                <div class="stat-value">@Model.FullDayHours hrs</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">☕ Break Duration</div>
                <div class="stat-value">@Model.BreakDuration min</div>
            </div>
        </div>

        <!-- Shift Information -->
        <h3 class="section-title" style="margin-top: 30px;">📋 Shift Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Shift Code</div>
                <div class="detail-value">
                    <span class="detail-icon">🔖</span>@Model.ShiftCode
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Shift Name</div>
                <div class="detail-value">
                    <span class="detail-icon">⏰</span>@Model.ShiftName
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Status</div>
                <div class="detail-value">
                    <span class="detail-icon">✅</span>@Model.Status
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Shift Type</div>
                <div class="detail-value">
                    <span class="detail-icon">🏷️</span>
                    @if (Model.IsNightShift && Model.IsWeekendShift)
                    {
                        <text>Night & Weekend</text>
                    }
                    else if (Model.IsNightShift)
                    {
                        <text>Night Shift</text>
                    }
                    else if (Model.IsWeekendShift)
                    {
                        <text>Weekend Shift</text>
                    }
                    else
                    {
                        <text>Regular Shift</text>
                    }
                </div>
            </div>
        </div>

        <!-- Timing Details -->
        <h3 class="section-title">⏰ Timing Details</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Start Time</div>
                <div class="detail-value">
                    <span class="detail-icon">🌅</span>@Model.StartTime.ToString(@"hh\:mm tt")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">End Time</div>
                <div class="detail-value">
                    <span class="detail-icon">🌆</span>@Model.EndTime.ToString(@"hh\:mm tt")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Break Duration</div>
                <div class="detail-value">
                    <span class="detail-icon">☕</span>@Model.BreakDuration minutes
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Net Working Time</div>
                <div class="detail-value">
                    <span class="detail-icon">⏱️</span>@(Model.FullDayHours - ((decimal)Model.BreakDuration / 60m)) hours
                </div>
            </div>
        </div>

        <!-- Attendance Rules -->
        <h3 class="section-title">📊 Attendance Rules</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Grace Period</div>
                <div class="detail-value">
                    <span class="detail-icon">⏳</span>@Model.GracePeriod minutes
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Late Mark After</div>
                <div class="detail-value">
                    <span class="detail-icon">⚠️</span>@Model.LateMarkAfter minutes
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Half Day Hours</div>
                <div class="detail-value">
                    <span class="detail-icon">🕐</span>@Model.HalfDayHours hours
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Full Day Hours</div>
                <div class="detail-value">
                    <span class="detail-icon">🕗</span>@Model.FullDayHours hours
                </div>
            </div>
        </div>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <h3 class="section-title">📝 Description</h3>
            <div class="description-box">
                @Model.Description
            </div>
        }

        <!-- Timestamps -->
        <h3 class="section-title">🕒 Record Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Created On</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.CreatedAt.ToString("MMMM dd, yyyy")
                </div>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Last Updated</div>
                    <div class="detail-value">
                        <span class="detail-icon">🔄</span>@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            }
        </div>

        <!-- Employees List -->
        @if (Model.Employees != null && Model.Employees.Any())
        {
            <h3 class="section-title" style="margin-top: 30px;">👥 Employees on this Shift (@Model.Employees.Count)</h3>
            <div class="employees-list">
                @foreach (var employee in Model.Employees.Take(10))
                {
                    <div class="employee-item">
                        <div>
                            <div class="employee-name">@employee.Name</div>
                            <div class="employee-code">@employee.EmployeeCode - @employee.Department</div>
                        </div>
                    </div>
                }
                @if (Model.Employees.Count > 10)
                {
                    <p style="text-align: center; color: #5a6c7d; margin-top: 15px;">
                        And @(Model.Employees.Count - 10) more employees...
                    </p>
                }
            </div>
        }
    </div>
</div>
