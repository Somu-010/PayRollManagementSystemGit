@model PayRollManagementSystem.Models.Shift

@{
    ViewData["Title"] = "Add New Shift";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .form-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e8f4f8;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 0;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-group label .required {
                color: #ef4444;
            }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .readonly-field {
        background: #f8fafb;
        cursor: not-allowed;
    }

    .checkbox-group {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .checkbox-wrapper input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: #3498db;
        }

        .checkbox-wrapper label {
            margin: 0;
            cursor: pointer;
            font-weight: 500;
        }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #e8f4f8;
    }

    .btn-submit {
        padding: 12px 30px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

    .btn-cancel {
        padding: 12px 30px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.2);
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            color: #ef4444;
            font-size: 14px;
            margin-bottom: 5px;
        }

    .info-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2193b0;
    }
</style>

<div class="page-header">
    <h1 class="page-title">➕ Add New Shift</h1>
    <a asp-action="Index" class="btn-back">← Back to List</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- Basic Information -->
        <h3 class="form-section-title">📋 Shift Information</h3>
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="ShiftCode">Shift Code <span class="required">*</span></label>
                <input asp-for="ShiftCode" class="form-control readonly-field" value="@ViewBag.GeneratedShiftCode" readonly />
                <span asp-validation-for="ShiftCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShiftName">Shift Name <span class="required">*</span></label>
                <input asp-for="ShiftName" class="form-control" placeholder="e.g., Morning Shift, Night Shift" />
                <span asp-validation-for="ShiftName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">Status <span class="required">*</span></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<PayRollManagementSystem.Models.ShiftStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <!-- Timing Information -->
        <h3 class="form-section-title">⏰ Timing Information</h3>
        <div class="info-box">
            💡 <strong>Tip:</strong> For overnight shifts (e.g., 10 PM to 6 AM), enable "Night Shift" checkbox below.
        </div>
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="StartTime">Start Time <span class="required">*</span></label>
                <input asp-for="StartTime" class="form-control" type="time" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndTime">End Time <span class="required">*</span></label>
                <input asp-for="EndTime" class="form-control" type="time" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BreakDuration">Break Duration (minutes) <span class="required">*</span></label>
                <input asp-for="BreakDuration" class="form-control" type="number" min="0" max="480" placeholder="60" />
                <span asp-validation-for="BreakDuration" class="text-danger"></span>
            </div>
        </div>

        <!-- Attendance Rules -->
        <h3 class="form-section-title">📊 Attendance Rules</h3>
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="GracePeriod">Grace Period (minutes) <span class="required">*</span></label>
                <input asp-for="GracePeriod" class="form-control" type="number" min="0" max="60" placeholder="15" />
                <span asp-validation-for="GracePeriod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LateMarkAfter">Late Mark After (minutes) <span class="required">*</span></label>
                <input asp-for="LateMarkAfter" class="form-control" type="number" min="0" max="120" placeholder="15" />
                <span asp-validation-for="LateMarkAfter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HalfDayHours">Half Day Hours <span class="required">*</span></label>
                <input asp-for="HalfDayHours" class="form-control" type="number" step="0.5" min="0" max="12" placeholder="4" />
                <span asp-validation-for="HalfDayHours" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullDayHours">Full Day Hours <span class="required">*</span></label>
                <input asp-for="FullDayHours" class="form-control" type="number" step="0.5" min="0" max="24" placeholder="8" />
                <span asp-validation-for="FullDayHours" class="text-danger"></span>
            </div>
        </div>

        <!-- Shift Type -->
        <h3 class="form-section-title">🏷️ Shift Type</h3>
        <div class="checkbox-group">
            <div class="checkbox-wrapper">
                <input asp-for="IsNightShift" type="checkbox" id="nightShift" />
                <label for="nightShift">Night Shift (crosses midnight)</label>
            </div>
            <div class="checkbox-wrapper">
                <input asp-for="IsWeekendShift" type="checkbox" id="weekendShift" />
                <label for="weekendShift">Weekend Shift</label>
            </div>
        </div>

        <!-- Description -->
        <h3 class="form-section-title">📝 Additional Information</h3>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter shift description, notes, or special instructions..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn-cancel">Cancel</a>
            <button type="submit" class="btn-submit">✓ Create Shift</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}