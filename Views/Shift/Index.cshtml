@model IEnumerable<PayRollManagementSystem.Models.Shift>

@{
    ViewData["Title"] = "Shifts";
}

<style>
    /* Reusing all styles from Department Index */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-add {
        padding: 12px 24px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
            color: white;
        }

    .filters-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .filters-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        align-items: end;
    }

    .form-group label {
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        padding: 10px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
        width: 100%;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    .btn-filter {
        padding: 10px 20px;
        background: #2193b0;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-filter:hover {
            background: #1a7a94;
            transform: translateY(-2px);
        }

    .btn-clear {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

        .btn-clear:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .shifts-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .shifts-table {
        width: 100%;
        border-collapse: collapse;
    }

        .shifts-table thead {
            background: #f8fafb;
        }

        .shifts-table th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: #2c3e50;
            font-size: 14px;
            border-bottom: 2px solid #e8f4f8;
        }

        .shifts-table td {
            padding: 15px;
            border-bottom: 1px solid #f8fafb;
            font-size: 14px;
            color: #5a6c7d;
        }

        .shifts-table tbody tr {
            transition: all 0.3s;
        }

            .shifts-table tbody tr:hover {
                background: #f8fafb;
            }

    .shift-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: linear-gradient(135deg, #a78bfa 0%, #7c3aed 100%);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 16px;
        margin-right: 10px;
    }

    .shift-info {
        display: flex;
        align-items: center;
    }

    .shift-name {
        font-weight: 600;
        color: #2c3e50;
        display: block;
    }

    .shift-code {
        font-size: 12px;
        color: #5a6c7d;
    }

    .time-badge {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        background: rgba(109, 213, 237, 0.1);
        color: #2193b0;
        display: inline-block;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-inactive {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-night {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
        margin-left: 5px;
    }

    .badge-weekend {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
        margin-left: 5px;
    }

    .employee-count {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: #2193b0;
    }

    .action-btns {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.3s;
        cursor: pointer;
        border: none;
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-view {
        background: #e8f4f8;
        color: #2193b0;
    }

        .btn-view:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .btn-edit {
        background: rgba(109, 213, 237, 0.1);
        color: #2193b0;
    }

        .btn-edit:hover {
            background: rgba(109, 213, 237, 0.2);
            color: #2193b0;
        }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

        .btn-delete:hover {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

    .no-records {
        text-align: center;
        padding: 40px;
        color: #5a6c7d;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    /* Modal Styles */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9998;
        animation: fadeIn 0.3s;
    }

        .modal-overlay.active {
            display: block;
        }

    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        z-index: 9999;
        max-width: 700px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        animation: slideDown 0.3s;
    }

        .modal.active {
            display: block;
        }

    .modal-header {
        padding: 20px 25px;
        border-bottom: 2px solid #e8f4f8;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #5a6c7d;
        padding: 0;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.3s;
    }

        .modal-close:hover {
            background: #f8fafb;
            color: #2c3e50;
        }

    .modal-body {
        padding: 25px;
    }

    .modal-footer {
        padding: 20px 25px;
        border-top: 2px solid #e8f4f8;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-modal {
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
    }

    .btn-modal-cancel {
        background: #e8f4f8;
        color: #2193b0;
    }

        .btn-modal-cancel:hover {
            background: #d1e9f0;
        }

    .btn-modal-save {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-modal-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

    .btn-modal-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

        .btn-modal-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
        }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
    }

    .readonly-field {
        background: #f8fafb;
        cursor: not-allowed;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .delete-warning {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        gap: 12px;
        align-items: start;
    }

    .delete-warning-icon {
        font-size: 24px;
        flex-shrink: 0;
    }

    .delete-warning-text {
        color: #7f1d1d;
        line-height: 1.6;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }
</style>

<div class="page-header">
    <h1 class="page-title">⏰ Shift Management</h1>
    <a asp-action="Create" class="btn-add">➕ Add New Shift</a>
</div>

<div id="alertContainer"></div>

<!-- Filters -->
<div class="filters-card">
    <form asp-action="Index" method="get">
        <div class="filters-row">
            <div class="form-group">
                <label>Search</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="Shift name or code..." />
            </div>
            <div class="form-group">
                <label>Status</label>
                <select name="status" class="form-control">
                    <option value="">All Status</option>
                    <option value="Active" selected="@("Active" == ViewData["CurrentStatus"])">Active</option>
                    <option value="Inactive" selected="@("Inactive" == ViewData["CurrentStatus"])">Inactive</option>
                </select>
            </div>
            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn-filter">🔍 Filter</button>
                <a asp-action="Index" class="btn-clear">✕ Clear</a>
            </div>
        </div>
    </form>
</div>

<!-- Shifts Table -->
<div class="shifts-card">
    <div class="table-responsive">
        <table class="shifts-table">
            <thead>
                <tr>
                    <th>Shift</th>
                    <th>Timing</th>
                    <th>Duration</th>
                    <th>Break</th>
                    <th>Type</th>
                    <th>Employees</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="shift-info">
                                    <div class="shift-icon">⏰</div>
                                    <div>
                                        <span class="shift-name">@item.ShiftName</span>
                                        <span class="shift-code">@item.ShiftCode</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; flex-direction: column; gap: 4px;">
                                    <span class="time-badge">🌅 @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</span>
                                    <small style="color: #5a6c7d; font-size: 11px;">Grace: @item.GracePeriod min | Late: @item.LateMarkAfter min</small>
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; flex-direction: column; gap: 4px;">
                                    <span style="font-weight: 600; color: #2c3e50;">@item.FullDayHours hrs</span>
                                    <small style="color: #5a6c7d; font-size: 11px;">Half: @item.HalfDayHours hrs</small>
                                </div>
                            </td>
                            <td>@item.BreakDuration min</td>
                            <td>
                                <div style="display: flex; flex-wrap: wrap; gap: 4px;">
                                    @if (item.IsNightShift)
                                    {
                                        <span class="badge-night">🌙 Night</span>
                                    }
                                    @if (item.IsWeekendShift)
                                    {
                                        <span class="badge-weekend">📅 Weekend</span>
                                    }
                                    @if (!item.IsNightShift && !item.IsWeekendShift)
                                    {
                                        <span style="color: #5a6c7d;">Regular</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="employee-count">
                                    <span>👥</span>
                                    <span>@item.AssignedEmployees</span>
                                </span>
                            </td>
                            <td>
                                @if (item.Status == PayRollManagementSystem.Models.ShiftStatus.Active)
                                {
                                    <span class="badge badge-active">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a asp-action="Details" asp-route-id="@item.ShiftId" class="btn-action btn-view">👁️ View</a>
                                    <button onclick="openEditModal(@item.ShiftId)" class="btn-action btn-edit">✏️ Edit</button>
                                    <button onclick="openDeleteModal(@item.ShiftId, '@item.ShiftName', '@item.ShiftCode', @item.AssignedEmployees)" class="btn-action btn-delete">🗑️ Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="no-records">
                            <h3>No shifts found</h3>
                            <p>Start by adding your first shift</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal-overlay" id="editModalOverlay" onclick="closeEditModal()"></div>
<div class="modal" id="editModal">
    <div class="modal-header">
        <h3 class="modal-title">✏️ Edit Shift</h3>
        <button class="modal-close" onclick="closeEditModal()">×</button>
    </div>
    <form id="editForm" onsubmit="handleEdit(event)">
        <div class="modal-body">
            <input type="hidden" id="edit_ShiftId" name="ShiftId" />

            <div class="form-grid">
                <div class="form-group">
                    <label>Shift Code <span style="color: #ef4444;">*</span></label>
                    <input type="text" id="edit_ShiftCode" name="ShiftCode" class="form-control readonly-field" readonly required />
                </div>

                <div class="form-group">
                    <label>Shift Name <span style="color: #ef4444;">*</span></label>
                    <input type="text" id="edit_ShiftName" name="ShiftName" class="form-control" required />
                    <span class="text-danger" id="edit_ShiftName_error"></span>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Start Time <span style="color: #ef4444;">*</span></label>
                    <input type="time" id="edit_StartTime" name="StartTime" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>End Time <span style="color: #ef4444;">*</span></label>
                    <input type="time" id="edit_EndTime" name="EndTime" class="form-control" required />
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Break Duration (minutes) <span style="color: #ef4444;">*</span></label>
                    <input type="number" id="edit_BreakDuration" name="BreakDuration" class="form-control" min="0" max="480" required />
                </div>

                <div class="form-group">
                    <label>Grace Period (minutes) <span style="color: #ef4444;">*</span></label>
                    <input type="number" id="edit_GracePeriod" name="GracePeriod" class="form-control" min="0" max="60" required />
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Late Mark After (minutes) <span style="color: #ef4444;">*</span></label>
                    <input type="number" id="edit_LateMarkAfter" name="LateMarkAfter" class="form-control" min="0" max="120" required />
                </div>

                <div class="form-group">
                    <label>Status <span style="color: #ef4444;">*</span></label>
                    <select id="edit_Status" name="Status" class="form-control" required>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Half Day Hours <span style="color: #ef4444;">*</span></label>
                    <input type="number" id="edit_HalfDayHours" name="HalfDayHours" class="form-control" step="0.5" min="0" max="12" required />
                </div>

                <div class="form-group">
                    <label>Full Day Hours <span style="color: #ef4444;">*</span></label>
                    <input type="number" id="edit_FullDayHours" name="FullDayHours" class="form-control" step="0.5" min="0" max="24" required />
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                        <input type="checkbox" id="edit_IsNightShift" name="IsNightShift" value="true" style="width: auto;" />
                        <span>🌙 Night Shift</span>
                    </label>
                </div>

                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                        <input type="checkbox" id="edit_IsWeekendShift" name="IsWeekendShift" value="true" style="width: auto;" />
                        <span>📅 Weekend Shift</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label>Description</label>
                <textarea id="edit_Description" name="Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeEditModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-save">✓ Update Shift</button>
        </div>
    </form>
</div>

<!-- Delete Modal -->
<div class="modal-overlay" id="deleteModalOverlay" onclick="closeDeleteModal()"></div>
<div class="modal" id="deleteModal">
    <div class="modal-header">
        <h3 class="modal-title">🗑️ Delete Shift</h3>
        <button class="modal-close" onclick="closeDeleteModal()">×</button>
    </div>
    <form id="deleteForm" onsubmit="handleDelete(event)">
        <div class="modal-body">
            <input type="hidden" id="delete_ShiftId" name="id" />

            <div class="delete-warning">
                <span class="delete-warning-icon">⚠️</span>
                <div class="delete-warning-text">
                    <strong>Are you sure you want to delete this shift?</strong><br>
                    This action cannot be undone.
                </div>
            </div>

            <div style="background: #f8fafb; border-radius: 10px; padding: 20px; margin-bottom: 20px;">
                <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px;">
                    <div class="shift-icon">⏰</div>
                    <div>
                        <h3 style="margin: 0 0 5px 0; font-size: 18px; color: #2c3e50;" id="delete_name"></h3>
                        <p style="margin: 0; font-size: 14px; color: #5a6c7d;" id="delete_code"></p>
                    </div>
                </div>
                <div id="delete_employee_warning" style="display: none;">
                    <div class="alert-error">
                        <span>🚫</span>
                        <span id="delete_employee_message"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeDeleteModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-delete" id="delete_confirm_btn">🗑️ Delete Shift</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Show alert message
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = `<span>${type === 'success' ? '✓' : '✕'}</span><span>${message}</span>`;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        }

        // Edit Modal Functions
        async function openEditModal(id) {
            try {
                const response = await fetch(`/Shift/GetShift/${id}`);
                const data = await response.json();

                document.getElementById('edit_ShiftId').value = data.shiftId;
                document.getElementById('edit_ShiftCode').value = data.shiftCode;
                document.getElementById('edit_ShiftName').value = data.shiftName;
                document.getElementById('edit_StartTime').value = data.startTime;
                document.getElementById('edit_EndTime').value = data.endTime;
                document.getElementById('edit_BreakDuration').value = data.breakDuration;
                document.getElementById('edit_GracePeriod').value = data.gracePeriod;
                document.getElementById('edit_LateMarkAfter').value = data.lateMarkAfter;
                document.getElementById('edit_HalfDayHours').value = data.halfDayHours;
                document.getElementById('edit_FullDayHours').value = data.fullDayHours;
                document.getElementById('edit_Status').value = data.status;
                document.getElementById('edit_IsNightShift').checked = data.isNightShift;
                document.getElementById('edit_IsWeekendShift').checked = data.isWeekendShift;
                document.getElementById('edit_Description').value = data.description || '';

                document.getElementById('editModal').classList.add('active');
                document.getElementById('editModalOverlay').classList.add('active');
            } catch (error) {
                showAlert('Error loading shift data', 'error');
            }
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('active');
            document.getElementById('editModalOverlay').classList.remove('active');
            document.getElementById('editForm').reset();
            document.getElementById('edit_ShiftName_error').textContent = '';
        }

        async function handleEdit(event) {
            event.preventDefault();

            const formData = new FormData(event.target);
            formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

            try {
                const response = await fetch('/Shift/Edit', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeEditModal();
                    showAlert(result.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    document.getElementById('edit_ShiftName_error').textContent = result.message;
                    showAlert(result.message, 'error');
                }
            } catch (error) {
                showAlert('Error updating shift', 'error');
            }
        }

        // Delete Modal Functions
        function openDeleteModal(id, name, code, employeeCount) {
            document.getElementById('delete_ShiftId').value = id;
            document.getElementById('delete_name').textContent = name;
            document.getElementById('delete_code').textContent = code;

            const warningDiv = document.getElementById('delete_employee_warning');
            const confirmBtn = document.getElementById('delete_confirm_btn');

            if (employeeCount > 0) {
                warningDiv.style.display = 'block';
                document.getElementById('delete_employee_message').textContent =
                    `This shift has ${employeeCount} employee(s). Please reassign or remove them first.`;
                confirmBtn.disabled = true;
                confirmBtn.style.opacity = '0.5';
                confirmBtn.style.cursor = 'not-allowed';
            } else {
                warningDiv.style.display = 'none';
                confirmBtn.disabled = false;
                confirmBtn.style.opacity = '1';
                confirmBtn.style.cursor = 'pointer';
            }

            document.getElementById('deleteModal').classList.add('active');
            document.getElementById('deleteModalOverlay').classList.add('active');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('active');
            document.getElementById('deleteModalOverlay').classList.remove('active');
        }

        async function handleDelete(event) {
            event.preventDefault();

            const id = document.getElementById('delete_ShiftId').value;
            const formData = new FormData();
            formData.append('id', id);
            formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

            try {
                const response = await fetch('/Shift/Delete', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeDeleteModal();
                    showAlert(result.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(result.message, 'error');
                }
            } catch (error) {
                showAlert('Error deleting shift', 'error');
            }
        }

        // Show success message from TempData
        @if (TempData["Success"] != null)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                showAlert('@TempData["Success"]', 'success');
            });
            </text>
        }
    </script>
}