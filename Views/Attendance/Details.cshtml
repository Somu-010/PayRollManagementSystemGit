@model PayRollManagementSystem.Models.Attendance

@{
    ViewData["Title"] = "Attendance Details";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .details-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .details-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e8f4f8;
    }

    .attendance-large-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 32px;
        box-shadow: 0 4px 15px rgba(33, 147, 176, 0.3);
    }

    .card-header-info h2 {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .card-header-info p {
        color: #5a6c7d;
        margin: 0;
        font-size: 14px;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        display: inline-block;
        margin-left: 10px;
    }

    .badge-present {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-absent {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-late {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .badge-leave {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
    }

    .badge-halfday {
        background: rgba(234, 179, 8, 0.1);
        color: #eab308;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        border-radius: 12px;
        padding: 20px;
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        padding: 15px;
        background: #f8fafb;
        border-radius: 10px;
        border-left: 4px solid #6dd5ed;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: #5a6c7d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .detail-icon {
        margin-right: 8px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .remarks-box {
        background: #f8fafb;
        border-radius: 10px;
        padding: 20px;
        color: #5a6c7d;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .warning-box {
        background: rgba(251, 146, 60, 0.1);
        border: 2px solid rgba(251, 146, 60, 0.3);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        gap: 12px;
        align-items: start;
    }

    .warning-icon {
        font-size: 24px;
        flex-shrink: 0;
    }
</style>

<div class="page-header">
    <h1 class="page-title">📅 Attendance Details</h1>
    <div class="header-actions">
        <a asp-action="Index" class="btn-back">← Back to List</a>
    </div>
</div>

<div class="details-container">
    <div class="details-card">
        <div class="card-header">
            <div class="attendance-large-icon">@(Model.Employee?.Name?.Substring(0, Math.Min(2, Model.Employee.Name.Length)).ToUpper() ?? "NA")</div>
            <div class="card-header-info">
                <h2>
                    @(Model.Employee?.Name ?? "N/A")
                    @if (Model.Status == PayRollManagementSystem.Models.AttendanceStatus.Present)
                    {
                        <span class="badge badge-present">✓ Present</span>
                    }
                    else if (Model.Status == PayRollManagementSystem.Models.AttendanceStatus.Absent)
                    {
                        <span class="badge badge-absent">✕ Absent</span>
                    }
                    else if (Model.Status == PayRollManagementSystem.Models.AttendanceStatus.Late)
                    {
                        <span class="badge badge-late">⏰ Late</span>
                    }
                    else if (Model.Status == PayRollManagementSystem.Models.AttendanceStatus.OnLeave)
                    {
                        <span class="badge badge-leave">🏖️ On Leave</span>
                    }
                    else
                    {
                        <span class="badge badge-halfday">⏱️ Half Day</span>
                    }
                </h2>
                <p>@(Model.Employee?.EmployeeCode ?? "N/A") • @Model.Date.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
        </div>

        @if (Model.IsLate && Model.LateByMinutes.HasValue)
        {
            <div class="warning-box">
                <span class="warning-icon">⚠️</span>
                <div>
                    <strong>Late Arrival:</strong> This employee was late by @Model.LateByMinutes minutes.
                </div>
            </div>
        }

        @if (Model.IsEarlyLeave && Model.EarlyLeaveByMinutes.HasValue)
        {
            <div class="warning-box">
                <span class="warning-icon">🚪</span>
                <div>
                    <strong>Early Leave:</strong> This employee left early by @Model.EarlyLeaveByMinutes minutes.
                </div>
            </div>
        }

        @if (Model.IsHalfDay)
        {
            <div class="warning-box">
                <span class="warning-icon">⏱️</span>
                <div>
                    <strong>Half Day:</strong> This attendance is marked as half day due to insufficient working hours.
                </div>
            </div>
        }

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">⏰ Total Hours</div>
                <div class="stat-value">@(Model.TotalHours?.ToString("0.00") ?? "0.00") hrs</div>
            </div>
            @if (Model.OvertimeHours.HasValue && Model.OvertimeHours > 0)
            {
                <div class="stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <div class="stat-label">💰 Overtime</div>
                    <div class="stat-value">@Model.OvertimeHours.Value.ToString("0.00") hrs</div>
                </div>
            }
            @if (Model.IsLate && Model.LateByMinutes.HasValue)
            {
                <div class="stat-card" style="background: linear-gradient(135deg, #fb923c 0%, #f59e0b 100%);">
                    <div class="stat-label">⏳ Late By</div>
                    <div class="stat-value">@Model.LateByMinutes min</div>
                </div>
            }
            @if (Model.IsEarlyLeave && Model.EarlyLeaveByMinutes.HasValue)
            {
                <div class="stat-card" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">
                    <div class="stat-label">🚪 Early Leave</div>
                    <div class="stat-value">@Model.EarlyLeaveByMinutes min</div>
                </div>
            }
        </div>

        <!-- Employee Information -->
        <h3 class="section-title">👤 Employee Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Employee Name</div>
                <div class="detail-value">
                    <span class="detail-icon">👤</span>@(Model.Employee?.Name ?? "N/A")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Employee Code</div>
                <div class="detail-value">
                    <span class="detail-icon">🔖</span>@(Model.Employee?.EmployeeCode ?? "N/A")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Department</div>
                <div class="detail-value">
                    <span class="detail-icon">🏢</span>@(Model.Employee?.DepartmentNavigation?.Name ?? Model.Employee?.Department ?? "N/A")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Shift</div>
                <div class="detail-value">
                    <span class="detail-icon">⏰</span>@(Model.Employee?.ShiftNavigation?.ShiftName ?? "N/A")
                </div>
            </div>
        </div>

        <!-- Attendance Details -->
        <h3 class="section-title">📅 Attendance Details</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Date</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.Date.ToString("MMMM dd, yyyy")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Day</div>
                <div class="detail-value">
                    <span class="detail-icon">📆</span>@Model.Date.ToString("dddd")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Status</div>
                <div class="detail-value">
                    <span class="detail-icon">✅</span>@Model.Status
                </div>
            </div>
        </div>

        <!-- Time Information -->
        <h3 class="section-title">⏰ Time Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Check-In Time</div>
                <div class="detail-value">
                    <span class="detail-icon">⬇️</span>@Model.CheckInTime.ToString(@"hh\:mm")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Check-Out Time</div>
                <div class="detail-value">
                    <span class="detail-icon">⬆️</span>@(Model.CheckOutTime?.ToString(@"hh\:mm") ?? "Not checked out")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Total Hours</div>
                <div class="detail-value">
                    <span class="detail-icon">⏱️</span>@(Model.TotalHours?.ToString("0.00") ?? "0.00") hours
                </div>
            </div>

            @if (Model.OvertimeHours.HasValue && Model.OvertimeHours > 0)
            {
                <div class="detail-item">
                    <div class="detail-label">Overtime Hours</div>
                    <div class="detail-value">
                        <span class="detail-icon">💰</span>@Model.OvertimeHours.Value.ToString("0.00") hours
                    </div>
                </div>
            }
        </div>

        <!-- Additional Information -->
        @if (Model.IsLate || Model.IsHalfDay || Model.IsEarlyLeave)
        {
            <h3 class="section-title">📊 Additional Status</h3>
            <div class="details-grid">
                @if (Model.IsLate)
                {
                    <div class="detail-item">
                        <div class="detail-label">Late Arrival</div>
                        <div class="detail-value">
                            <span class="detail-icon">⚠️</span>Late by @(Model.LateByMinutes ?? 0) minutes
                        </div>
                    </div>
                }

                @if (Model.IsEarlyLeave)
                {
                    <div class="detail-item">
                        <div class="detail-label">Early Leave</div>
                        <div class="detail-value">
                            <span class="detail-icon">🚪</span>Left early by @(Model.EarlyLeaveByMinutes ?? 0) minutes
                        </div>
                    </div>
                }

                @if (Model.IsHalfDay)
                {
                    <div class="detail-item">
                        <div class="detail-label">Half Day</div>
                        <div class="detail-value">
                            <span class="detail-icon">⏱️</span>Marked as Half Day
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Remarks -->
        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <h3 class="section-title">📝 Remarks</h3>
            <div class="remarks-box">
                @Model.Remarks
            </div>
        }

        <!-- Timestamps -->
        <h3 class="section-title">🕒 Record Information</h3>
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Created On</div>
                <div class="detail-value">
                    <span class="detail-icon">📅</span>@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")
                </div>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">Last Updated</div>
                    <div class="detail-value">
                        <span class="detail-icon">🔄</span>@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy hh:mm tt")
                    </div>
                </div>
            }
        </div>
    </div>
</div>