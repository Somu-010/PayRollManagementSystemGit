@model PayRollManagementSystem.Models.Attendance

@{
    ViewData["Title"] = "Mark Attendance";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn-back {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .form-section-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e8f4f8;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 0;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-group label .required {
                color: #ef4444;
            }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #e8f4f8;
    }

    .btn-submit {
        padding: 12px 30px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

    .btn-cancel {
        padding: 12px 30px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.2);
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            color: #ef4444;
            font-size: 14px;
            margin-bottom: 5px;
        }

    .info-box {
        background: rgba(109, 213, 237, 0.1);
        border: 2px solid rgba(109, 213, 237, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2193b0;
        display: flex;
        align-items: start;
        gap: 12px;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 10px;
    }

        .checkbox-wrapper input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: #3498db;
        }

        .checkbox-wrapper label {
            margin: 0;
            cursor: pointer;
            font-weight: 500;
        }

    .shift-info-box {
        background: rgba(16, 185, 129, 0.1);
        border: 2px solid rgba(16, 185, 129, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-top: 15px;
        display: none;
    }

    .shift-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
        margin-top: 10px;
    }

    .shift-info-item {
        text-align: center;
        padding: 10px;
        background: white;
        border-radius: 8px;
    }

    .shift-info-item .label {
        font-size: 12px;
        color: #5a6c7d;
        margin-bottom: 5px;
    }

    .shift-info-item .value {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .calculation-box {
        background: rgba(251, 146, 60, 0.1);
        border: 2px solid rgba(251, 146, 60, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-top: 15px;
        display: none;
    }

    .calculation-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 10px;
    }

    .calculation-item {
        padding: 12px;
        background: white;
        border-radius: 8px;
        border-left: 4px solid #fb923c;
    }

    .calculation-item .label {
        font-size: 13px;
        color: #5a6c7d;
        margin-bottom: 5px;
    }

    .calculation-item .value {
        font-size: 18px;
        font-weight: 600;
    }

    .calculation-item .value.late {
        color: #ef4444;
    }

    .calculation-item .value.early {
        color: #fb923c;
    }

    .calculation-item .value.normal {
        color: #10b981;
    }

    .calculation-item .value.overtime {
        color: #6366f1;
    }
</style>

<div class="page-header">
    <h1 class="page-title">➕ Mark Attendance</h1>
    <a asp-action="Index" class="btn-back">← Back to List</a>
</div>

<div class="form-card">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- Employee & Date Information -->
        <h3 class="form-section-title">📋 Attendance Information</h3>

        <div class="info-box">
            <span style="font-size: 20px;">💡</span>
            <div>
                <strong>Quick Tip:</strong> The system will automatically calculate late arrivals, early leaves, total hours, and overtime based on the employee's shift settings.
            </div>
        </div>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="EmployeeId">Employee <span class="required">*</span></label>
                <select asp-for="EmployeeId" class="form-control" id="employeeSelect" required onchange="loadShiftInfo()">
                    <option value="">-- Select Employee --</option>
                    @foreach (var emp in ViewBag.Employees)
                    {
                        <option value="@emp.EmployeeId">@emp.Name (@emp.EmployeeCode)</option>
                    }
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                
                <!-- Shift Information Box -->
                <div class="shift-info-box" id="shiftInfoBox">
                    <div style="font-weight: 600; color: #10b981; margin-bottom: 10px;">⏰ Shift Details</div>
                    <div class="shift-info-grid">
                        <div class="shift-info-item">
                            <div class="label">Shift Name</div>
                            <div class="value" id="shiftName">-</div>
                        </div>
                        <div class="shift-info-item">
                            <div class="label">Start Time</div>
                            <div class="value" id="shiftStart">-</div>
                        </div>
                        <div class="shift-info-item">
                            <div class="label">End Time</div>
                            <div class="value" id="shiftEnd">-</div>
                        </div>
                        <div class="shift-info-item">
                            <div class="label">Grace Period</div>
                            <div class="value" id="gracePeriod">-</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Date">Date <span class="required">*</span></label>
                <input asp-for="Date" class="form-control" type="date" value="@ViewBag.TodayDate" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">Attendance Status <span class="required">*</span></label>
                <select asp-for="Status" class="form-control" required>
                    <option value="Present">✓ Present</option>
                    <option value="Absent">✕ Absent</option>
                    <option value="Late">⏰ Late</option>
                    <option value="OnLeave">🏖️ On Leave</option>
                    <option value="HalfDay">⏱️ Half Day</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <!-- Time Information -->
        <h3 class="form-section-title">⏰ Time Information</h3>
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="CheckInTime">Check-In Time <span class="required">*</span></label>
                <input asp-for="CheckInTime" class="form-control" type="time" required id="checkInTime" onchange="calculateAttendance()" />
                <span asp-validation-for="CheckInTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckOutTime">Check-Out Time</label>
                <input asp-for="CheckOutTime" class="form-control" type="time" id="checkOutTime" onchange="calculateAttendance()" />
                <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                <small style="color: #5a6c7d; font-size: 12px; margin-top: 5px; display: block;">Leave empty if not checked out yet</small>
            </div>
        </div>

        <!-- Real-time Calculation Display -->
        <div class="calculation-box" id="calculationBox">
            <div style="font-weight: 600; color: #fb923c; margin-bottom: 10px;">📊 Attendance Calculation</div>
            <div class="calculation-grid">
                <div class="calculation-item">
                    <div class="label">Arrival Status</div>
                    <div class="value normal" id="arrivalStatus">On Time</div>
                </div>
                <div class="calculation-item">
                    <div class="label">Leave Status</div>
                    <div class="value normal" id="leaveStatus">-</div>
                </div>
                <div class="calculation-item">
                    <div class="label">Total Hours</div>
                    <div class="value normal" id="totalHours">-</div>
                </div>
                <div class="calculation-item">
                    <div class="label">Overtime</div>
                    <div class="value overtime" id="overtime">-</div>
                </div>
            </div>
        </div>

        <!-- Additional Information -->
        <h3 class="form-section-title">📝 Additional Information</h3>

        <div class="form-group">
            <label asp-for="Remarks">Remarks/Notes</label>
            <textarea asp-for="Remarks" class="form-control" placeholder="Enter any additional notes or remarks..."></textarea>
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn-cancel">Cancel</a>
            <button type="submit" class="btn-submit">✓ Mark Attendance</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let shiftData = null;

        async function loadShiftInfo() {
            const employeeId = document.getElementById('employeeSelect').value;
            if (!employeeId) {
                document.getElementById('shiftInfoBox').style.display = 'none';
                document.getElementById('calculationBox').style.display = 'none';
                return;
            }

            try {
                const response = await fetch(`/api/GetEmployeeShift/${employeeId}`);
                const data = await response.json();

                if (data.hasShift) {
                    shiftData = data.shift;
                    document.getElementById('shiftName').textContent = data.shift.shiftName;
                    document.getElementById('shiftStart').textContent = data.shift.startTime;
                    document.getElementById('shiftEnd').textContent = data.shift.endTime;
                    document.getElementById('gracePeriod').textContent = data.shift.gracePeriod + ' min';
                    document.getElementById('shiftInfoBox').style.display = 'block';
                } else {
                    document.getElementById('shiftInfoBox').style.display = 'none';
                    shiftData = null;
                }
            } catch (error) {
                console.error('Error loading shift info:', error);
            }
        }

        function timeToMinutes(time) {
            const [hours, minutes] = time.split(':').map(Number);
            return hours * 60 + minutes;
        }

        function minutesToTime(minutes) {
            const hours = Math.floor(minutes / 60);
            const mins = minutes % 60;
            return `${hours.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}`;
        }

        function calculateAttendance() {
            const checkInTime = document.getElementById('checkInTime').value;
            const checkOutTime = document.getElementById('checkOutTime').value;

            if (!checkInTime || !shiftData) {
                document.getElementById('calculationBox').style.display = 'none';
                return;
            }

            document.getElementById('calculationBox').style.display = 'block';

            // Calculate arrival status
            const checkInMinutes = timeToMinutes(checkInTime);
            const shiftStartMinutes = timeToMinutes(shiftData.startTime);
            const gracePeriodEnd = shiftStartMinutes + shiftData.gracePeriod;

            const arrivalStatusEl = document.getElementById('arrivalStatus');
            if (checkInMinutes > gracePeriodEnd) {
                const lateMinutes = checkInMinutes - shiftStartMinutes;
                arrivalStatusEl.textContent = `Late by ${lateMinutes} min`;
                arrivalStatusEl.className = 'value late';
            } else {
                arrivalStatusEl.textContent = 'On Time ✓';
                arrivalStatusEl.className = 'value normal';
            }

            // Calculate leave status and hours if checkout time is provided
            if (checkOutTime) {
                const checkOutMinutes = timeToMinutes(checkOutTime);
                const shiftEndMinutes = timeToMinutes(shiftData.endTime);

                // Calculate total minutes worked
                let totalMinutes = checkOutMinutes - checkInMinutes;
                
                // Handle night shift
                if (shiftData.isNightShift && checkOutMinutes < checkInMinutes) {
                    totalMinutes = (24 * 60) - checkInMinutes + checkOutMinutes;
                }

                // Subtract break duration
                totalMinutes -= shiftData.breakDuration;

                const totalHours = totalMinutes / 60;
                document.getElementById('totalHours').textContent = totalHours.toFixed(2) + ' hrs';

                // Check early leave
                const leaveStatusEl = document.getElementById('leaveStatus');
                if (checkOutMinutes < shiftEndMinutes) {
                    const earlyMinutes = shiftEndMinutes - checkOutMinutes;
                    if (earlyMinutes > 5) {
                        leaveStatusEl.textContent = `Early by ${earlyMinutes} min`;
                        leaveStatusEl.className = 'value early';
                    } else {
                        leaveStatusEl.textContent = 'Normal ✓';
                        leaveStatusEl.className = 'value normal';
                    }
                } else {
                    leaveStatusEl.textContent = 'Full Time ✓';
                    leaveStatusEl.className = 'value normal';
                }

                // Calculate overtime
                const overtimeEl = document.getElementById('overtime');
                if (totalHours > shiftData.fullDayHours) {
                    const overtimeHours = totalHours - shiftData.fullDayHours;
                    overtimeEl.textContent = overtimeHours.toFixed(2) + ' hrs';
                    overtimeEl.className = 'value overtime';
                } else {
                    overtimeEl.textContent = 'No OT';
                    overtimeEl.className = 'value normal';
                }

                // Check half day
                if (totalHours < shiftData.halfDayHours) {
                    document.getElementById('totalHours').innerHTML = totalHours.toFixed(2) + ' hrs <span style="color: #eab308; font-size: 12px;">(Half Day)</span>';
                }
            } else {
                document.getElementById('leaveStatus').textContent = 'Not Checked Out';
                document.getElementById('leaveStatus').className = 'value normal';
                document.getElementById('totalHours').textContent = '-';
                document.getElementById('overtime').textContent = '-';
            }
        }
    </script>
}