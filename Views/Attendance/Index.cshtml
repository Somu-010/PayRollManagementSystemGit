@model IEnumerable<PayRollManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Management";
}

<style>
    /* Reusing styles from Department Index with attendance-specific modifications */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-add, .btn-bulk {
        padding: 12px 24px;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        border: none;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-add:hover, .btn-bulk:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
            color: white;
        }

    .btn-bulk {
        background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

        .btn-bulk:hover {
            box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
        }

    .filters-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .filters-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        align-items: end;
    }

    .form-group label {
        font-size: 14px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        padding: 10px 15px;
        border: 2px solid #e8f4f8;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
        width: 100%;
    }

        .form-control:focus {
            border-color: #6dd5ed;
            box-shadow: 0 0 0 3px rgba(109, 213, 237, 0.1);
            outline: none;
        }

    .btn-filter {
        padding: 10px 20px;
        background: #2193b0;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-filter:hover {
            background: #1a7a94;
            transform: translateY(-2px);
        }

    .btn-clear {
        padding: 10px 20px;
        background: #e8f4f8;
        color: #2193b0;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

        .btn-clear:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .attendance-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .attendance-table {
        width: 100%;
        border-collapse: collapse;
    }

        .attendance-table thead {
            background: #f8fafb;
        }

        .attendance-table th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: #2c3e50;
            font-size: 14px;
            border-bottom: 2px solid #e8f4f8;
        }

        .attendance-table td {
            padding: 15px;
            border-bottom: 1px solid #f8fafb;
            font-size: 14px;
            color: #5a6c7d;
        }

        .attendance-table tbody tr {
            transition: all 0.3s;
        }

            .attendance-table tbody tr:hover {
                background: #f8fafb;
            }

    .employee-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 14px;
        margin-right: 10px;
    }

    .employee-info {
        display: flex;
        align-items: center;
    }

    .employee-name {
        font-weight: 600;
        color: #2c3e50;
        display: block;
    }

    .employee-code {
        font-size: 12px;
        color: #5a6c7d;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-present {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .badge-absent {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .badge-late {
        background: rgba(251, 146, 60, 0.1);
        color: #fb923c;
    }

    .badge-leave {
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
    }

    .badge-halfday {
        background: rgba(234, 179, 8, 0.1);
        color: #eab308;
    }

    .time-display {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .time-in {
        color: #10b981;
        font-weight: 600;
    }

    .time-out {
        color: #2193b0;
        font-weight: 600;
    }

    .action-btns {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.3s;
        cursor: pointer;
        border: none;
        background: #e8f4f8;
        color: #2193b0;
    }

    .btn-view {
        background: #e8f4f8;
        color: #2193b0;
    }

        .btn-view:hover {
            background: #d1e9f0;
            color: #2193b0;
        }

    .btn-edit {
        background: rgba(109, 213, 237, 0.1);
        color: #2193b0;
    }

        .btn-edit:hover {
            background: rgba(109, 213, 237, 0.2);
            color: #2193b0;
        }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

        .btn-delete:hover {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

    .no-records {
        text-align: center;
        padding: 40px;
        color: #5a6c7d;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    /* Modal styles (same as Department) */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9998;
    }

        .modal-overlay.active {
            display: block;
        }

    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        z-index: 9999;
        max-width: 700px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
    }

        .modal.active {
            display: block;
        }

    .modal-header {
        padding: 20px 25px;
        border-bottom: 2px solid #e8f4f8;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #5a6c7d;
        padding: 0;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.3s;
    }

        .modal-close:hover {
            background: #f8fafb;
            color: #2c3e50;
        }

    .modal-body {
        padding: 25px;
    }

    .modal-footer {
        padding: 20px 25px;
        border-top: 2px solid #e8f4f8;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-modal {
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
    }

    .btn-modal-cancel {
        background: #e8f4f8;
        color: #2193b0;
    }

        .btn-modal-cancel:hover {
            background: #d1e9f0;
        }

    .btn-modal-save {
        background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(33, 147, 176, 0.3);
    }

        .btn-modal-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(33, 147, 176, 0.4);
        }

    .btn-modal-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

        .btn-modal-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
        }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
    }

    .readonly-field {
        background: #f8fafb;
        cursor: not-allowed;
    }

    .text-danger {
        color: #ef4444;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }
</style>

<div class="page-header">
    <h1 class="page-title">?? Attendance Management</h1>
    <div class="header-actions">
        <a asp-action="MonthlyReport" class="btn-bulk" style="background: linear-gradient(135deg, #a78bfa 0%, #7c3aed 100%);">?? Monthly Report</a>
        <a asp-action="BulkMarkAttendance" class="btn-bulk">? Bulk Mark</a>
        <a asp-action="Create" class="btn-add">? Mark Attendance</a>
    </div>
</div>

<div id="alertContainer"></div>

<!-- Filters -->
<div class="filters-card">
    <form asp-action="Index" method="get">
        <div class="filters-row">
            <div class="form-group">
                <label>Search Employee</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="Employee name or code..." />
            </div>
            <div class="form-group">
                <label>From Date</label>
                <input type="date" name="fromDate" value="@ViewData["FromDate"]" class="form-control" />
            </div>
            <div class="form-group">
                <label>To Date</label>
                <input type="date" name="toDate" value="@ViewData["ToDate"]" class="form-control" />
            </div>
            <div class="form-group">
                <label>Status</label>
                <select name="status" class="form-control">
                    <option value="">All Status</option>
                    <option value="Present" selected="@("Present" == ViewData["CurrentStatus"])">Present</option>
                    <option value="Absent" selected="@("Absent" == ViewData["CurrentStatus"])">Absent</option>
                    <option value="Late" selected="@("Late" == ViewData["CurrentStatus"])">Late</option>
                    <option value="OnLeave" selected="@("OnLeave" == ViewData["CurrentStatus"])">On Leave</option>
                    <option value="HalfDay" selected="@("HalfDay" == ViewData["CurrentStatus"])">Half Day</option>
                </select>
            </div>
            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn-filter">?? Filter</button>
                <a asp-action="Index" class="btn-clear">? Clear</a>
            </div>
        </div>
    </form>
</div>

<!-- Attendance Table -->
<div class="attendance-card">
    <div class="table-responsive">
        <table class="attendance-table">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Date</th>
                    <th>Check-In</th>
                    <th>Check-Out</th>
                    <th>Total Hours</th>
                    <th>Status</th>
                    <th>Late/Overtime</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="employee-info">
                                    <div class="employee-avatar">@(item.Employee?.Name.Substring(0, Math.Min(2, item.Employee.Name.Length)).ToUpper() ?? "NA")</div>
                                    <div>
                                        <span class="employee-name">@(item.Employee?.Name ?? "N/A")</span>
                                        <span class="employee-code">@(item.Employee?.EmployeeCode ?? "N/A") • @(item.Employee?.DepartmentNavigation?.Name ?? item.Employee?.Department ?? "N/A")</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; flex-direction: column; gap: 2px;">
                                    <span style="font-weight: 600;">@item.Date.ToString("MMM dd, yyyy")</span>
                                    <span style="font-size: 11px; color: #5a6c7d;">@item.Date.ToString("dddd")</span>
                                </div>
                            </td>
                            <td>
                                <span class="time-in">?? @item.CheckInTime.ToString(@"hh\:mm tt")</span>
                                @if (item.IsLate)
                                {
                                    <span style="font-size: 11px; color: #fb923c; display: block;">Late: @item.LateByMinutes min</span>
                                }
                            </td>
                            <td>
                                @if (item.CheckOutTime.HasValue)
                                {
                                    <span class="time-out">?? @item.CheckOutTime.Value.ToString(@"hh\:mm tt")</span>
                                }
                                else
                                {
                                    <span style="color: #5a6c7d;">-</span>
                                }
                            </td>
                            <td>
                                @if (item.TotalHours.HasValue)
                                {
                                    <span style="font-weight: 600; color: #2193b0;">@item.TotalHours.Value.ToString("0.00") hrs</span>
                                    @if (item.IsHalfDay)
                                    {
                                        <span style="font-size: 11px; color: #eab308; display: block;">Half Day</span>
                                    }
                                }
                                else
                                {
                                    <span style="color: #5a6c7d;">-</span>
                                }
                            </td>
                            <td>
                                @if (item.Status == PayRollManagementSystem.Models.AttendanceStatus.Present)
                                {
                                    <span class="badge badge-present">? Present</span>
                                }
                                else if (item.Status == PayRollManagementSystem.Models.AttendanceStatus.Absent)
                                {
                                    <span class="badge badge-absent">? Absent</span>
                                }
                                else if (item.Status == PayRollManagementSystem.Models.AttendanceStatus.Late)
                                {
                                    <span class="badge badge-late">? Late</span>
                                }
                                else if (item.Status == PayRollManagementSystem.Models.AttendanceStatus.OnLeave)
                                {
                                    <span class="badge badge-leave">??? On Leave</span>
                                }
                                else if (item.Status == PayRollManagementSystem.Models.AttendanceStatus.HalfDay)
                                {
                                    <span class="badge badge-halfday">½ Half Day</span>
                                }
                            </td>
                            <td>
                                @if (item.OvertimeHours.HasValue && item.OvertimeHours > 0)
                                {
                                    <span style="color: #10b981; font-weight: 600;">+@item.OvertimeHours.Value.ToString("0.00") hrs OT</span>
                                }
                                else if (item.IsLate)
                                {
                                    <span style="color: #fb923c; font-weight: 600;">Late @item.LateByMinutes min</span>
                                }
                                else
                                {
                                    <span style="color: #5a6c7d;">-</span>
                                }
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a asp-action="Details" asp-route-id="@item.AttendanceId" class="btn-action btn-view">??? View</a>
                                    <button onclick="openEditModal(@item.AttendanceId)" class="btn-action btn-edit">?? Edit</button>
                                    <button onclick="openDeleteModal(@item.AttendanceId, '@(item.Employee?.Name ?? "Employee")', '@item.Date.ToString("yyyy-MM-dd")')" class="btn-action btn-delete">??? Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="no-records">
                            <h3>No attendance records found</h3>
                            <p>Start by marking attendance for your employees</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal-overlay" id="editModalOverlay" onclick="closeEditModal()"></div>
<div class="modal" id="editModal">
    <div class="modal-header">
        <h3 class="modal-title">?? Edit Attendance</h3>
        <button class="modal-close" onclick="closeEditModal()">×</button>
    </div>
    <form id="editForm" onsubmit="handleEdit(event)">
        <div class="modal-body">
            <input type="hidden" id="edit_AttendanceId" name="AttendanceId" />
            <input type="hidden" id="edit_EmployeeId" name="EmployeeId" />
            <input type="hidden" id="edit_Date" name="Date" />

            <div class="form-group" style="margin-bottom: 20px;">
                <label>Employee</label>
                <input type="text" id="edit_EmployeeName" class="form-control readonly-field" readonly />
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Check-In Time <span style="color: #ef4444;">*</span></label>
                    <input type="time" id="edit_CheckInTime" name="CheckInTime" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Check-Out Time</label>
                    <input type="time" id="edit_CheckOutTime" name="CheckOutTime" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Status <span style="color: #ef4444;">*</span></label>
                <select id="edit_Status" name="Status" class="form-control" required>
                    <option value="Present">Present</option>
                    <option value="Absent">Absent</option>
                    <option value="Late">Late</option>
                    <option value="OnLeave">On Leave</option>
                    <option value="HalfDay">Half Day</option>
                </select>
            </div>

            <div class="form-group">
                <label>Remarks</label>
                <textarea id="edit_Remarks" name="Remarks" class="form-control"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeEditModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-save">? Update Attendance</button>
        </div>
    </form>
</div>

<!-- Delete Modal -->
<div class="modal-overlay" id="deleteModalOverlay" onclick="closeDeleteModal()"></div>
<div class="modal" id="deleteModal">
    <div class="modal-header">
        <h3 class="modal-title">??? Delete Attendance</h3>
        <button class="modal-close" onclick="closeDeleteModal()">×</button>
    </div>
    <form id="deleteForm" onsubmit="handleDelete(event)">
        <div class="modal-body">
            <input type="hidden" id="delete_AttendanceId" name="id" />

            <div style="background: rgba(239, 68, 68, 0.1); border: 2px solid rgba(239, 68, 68, 0.2); border-radius: 10px; padding: 15px; margin-bottom: 20px; display: flex; gap: 12px; align-items: start;">
                <span style="font-size: 24px; flex-shrink: 0;">??</span>
                <div style="color: #7f1d1d; line-height: 1.6;">
                    <strong>Are you sure you want to delete this attendance record?</strong><br>
                    This action cannot be undone.
                </div>
            </div>

            <div style="background: #f8fafb; border-radius: 10px; padding: 20px;">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <div class="employee-avatar" id="delete_avatar">EM</div>
                    <div>
                        <h3 style="margin: 0 0 5px 0; font-size: 18px; color: #2c3e50;" id="delete_name"></h3>
                        <p style="margin: 0; font-size: 14px; color: #5a6c7d;" id="delete_date"></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal btn-modal-cancel" onclick="closeDeleteModal()">Cancel</button>
            <button type="submit" class="btn-modal btn-modal-delete">??? Delete Record</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = `<span>${type === 'success' ? '?' : '?'}</span><span>${message}</span>`;
            alertContainer.appendChild(alert);

            setTimeout(() => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        }

        async function openEditModal(id) {
            try {
                const response = await fetch(`/Attendance/GetAttendance/${id}`);
                const data = await response.json();

                document.getElementById('edit_AttendanceId').value = data.attendanceId;
                document.getElementById('edit_EmployeeId').value = data.employeeId;
                document.getElementById('edit_EmployeeName').value = data.employeeName;
                document.getElementById('edit_Date').value = data.date;
                document.getElementById('edit_CheckInTime').value = data.checkInTime;
                document.getElementById('edit_CheckOutTime').value = data.checkOutTime || '';
                document.getElementById('edit_Status').value = data.status;
                document.getElementById('edit_Remarks').value = data.remarks || '';

                document.getElementById('editModal').classList.add('active');
                document.getElementById('editModalOverlay').classList.add('active');
            } catch (error) {
                showAlert('Error loading attendance data', 'error');
            }
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('active');
            document.getElementById('editModalOverlay').classList.remove('active');
            document.getElementById('editForm').reset();
        }

        async function handleEdit(event) {
            event.preventDefault();

            const formData = new FormData(event.target);
            formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

            try {
                const response = await fetch('/Attendance/Edit', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeEditModal();
                    showAlert(result.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(result.message, 'error');
                }
            } catch (error) {
                showAlert('Error updating attendance', 'error');
            }
        }

        function openDeleteModal(id, name, date) {
