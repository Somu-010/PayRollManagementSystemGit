@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #e8f4f8 0%, #f0f8ff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            max-width: 1100px;
            width: 100%;
            background: #ffffff;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(52, 152, 219, 0.15);
            min-height: 600px;
        }

        .form-section {
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 40px;
        }

        .brand-logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 20px;
            box-shadow: 0 4px 15px rgba(33, 147, 176, 0.2);
        }

        .brand-name {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
        }

        .auth-tabs {
            display: flex;
            gap: 30px;
            margin-bottom: 40px;
            border-bottom: 2px solid #e8f4f8;
        }

        .auth-tab {
            padding: 12px 0;
            font-size: 16px;
            font-weight: 600;
            color: #5a6c7d;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            margin-bottom: -2px;
            text-decoration: none;
            transition: all 0.3s;
        }

        .auth-tab.active {
            color: #3498db;
            border-bottom-color: #3498db;
        }

        .auth-tab:hover {
            color: #3498db;
        }

        h1 {
            font-size: 32px;
            color: #2c3e50;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .subtitle {
            color: #5a6c7d;
            margin-bottom: 30px;
            font-size: 15px;
        }

        .login-info {
            background: linear-gradient(135deg, #f8fafb 0%, #e8f4f8 100%);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 25px;
            border-left: 4px solid #2193b0;
        }

        .login-info h4 {
            font-size: 14px;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .login-info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        .login-type {
            background: white;
            padding: 10px 12px;
            border-radius: 8px;
            font-size: 12px;
        }

        .login-type-title {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 2px;
        }

        .login-type-desc {
            color: #5a6c7d;
        }

        .admin-creds {
            background: rgba(239, 68, 68, 0.1);
            border: 1px dashed #ef4444;
            border-radius: 8px;
            padding: 10px;
            margin-top: 10px;
            font-size: 11px;
            color: #ef4444;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            color: #2c3e50;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #5a6c7d;
            font-size: 18px;
        }

        .form-group input {
            width: 100%;
            padding: 14px 16px 14px 45px;
            border: 2px solid #e8f4f8;
            border-radius: 10px;
            font-size: 15px;
            color: #2c3e50;
            transition: all 0.3s ease;
            background: #f8fafb;
        }

        .form-group input:focus {
            outline: none;
            border-color: #6dd5ed;
            background: #ffffff;
            box-shadow: 0 0 0 4px rgba(109, 213, 237, 0.1);
        }

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .checkbox-wrapper input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: #3498db;
        }

        .checkbox-wrapper label {
            color: #5a6c7d;
            cursor: pointer;
            margin: 0;
        }

        .forgot-link {
            color: #3498db;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

        .forgot-link:hover {
            color: #2193b0;
        }

        .btn-primary {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(33, 147, 176, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(33, 147, 176, 0.4);
        }

        .text-danger {
            color: #e74c3c;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .validation-summary-errors {
            background: #fee;
            border: 2px solid #e74c3c;
            border-radius: 10px;
            padding: 16px;
            margin-bottom: 24px;
        }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .validation-summary-errors li {
            color: #e74c3c;
            font-size: 14px;
        }

        .visual-section {
            background: linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%);
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .visual-section::before {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            top: -250px;
            right: -250px;
        }

        .visual-section::after {
            content: '';
            position: absolute;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
            bottom: -200px;
            left: -200px;
        }

        .visual-content {
            position: relative;
            z-index: 1;
        }

        .visual-icon {
            width: 120px;
            height: 120px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            backdrop-filter: blur(10px);
            font-size: 60px;
        }

        .visual-section h2 {
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .visual-section p {
            font-size: 18px;
            opacity: 0.95;
            line-height: 1.6;
            max-width: 400px;
        }

        .features {
            margin-top: 40px;
            display: grid;
            gap: 20px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 15px;
            background: rgba(255, 255, 255, 0.15);
            padding: 15px 20px;
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        .feature-icon {
            width: 24px;
            height: 24px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
        }

        @@media (max-width: 968px) {
            .auth-container {
                grid-template-columns: 1fr;
            }

            .visual-section {
                display: none;
            }
        }

        @@media (max-width: 480px) {
            .form-section {
                padding: 40px 30px;
            }

            h1 {
                font-size: 26px;
            }

            .login-info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="form-section">
            <div class="brand-logo">
                <div class="brand-logo-icon">PR</div>
                <span class="brand-name">PayRoll System</span>
            </div>

            <div class="auth-tabs">
                <a asp-page="./Login" class="auth-tab active">Sign In</a>
                <a asp-page="./Register" class="auth-tab">Sign Up</a>
            </div>

            <h1>Welcome Back</h1>
            <p class="subtitle">Please enter your credentials to access your account</p>

            <!-- Login Type Info -->
            <div class="login-info">
                <h4><i class="fas fa-lock" style="margin-right: 8px;"></i> Login Types</h4>
                <div class="login-info-grid">
                    <div class="login-type">
                        <div class="login-type-title"><i class="fas fa-user-tie"></i> Admin/HR</div>
                        <div class="login-type-desc">Full system access</div>
                    </div>
                    <div class="login-type">
                        <div class="login-type-title"><i class="fas fa-user"></i> Employee</div>
                        <div class="login-type-desc">Personal portal access</div>
                    </div>
                </div>
                <div class="admin-creds">
                    <strong>Demo Admin:</strong> admin@payrollpro.com / Admin@123
                </div>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Email">Email Address</label>
                    <div class="input-wrapper">
                        <span class="input-icon"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Input.Email" type="email" placeholder="Enter your email" autocomplete="username" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password">Password</label>
                    <div class="input-wrapper">
                        <span class="input-icon"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.Password" type="password" placeholder="Enter your password" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-options">
                    <div class="checkbox-wrapper">
                        <input asp-for="Input.RememberMe" type="checkbox" id="remember" />
                        <label for="remember">Remember me</label>
                    </div>
                    <a asp-page="./ForgotPassword" class="forgot-link">Forgot Password?</a>
                </div>

                <button type="submit" class="btn-primary">Sign In</button>
            </form>
        </div>

        <div class="visual-section">
            <div class="visual-content">
                <div class="visual-icon"><i class="fas fa-briefcase"></i></div>
                <h2>PayRoll Management</h2>
                <p>Streamline your payroll process with our comprehensive management system</p>

                <div class="features">
                    <div class="feature-item">
                        <div class="feature-icon"><i class="fas fa-user-tie"></i></div>
                        <span>Admin: Manage all HR operations</span>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon"><i class="fas fa-user"></i></div>
                        <span>Employee: View payslips & apply leaves</span>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon"><i class="fas fa-shield-alt"></i></div>
                        <span>Secure & Role-based Access</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>