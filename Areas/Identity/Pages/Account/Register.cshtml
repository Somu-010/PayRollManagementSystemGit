@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e1e2e 0%, #2d2d44 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            max-width: 1200px;
            width: 100%;
            background: #ffffff;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            min-height: 600px;
        }

        .form-section {
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 40px;
        }

        .brand-logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 20px;
        }

        .brand-name {
            font-size: 18px;
            font-weight: 600;
            color: #1e1e2e;
        }

        .auth-tabs {
            display: flex;
            gap: 30px;
            margin-bottom: 40px;
            border-bottom: 2px solid #e0e0e0;
        }

        .auth-tab {
            padding: 12px 0;
            font-size: 16px;
            font-weight: 600;
            color: #999;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            margin-bottom: -2px;
            text-decoration: none;
            transition: all 0.3s;
        }

            .auth-tab.active {
                color: #667eea;
                border-bottom-color: #667eea;
            }

        h1 {
            font-size: 32px;
            color: #1e1e2e;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .subtitle {
            color: #666;
            margin-bottom: 40px;
            font-size: 15px;
        }

        .form-group {
            margin-bottom: 24px;
        }

            .form-group label {
                display: block;
                color: #1e1e2e;
                font-size: 14px;
                font-weight: 600;
                margin-bottom: 8px;
            }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 18px;
        }

        .form-group input {
            width: 100%;
            padding: 14px 16px 14px 45px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 15px;
            color: #1e1e2e;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

            .form-group input:focus {
                outline: none;
                border-color: #667eea;
                background: #ffffff;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            }

        .btn-primary {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            margin-top: 10px;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
            }

            .btn-primary:active {
                transform: translateY(0);
            }

        .text-danger {
            color: #e74c3c;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .validation-summary-errors {
            background: #fee;
            border: 2px solid #e74c3c;
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 24px;
        }

            .validation-summary-errors ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .validation-summary-errors li {
                color: #e74c3c;
                font-size: 14px;
            }

        .visual-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .visual-section::before {
                content: '';
                position: absolute;
                width: 500px;
                height: 500px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                top: -250px;
                right: -250px;
            }

            .visual-section::after {
                content: '';
                position: absolute;
                width: 400px;
                height: 400px;
                background: rgba(255, 255, 255, 0.08);
                border-radius: 50%;
                bottom: -200px;
                left: -200px;
            }

        .visual-content {
            position: relative;
            z-index: 1;
        }

        .visual-icon {
            width: 120px;
            height: 120px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            backdrop-filter: blur(10px);
        }

            .visual-icon svg {
                width: 60px;
                height: 60px;
                fill: white;
            }

        .visual-section h2 {
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .visual-section p {
            font-size: 18px;
            opacity: 0.95;
            line-height: 1.6;
            max-width: 400px;
        }

        .features {
            margin-top: 40px;
            display: grid;
            gap: 20px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 15px;
            background: rgba(255, 255, 255, 0.15);
            padding: 15px 20px;
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        .feature-icon {
            width: 24px;
            height: 24px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
        }

        @@media (max-width: 968px) {
            .auth-container {
                grid-template-columns: 1fr;
            }

            .visual-section {
                display: none;
            }
        }

        @@media (max-width: 480px) {
            .form-section {
                padding: 40px 30px;
            }

            h1 {
                font-size: 26px;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="form-section">
            <div class="brand-logo">
                <div class="brand-logo-icon">PR</div>
                <span class="brand-name">PayRoll System</span>
            </div>

            <div class="auth-tabs">
                <a asp-page="./Login" class="auth-tab">Sign In</a>
                <a asp-page="./Register" class="auth-tab active">Sign Up</a>
            </div>

            <h1>Create Account</h1>
            <p class="subtitle">Join us and streamline your payroll management</p>

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Email">Email Address</label>
                    <div class="input-wrapper">
                        <span class="input-icon">📧</span>
                        <input asp-for="Input.Email" type="email" placeholder="Enter your email" autocomplete="username" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password">Password</label>
                    <div class="input-wrapper">
                        <span class="input-icon">🔒</span>
                        <input asp-for="Input.Password" type="password" placeholder="Create a password" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <div class="input-wrapper">
                        <span class="input-icon">🔒</span>
                        <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-primary">Create Account</button>
            </form>
        </div>

        <div class="visual-section">
            <div class="visual-content">
                <div class="visual-icon">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" />
                    </svg>
                </div>
                <h2>Start Managing Payroll</h2>
                <p>Create your account and access powerful payroll management tools</p>

                <div class="features">
                    <div class="feature-item">
                        <div class="feature-icon">✓</div>
                        <span>Easy Employee Management</span>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">✓</div>
                        <span>Automated Tax Calculations</span>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">✓</div>
                        <span>Detailed Financial Reports</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>